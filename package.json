{
  "name": "scorus-fitness",
  "type": "module",
  "version": "0.0.1",
  "description": "Scorus Fitness - Sitio web profesional con Astro + TailwindCSS",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint --ext .js,.ts,.astro src",
    "lint:fix": "eslint --ext .js,.ts,.astro src --fix",
    "format": "prettier --write \"**/*.{js,ts,astro,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,astro,md,json}\"",
    "test": "vitest",
    "test:e2e": "playwright test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/mdx": "^3.1.0",
    "@astrojs/react": "^3.6.0",
    "@astrojs/sitemap": "^3.1.0",
    "@astrojs/tailwind": "^5.1.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@sanity/client": "^6.21.0",
    "astro": "^4.15.0",
    "astro-i18next": "^1.0.0-beta.21",
    "clsx": "^2.1.0",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.0",
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "husky": "^9.1.0",
    "lightningcss": "^1.30.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "prettier-plugin-astro": "^0.14.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
