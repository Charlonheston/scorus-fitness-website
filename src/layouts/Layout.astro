---
/**
 * Layout base para todas las p√°ginas
 * Incluye SEO, Analytics, Header y Footer
 */

import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import WhatsAppFloatingButton from '@components/layout/WhatsAppFloatingButton.astro';
import SEO from '@components/seo/SEO.astro';
import StructuredData from '@components/seo/StructuredData.astro';
import Hreflang from '@components/seo/Hreflang.astro';
import { getLocalBusinessSchema, getPersonSchema } from '@lib/schema';
import '@styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  ogType?: 'website' | 'article' | 'profile';
  schema?: Record<string, any> | Record<string, any>[];
  // Props para el language switcher en p√°ginas de blog
  articleLocalizations?: Array<{
    locale: string;
    slug: string;
  }>;
  currentSlug?: string;
  isBlogPage?: boolean;
}

const {
  title,
  description,
  image,
  canonical,
  noindex = false,
  ogType = 'website',
  schema,
  articleLocalizations,
  currentSlug,
  isBlogPage = false,
} = Astro.props;

// Schema.org por defecto (LocalBusiness + Person)
const defaultSchemas = [getLocalBusinessSchema(), getPersonSchema()];
const finalSchemas = schema ? (Array.isArray(schema) ? [...defaultSchemas, ...schema] : [...defaultSchemas, schema]) : defaultSchemas;

// Extraer el locale actual de la URL
const pathname = Astro.url.pathname;
const supportedLocales = ['es', 'en', 'fr', 'de', 'hu'] as const;
type SupportedLocale = (typeof supportedLocales)[number];
const localeMatch = pathname.match(/^\/(es|en|fr|de|hu)\//);
const currentLocale: SupportedLocale = localeMatch ? (localeMatch[1] as SupportedLocale) : 'es';

// Construir el slug actual sin el locale
const slugWithoutLocale = pathname.replace(/^\/(es|en|fr|de|hu)\//, '').replace(/^\//, '');

const localeWhatsAppLinks: Record<string, string> = {
  es: 'https://wa.link/n410yh',
  en: 'https://wa.link/vz0ufu',
  fr: 'https://wa.link/vz0ufu',
  de: 'https://wa.link/vz0ufu',
  hu: 'https://wa.link/58cirs',
};

const whatsappLink = localeWhatsAppLinks[currentLocale] ?? localeWhatsAppLinks.en;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <!-- Meta b√°sicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Google Search Console Verification -->
    <meta name="google-site-verification" content="QpcyMZaVYm7F-U6md-0Z033BoQbC7dXfKvqrdwu5znY" />
    
    <!-- SEO Component -->
    <SEO
      title={title}
      description={description}
      image={image}
      canonical={canonical}
      noindex={noindex}
      ogType={ogType}
    />
    
    <!-- Hreflang for Multilingual SEO -->
    <Hreflang
      currentLocale={currentLocale}
      currentSlug={currentSlug || slugWithoutLocale}
      articleLocalizations={articleLocalizations}
      isBlogPage={isBlogPage}
    />
    
    <!-- Structured Data -->
    <StructuredData schema={finalSchemas} />
    
    <!-- ‚ö° Optimizaciones de Performance -->
    <!-- DNS Prefetch y Preconnect para recursos externos -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- ‚ö° Cargar fuentes web de forma as√≠ncrona con font-display swap (no bloquean renderizado) -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap"></noscript>
    
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap"></noscript>
    
    <!-- View Transitions (navegaci√≥n fluida) -->
    <meta name="view-transition" content="same-origin" />
    
    <!-- Critical CSS inline - Reducir render blocking -->
    <style>
      /* Prevenir FOUC - Hero debe mostrarse inmediatamente */
      body { opacity: 1 !important; }
      
      /* ========== MEJORAS DE CONTRASTE CR√çTICAS (WCAG AA) ========== */
      /* ‚ö° M√°xima prioridad - Sobrescribir Tailwind directamente */
      
      /* Redefinir text-gray-300 para mejor contraste */
      html body .text-gray-300,
      html body p.text-gray-300,
      html body div.text-gray-300,
      html body span.text-gray-300 {
        color: #f3f4f6 !important; /* gray-100 - M√°ximo contraste */
      }
      
      /* Redefinir text-gray-400 para mejor contraste */
      html body .text-gray-400,
      html body p.text-gray-400,
      html body div.text-gray-400,
      html body span.text-gray-400 {
        color: #e5e7eb !important; /* gray-200 - Mucho m√°s claro */
      }
      
      /* Redefinir text-gray-500 */
      html body .text-gray-500,
      html body p.text-gray-500,
      html body div.text-gray-500 {
        color: #d1d5db !important; /* gray-300 - M√°s claro */
      }
      
      /* Textos en fondos blancos deben ser M√ÅS OSCUROS */
      html body .bg-white .text-gray-400,
      html body .bg-gray-50 .text-gray-400,
      html body section.bg-white .text-gray-400 {
        color: #374151 !important; /* gray-700 - Mucho m√°s oscuro */
      }
      
      html body .bg-white .text-gray-500,
      html body .bg-gray-50 .text-gray-500,
      html body section.bg-white .text-gray-500 {
        color: #1f2937 !important; /* gray-800 - Casi negro */
      }
      
      /* Footer siempre con textos claros */
      html body footer .text-gray-300,
      html body footer .text-gray-400,
      html body footer .text-gray-500,
      html body footer .text-gray-600 {
        color: #f3f4f6 !important; /* gray-100 - Muy claro */
      }
      
      /* Textos grises gen√©ricos en fondos oscuros */
      html body .bg-black .text-gray-300,
      html body .bg-black .text-gray-400,
      html body .bg-gray-900 .text-gray-300,
      html body .bg-gray-900 .text-gray-400,
      html body .bg-gray-800 .text-gray-300,
      html body .bg-gray-800 .text-gray-400 {
        color: #ffffff !important; /* Blanco puro para m√°ximo contraste */
      }
      
      /* ========== MEJORAS DE CONTRASTE PARA ROJOS (WCAG AA) ========== */
      /* Texto rojo BLANCO sobre fondos OSCUROS */
      /* Texto rojo NEGRO sobre fondos BLANCOS */
      
      /* üü¢ TEXTOS ROJOS SOBRE FONDOS OSCUROS ‚Üí BLANCO BRILLANTE */
      /* TODOS los elementos con text-red-600 en fondos negros */
      .bg-black .text-red-600,
      .bg-gray-900 .text-red-600,
      .bg-gray-800 .text-red-600,
      section.bg-black .text-red-600,
      div.bg-black .text-red-600,
      div.bg-black > * .text-red-600,
      .bg-black > div .text-red-600,
      footer .text-red-600,
      .bg-black p.text-red-600,
      .bg-black span.text-red-600,
      .bg-black h1 span.text-red-600,
      .bg-black h2 span.text-red-600,
      .bg-black h2 .text-red-600,
      .bg-black h3 .text-red-600,
      .bg-black .font-bold.text-red-600,
      .bg-black .space-y-2 p.text-red-600,
      .bg-black div p.font-bold.text-red-600,
      .bg-gray-900 p.text-red-600,
      .bg-gray-900 span.text-red-600,
      .bg-gray-800 p.text-red-600,
      /* Asegurar que SIEMPRE se aplique sobre negro */
      [class*="bg-black"] .text-red-600,
      [class*="bg-black"] span.text-red-600,
      [class*="bg-black"] p.text-red-600 {
        color: #ffffff !important; /* BLANCO PURO - M√°ximo contraste */
      }
      
      /* üî¥ TEXTOS ROJOS SOBRE FONDOS BLANCOS ‚Üí ROJO OSCURO/NEGRO */
      .bg-white .text-red-600,
      .bg-gray-50 .text-red-600,
      .bg-gray-100 .text-red-600,
      section.bg-white .text-red-600,
      div.bg-white .text-red-600,
      .bg-white p.text-red-600,
      .bg-white span.text-red-600,
      .bg-white h1 .text-red-600,
      .bg-white h2 .text-red-600,
      .bg-white h3 .text-red-600,
      .bg-white .font-bold.text-red-600,
      .bg-gray-50 p.text-red-600,
      .bg-gray-50 span.text-red-600 {
        color: #991b1b !important; /* Rojo muy oscuro (red-900) - Buen contraste sobre blanco */
      }
      
      /* Hover states */
      .bg-black .hover\:text-red-600:hover,
      .bg-black a:hover.text-red-600 {
        color: #f0f0f0 !important;
      }
      
      .bg-white .hover\:text-red-600:hover,
      .bg-white a:hover.text-red-600 {
        color: #7f1d1d !important; /* red-950 - Casi negro */
      }
      
      /* √çconos SVG */
      .bg-black svg.text-red-600,
      .bg-black .text-red-600 svg {
        color: #ffffff !important;
      }
      
      .bg-white svg.text-red-600,
      .bg-white .text-red-600 svg {
        color: #991b1b !important;
      }
      
      /* Backgrounds rojos mantener */
      .bg-red-600 {
        background-color: #dc2626 !important;
      }
      
      /* Border colors */
      .bg-black .border-red-600 {
        border-color: #ef4444 !important;
      }
      
      .bg-white .border-red-600 {
        border-color: #dc2626 !important;
      }
      
      /* Header cr√≠tico - Estado inicial TRANSPARENTE */
      #main-header { 
        position: fixed; 
        top: 0; 
        width: 100%; 
        z-index: 50;
        background-color: transparent !important;
        box-shadow: none !important;
      }
      
      /* ‚ö° FORZAR ESTADO INICIAL: Texto BLANCO - M√°xima especificidad */
      html body header#main-header.header-transparent #header-nav nav a,
      html body header#main-header.header-transparent #header-nav nav a span,
      html body header#main-header.header-transparent #header-nav button,
      html body header#main-header.header-transparent #header-nav button span,
      html body header#main-header.header-transparent .flex.items-center,
      html body header#main-header.header-transparent .flex.items-center button {
        color: white !important;
      }
      
      /* SVGs iniciales en BLANCO - M√°xima especificidad */
      html body header#main-header.header-transparent svg,
      html body header#main-header.header-transparent svg path {
        stroke: white !important;
        color: white !important;
        fill: none !important;
      }
      
      /* Logo blanco visible, logo negro oculto */
      html body header#main-header.header-transparent #logo-white {
        display: block !important;
      }
      
      html body header#main-header.header-transparent #logo-black {
        display: none !important;
      }
      
      /* Links activos siguen en ROJO incluso en estado inicial */
      html body header#main-header.header-transparent a.text-red-600,
      html body header#main-header.header-transparent a.text-red-600 span {
        color: rgb(220, 38, 38) !important;
      }
      
      /* Mobile menu button - Forzar blanco */
      html body header#main-header.header-transparent .lg\:hidden button,
      html body header#main-header.header-transparent .lg\:hidden svg {
        color: white !important;
        stroke: white !important;
      }
      
      /* Hero section cr√≠tica para LCP */
      section:first-of-type {
        min-height: 100vh;
        background-color: #000;
      }
    </style>
  </head>
  <body class="flex min-h-screen flex-col">
    <Header 
      articleLocalizations={articleLocalizations}
      currentSlug={currentSlug}
      isBlogPage={isBlogPage}
    />
    
    <!-- Main sin padding - El header est√° superpuesto sobre el contenido -->
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer />
    <WhatsAppFloatingButton locale={currentLocale} href={whatsappLink} />
  </body>
</html>

