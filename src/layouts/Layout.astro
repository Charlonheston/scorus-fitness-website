---
/**
 * Layout base para todas las páginas
 * Incluye SEO, Analytics, Header y Footer
 */

import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import SEO from '@components/seo/SEO.astro';
import StructuredData from '@components/seo/StructuredData.astro';
import Hreflang from '@components/seo/Hreflang.astro';
import { getLocalBusinessSchema, getPersonSchema } from '@lib/schema';
import '@styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  ogType?: 'website' | 'article' | 'profile';
  schema?: Record<string, any> | Record<string, any>[];
  // Props para el language switcher en páginas de blog
  articleLocalizations?: Array<{
    locale: string;
    slug: string;
  }>;
  currentSlug?: string;
  isBlogPage?: boolean;
}

const {
  title,
  description,
  image,
  canonical,
  noindex = false,
  ogType = 'website',
  schema,
  articleLocalizations,
  currentSlug,
  isBlogPage = false,
} = Astro.props;

// Schema.org por defecto (LocalBusiness + Person)
const defaultSchemas = [getLocalBusinessSchema(), getPersonSchema()];
const finalSchemas = schema ? (Array.isArray(schema) ? [...defaultSchemas, ...schema] : [...defaultSchemas, schema]) : defaultSchemas;

// Extraer el locale actual de la URL
const pathname = Astro.url.pathname;
const localeMatch = pathname.match(/^\/(es|en|fr|de|hu)\//);
const currentLocale = localeMatch ? localeMatch[1] : 'es';

// Construir el slug actual sin el locale
const slugWithoutLocale = pathname.replace(/^\/(es|en|fr|de|hu)\//, '').replace(/^\//, '');
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <!-- Meta básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- SEO Component -->
    <SEO
      title={title}
      description={description}
      image={image}
      canonical={canonical}
      noindex={noindex}
      ogType={ogType}
    />
    
    <!-- Hreflang for Multilingual SEO -->
    <Hreflang
      currentLocale={currentLocale}
      currentSlug={currentSlug || slugWithoutLocale}
      articleLocalizations={articleLocalizations}
      isBlogPage={isBlogPage}
    />
    
    <!-- Structured Data -->
    <StructuredData schema={finalSchemas} />
    
    <!-- ⚡ Optimizaciones de Performance -->
    <!-- DNS Prefetch y Preconnect para recursos externos -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- ⚡ Cargar fuentes web de forma asíncrona con font-display swap (no bloquean renderizado) -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap"></noscript>
    
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap"></noscript>
    
    <!-- View Transitions (navegación fluida) -->
    <meta name="view-transition" content="same-origin" />
    
    <!-- Critical CSS inline - Reducir render blocking -->
    <style>
      /* Prevenir FOUC - Hero debe mostrarse inmediatamente */
      body { opacity: 1 !important; }
      
      /* ========== MEJORAS DE CONTRASTE CRÍTICAS (WCAG AA) ========== */
      /* ⚡ Máxima prioridad - Sobrescribir Tailwind directamente */
      
      /* Redefinir text-gray-300 para mejor contraste */
      html body .text-gray-300,
      html body p.text-gray-300,
      html body div.text-gray-300,
      html body span.text-gray-300 {
        color: #f3f4f6 !important; /* gray-100 - Máximo contraste */
      }
      
      /* Redefinir text-gray-400 para mejor contraste */
      html body .text-gray-400,
      html body p.text-gray-400,
      html body div.text-gray-400,
      html body span.text-gray-400 {
        color: #e5e7eb !important; /* gray-200 - Mucho más claro */
      }
      
      /* Redefinir text-gray-500 */
      html body .text-gray-500,
      html body p.text-gray-500,
      html body div.text-gray-500 {
        color: #d1d5db !important; /* gray-300 - Más claro */
      }
      
      /* Textos en fondos blancos deben ser MÁS OSCUROS */
      html body .bg-white .text-gray-400,
      html body .bg-gray-50 .text-gray-400,
      html body section.bg-white .text-gray-400 {
        color: #374151 !important; /* gray-700 - Mucho más oscuro */
      }
      
      html body .bg-white .text-gray-500,
      html body .bg-gray-50 .text-gray-500,
      html body section.bg-white .text-gray-500 {
        color: #1f2937 !important; /* gray-800 - Casi negro */
      }
      
      /* Footer siempre con textos claros */
      html body footer .text-gray-300,
      html body footer .text-gray-400,
      html body footer .text-gray-500,
      html body footer .text-gray-600 {
        color: #f3f4f6 !important; /* gray-100 - Muy claro */
      }
      
      /* Textos grises genéricos en fondos oscuros */
      html body .bg-black .text-gray-300,
      html body .bg-black .text-gray-400,
      html body .bg-gray-900 .text-gray-300,
      html body .bg-gray-900 .text-gray-400,
      html body .bg-gray-800 .text-gray-300,
      html body .bg-gray-800 .text-gray-400 {
        color: #ffffff !important; /* Blanco puro para máximo contraste */
      }
      
      /* ========== MEJORAS DE CONTRASTE PARA ROJOS (WCAG AA) ========== */
      /* El rojo original (red-600: #dc2626) no tiene suficiente contraste con fondo negro */
      /* Cambiamos a un rojo más brillante y saturado: #ff5555 */
      
      /* MÁXIMA ESPECIFICIDAD - Sobrescribir TODOS los rojos */
      .text-red-600,
      p.text-red-600,
      span.text-red-600,
      h1 .text-red-600,
      h2 .text-red-600,
      h3 .text-red-600,
      h3.text-red-600,
      div.text-red-600,
      section .text-red-600,
      footer .text-red-600,
      .bg-black .text-red-600,
      [class*="text-red-600"] {
        color: #ff5555 !important; /* Rojo brillante - Mejor contraste WCAG AA */
      }
      
      /* Asegurar que los elementos con font-bold también se vean */
      .font-bold.text-red-600,
      .text-sm.font-bold.text-red-600,
      .text-xs.font-bold.text-red-600 {
        color: #ff5555 !important;
      }
      
      /* text-red-500 → También mejorar */
      .text-red-500,
      [class*="text-red-500"] {
        color: #ff6666 !important;
      }
      
      /* Hover states para rojos */
      .hover\:text-red-600:hover,
      a:hover.text-red-600,
      [class*="hover:text-red-600"]:hover {
        color: #ff7777 !important;
      }
      
      /* Íconos y SVG rojos */
      svg.text-red-600,
      .text-red-600 svg,
      [class*="text-red-600"] svg {
        color: #ff5555 !important;
      }
      
      /* Backgrounds rojos mantener el original (tienen texto blanco encima) */
      .bg-red-600,
      [class*="bg-red-600"] {
        background-color: #dc2626 !important;
      }
      
      /* Border colors rojos - También mejorar visibilidad */
      .border-red-600,
      [class*="border-red-600"] {
        border-color: #ff5555 !important;
      }
      
      /* Shadow colors rojos */
      .shadow-red-600\/50,
      [class*="shadow-red-600"] {
        --tw-shadow-color: rgb(255 85 85 / 0.5) !important;
        --tw-shadow: var(--tw-shadow-colored) !important;
      }
      
      /* Header crítico - Estado inicial TRANSPARENTE */
      #main-header { 
        position: fixed; 
        top: 0; 
        width: 100%; 
        z-index: 50;
        background-color: transparent !important;
        box-shadow: none !important;
      }
      
      /* ⚡ FORZAR ESTADO INICIAL: Texto BLANCO - Máxima especificidad */
      html body header#main-header.header-transparent #header-nav nav a,
      html body header#main-header.header-transparent #header-nav nav a span,
      html body header#main-header.header-transparent #header-nav button,
      html body header#main-header.header-transparent #header-nav button span,
      html body header#main-header.header-transparent .flex.items-center,
      html body header#main-header.header-transparent .flex.items-center button {
        color: white !important;
      }
      
      /* SVGs iniciales en BLANCO - Máxima especificidad */
      html body header#main-header.header-transparent svg,
      html body header#main-header.header-transparent svg path {
        stroke: white !important;
        color: white !important;
        fill: none !important;
      }
      
      /* Logo blanco visible, logo negro oculto */
      html body header#main-header.header-transparent #logo-white {
        display: block !important;
      }
      
      html body header#main-header.header-transparent #logo-black {
        display: none !important;
      }
      
      /* Links activos siguen en ROJO incluso en estado inicial */
      html body header#main-header.header-transparent a.text-red-600,
      html body header#main-header.header-transparent a.text-red-600 span {
        color: rgb(220, 38, 38) !important;
      }
      
      /* Mobile menu button - Forzar blanco */
      html body header#main-header.header-transparent .lg\:hidden button,
      html body header#main-header.header-transparent .lg\:hidden svg {
        color: white !important;
        stroke: white !important;
      }
      
      /* Hero section crítica para LCP */
      section:first-of-type {
        min-height: 100vh;
        background-color: #000;
      }
    </style>
  </head>
  <body class="flex min-h-screen flex-col">
    <Header 
      articleLocalizations={articleLocalizations}
      currentSlug={currentSlug}
      isBlogPage={isBlogPage}
    />
    
    <!-- Main sin padding - El header está superpuesto sobre el contenido -->
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer />
  </body>
</html>

