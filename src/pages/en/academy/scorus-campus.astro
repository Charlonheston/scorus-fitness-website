---
import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
const currentLang = 'en';
---
<Layout title="Scorus Campus | Professional Training" description="Advanced professional training in bodybuilding, personal training and sports nutrition">
  <ServiceDetailHeader backLink={{href: `/${currentLang}/academy`, text: "Back to Academy"}} title="SCORUS CAMPUS" subtitle="Elite professional training in bodybuilding, personal training and sports nutrition. Become a certified expert."/>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">Become A <span class="text-red-600">Professional</span></h2><p class="text-lg leading-relaxed text-gray-700"><strong>Scorus Campus</strong> is our professional training program designed for passionate people who want to become certified experts in fitness, bodybuilding and personal training.</p></div></div></section>
  <section class="bg-gray-50 py-24"><div class="container"><div class="mx-auto max-w-6xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">Training <span class="text-red-600">Program</span></h2></div><div class="grid gap-8 md:grid-cols-2">{[{num:1,title:"Training Fundamentals",items:["Anatomy and physiology applied to training","Biomechanics of movement and exercise analysis","Scientific principles of strength training"]},{num:2,title:"Advanced Bodybuilding",items:["Advanced muscle hypertrophy techniques","Training periodization and programming","Bodybuilding competition preparation"]},{num:3,title:"Sports Nutrition",items:["Nutrition to maximize muscle hypertrophy","Definition and fat loss strategies","Evidence-based sports supplementation"]},{num:4,title:"Professional Practice",items:["Client evaluation and initial assessment","Personalized program design","Session management and progress tracking"]}].map(m=>(<div class="group overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl"><div class="bg-black p-6 text-white"><div class="mb-2 text-sm font-bold uppercase tracking-wider text-red-600">Module {m.num}</div><h3 class="text-2xl font-black uppercase">{m.title}</h3></div><div class="p-6"><ul class="space-y-3 text-gray-700">{m.items.map(i=>(<li class="flex items-start"><svg class="mr-3 mt-1 h-5 w-5 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>{i}</span></li>))}</ul></div></div>))}</div></div></div></section>
  <section class="bg-black py-24 text-white"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">Professional <span class="text-red-600">Certification</span></h2><p class="text-xl text-gray-300">Upon completion of the program you will receive an official Scorus Campus certificate that accredits your knowledge in bodybuilding and advanced training.</p></div><div class="grid gap-8 md:grid-cols-3">{[{val:"+100h",txt:"Training Hours"},{val:"4",txt:"Complete Modules"},{val:"100%",txt:"Practical"}].map(s=>(<div class="rounded-lg bg-white/10 p-8 text-center backdrop-blur-sm transition-all duration-300 hover:bg-white/20"><div class="mb-3 text-5xl font-black text-red-600">{s.val}</div><p class="text-lg font-bold uppercase tracking-wider">{s.txt}</p></div>))}</div></div></div></section>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">Why <span class="text-red-600">Scorus Campus</span>?</h2></div><div class="grid gap-6 md:grid-cols-2">{[{title:"Elite Training",desc:"Learn from a professional bodybuilder with years of experience"},{title:"Updated Content",desc:"Based on the latest scientific evidence and real practice"},{title:"Official Certification",desc:"Recognized certificate that accredits your professional level"},{title:"Real Practices",desc:"Apply what you learned with real cases and supervised practice"},{title:"Networking",desc:"Connect with other fitness industry professionals"},{title:"Continuous Support",desc:"Access to community and lifetime updates"}].map(b=>(<div class="flex items-start gap-4 rounded-lg border-l-4 border-red-600 bg-gray-50 p-6 transition-all duration-300 hover:bg-gray-100"><svg class="mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-2 font-bold text-black">{b.title}</h3><p class="text-sm text-gray-600">{b.desc}</p></div></div>))}</div></div></div></section>
  <section class="bg-gray-50 py-32"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">Ready To <span class="text-red-600">Start</span>?</h2><p class="mb-8 text-xl text-gray-600">Contact us for more information about enrollments and upcoming calls</p><div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12"><a href="tel:+34673975252" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg><span class="font-bold text-black group-hover:text-red-600">+34 673 97 52 52</span></a><a href={`/${currentLang}/contact`} class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg><span class="font-bold text-black group-hover:text-red-600">Contact Form</span></a></div><div class="flex flex-col items-center justify-center gap-6 sm:flex-row"><ButtonPrimary href={`/${currentLang}/contact`} text="Request Information" icon="zap" size="xl" variant="glow"/><ButtonSecondary href={`/${currentLang}/academy`} text="View All Programs" icon="arrow" variant="glass" size="xl"/></div></div></div></section>
</Layout>
