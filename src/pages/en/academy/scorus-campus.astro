---
/**
 * Scorus Campus - 7-Day Immersive Experience
 * Premium training and personal development program
 * Designed for integral transformation: physical, mental and professional
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';

const currentLang = 'en';
---

<Layout
  title="Scorus Campus | 7-Day Immersive Experience - Elite Training"
  description="Exclusive 7-day program with Bernat Scorus, world bodybuilding champion. Includes accommodation, intensive training, personalized nutrition, personal development and professional networking."
>
  <!-- Hero Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/academy`,
      text: "Back to Academy"
    }}
    title="SCORUS CAMPUS"
    subtitle="Experience a transformative 7-day journey in an exclusive, private and elite environment. Train with the world bodybuilding champion."
    backgroundImage="/images/services/scorus-campus-hero.jpg"
  />

  <!-- Intro Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl">
        <div class="mb-12 text-center">
          <span class="mb-3 inline-block rounded-full bg-red-600/10 px-4 py-2 text-sm font-bold uppercase tracking-wider text-red-600">
            Premium Experience
          </span>
          <h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
            One Week That <span class="text-red-600">Changes Your Life</span>
          </h2>
          <p class="mb-8 text-lg leading-relaxed text-gray-700">
            Scorus Campus is more than intensive training. It's a transformative experience designed to take your physique, mindset and professional career to the next level.
          </p>
          <p class="text-gray-600">
            For 7 days in an exclusive and private environment, you'll work directly with <strong>Bernat Scorus</strong>, world bodybuilding champion, combining <strong>elite training, personalized nutrition, mental development and fitness business strategies</strong>.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="bg-gradient-to-b from-gray-50 to-white py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            What's <span class="text-red-600">Included</span>?
          </h2>
          <p class="text-gray-600">Key components of your Scorus Campus experience</p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <!-- Accommodation -->
          <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 transition-all duration-300 hover:border-red-600 hover:shadow-xl">
            <div class="mb-4 h-12 w-12 rounded-lg bg-red-600/10 flex items-center justify-center">
              <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 4v4m0 0H8m4 0v4m0 0h4" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-black uppercase text-black">Full Accommodation</h3>
            <p class="mb-4 text-sm text-gray-600">
              Private and exclusive residence with individual bedroom for each participant. Family-friendly environment, comfortable and designed for maximum performance.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Private bedroom
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                24/7 Access
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Exclusive environment
              </li>
            </ul>
          </div>

          <!-- Training -->
          <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 transition-all duration-300 hover:border-red-600 hover:shadow-xl">
            <div class="mb-4 h-12 w-12 rounded-lg bg-red-600/10 flex items-center justify-center">
              <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-black uppercase text-black">2 Daily Sessions</h3>
            <p class="mb-4 text-sm text-gray-600">
              Personalized intensive training exploring advanced methodologies designed for maximum hypertrophy and performance.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Sarcoplasmic/sarcomeric training
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Advanced techniques (Drop Sets, Rest-Pause)
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                HIIT and strategic cardio
              </li>
            </ul>
          </div>

          <!-- Nutrition -->
          <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 transition-all duration-300 hover:border-red-600 hover:shadow-xl">
            <div class="mb-4 h-12 w-12 rounded-lg bg-red-600/10 flex items-center justify-center">
              <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-black uppercase text-black">Cuisine & Supplementation</h3>
            <p class="mb-4 text-sm text-gray-600">
              Personalized nutritional plans to maximize performance and results. Practical workshops on meal preparation.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Personalized diets
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Cooking workshops
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Supplementation strategy
              </li>
            </ul>
          </div>

          <!-- Personal Development -->
          <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 transition-all duration-300 hover:border-red-600 hover:shadow-xl">
            <div class="mb-4 h-12 w-12 rounded-lg bg-red-600/10 flex items-center justify-center">
              <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-black uppercase text-black">Personal Development</h3>
            <p class="mb-4 text-sm text-gray-600">
              Neuro-Linguistic Programming (NLP), winning mindset and meditation for mental, emotional and spiritual balance.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                NLP sessions
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Winning mindset
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Meditation and balance
              </li>
            </ul>
          </div>

          <!-- Assessment -->
          <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 transition-all duration-300 hover:border-red-600 hover:shadow-xl">
            <div class="mb-4 h-12 w-12 rounded-lg bg-red-600/10 flex items-center justify-center">
              <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-black uppercase text-black">Personalized Assessment</h3>
            <p class="mb-4 text-sm text-gray-600">
              Daily progress tracking with detailed analysis and real-time adjustments to optimize results.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Daily analysis
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Real-time adjustments
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Detailed reports
              </li>
            </ul>
          </div>

          <!-- Bonus -->
          <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 transition-all duration-300 hover:border-red-600 hover:shadow-xl">
            <div class="mb-4 h-12 w-12 rounded-lg bg-red-600/10 flex items-center justify-center">
              <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-black uppercase text-black">Exclusive Bonuses</h3>
            <p class="mb-4 text-sm text-gray-600">
              Professional posing workshop, photo sessions, business strategies and official certificate upon completion.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Professional posing workshop
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Professional photos and videos
              </li>
              <li class="flex items-center gap-2">
                <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                Official certificate
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Exclusive Benefits -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">
            Exclusive <span class="text-red-600">Benefits</span>
          </h2>
          <p class="text-xl text-gray-300">
            More than training. An integral transformation designed for fitness professionals and people committed to their evolution.
          </p>
        </div>

        <!-- Grid de beneficios con diseño minimalista -->
        <div class="grid gap-px bg-gray-800 md:grid-cols-3 md:gap-px">
          {[
            { num: "01", title: "Personalized Training", desc: "Programs designed specifically for you" },
            { num: "02", title: "24/7 Access", desc: "Fully equipped private gym" },
            { num: "03", title: "Premium Supplementation", desc: "Exclusive discounts on elite brands" },
            { num: "04", title: "Welcome Kit", desc: "Professional sportswear and accessories" },
            { num: "05", title: "Multimedia Sessions", desc: "Professional photography and video" },
            { num: "06", title: "Digital Guide", desc: "Permanent access to personalized manuals" },
            { num: "07", title: "Official Certificate", desc: "Internationally recognized credentials" },
            { num: "08", title: "Network", desc: "Professionals and entrepreneurs across Europe" },
            { num: "09", title: "Complete Wellness", desc: "Massages, sauna, cryotherapy and recovery" },
            { num: "10", title: "Business Mentorship", desc: "Strategies to create your fitness business" },
            { num: "11", title: "Alumni Community", desc: "Continuous post-program support for life" },
            { num: "12", title: "Exclusive Content", desc: "Resource library for alumni only" },
          ].map((benefit) => (
            <div class="group relative bg-black p-8 transition-all duration-300 hover:bg-red-600/10 overflow-hidden">
              {/* Decorative top line */}
              <div class="absolute top-0 left-0 w-0 h-0.5 bg-red-600 group-hover:w-full transition-all duration-500"></div>
              
              <div class="flex items-start gap-4 relative z-10">
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-red-600/20">
                    <span class="text-sm font-black text-red-600">{benefit.num}</span>
                  </span>
                </div>
                <div class="flex-1">
                  <h3 class="font-bold uppercase text-white mb-1 text-sm tracking-wide">{benefit.title}</h3>
                  <p class="text-xs text-gray-400 leading-relaxed">{benefit.desc}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Training Methodology - Vanguard Design -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-20 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Training <span class="text-red-600">Methodology</span>
          </h2>
          <p class="text-gray-600">
            Advanced techniques used by world bodybuilding champions
          </p>
        </div>

        {/* Asymmetric vanguard grid */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-max">
          {/* Card 1 - Large */}
          <div class="lg:col-span-2 lg:row-span-1">
            <div class="group h-full rounded-2xl bg-gradient-to-br from-black via-black to-red-900/20 border border-gray-800 p-8 transition-all duration-500 hover:border-red-600 hover:shadow-2xl hover:shadow-red-600/20">
              <div class="flex items-start justify-between mb-6">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-red-600/10 group-hover:bg-red-600/20 transition-colors">
                  <svg class="h-7 w-7 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <span class="text-xs font-black uppercase text-gray-600">01</span>
              </div>
              <h3 class="text-2xl font-black uppercase text-white mb-3">Sarcomeric Training</h3>
              <p class="text-gray-400 text-sm leading-relaxed">Brute strength work with heavy loads to increase muscle density and maximum strength. Essential for elite developers.</p>
            </div>
          </div>

          {/* Card 2 - Small */}
          <div>
            <div class="group h-full rounded-2xl bg-gray-50 border border-gray-200 p-6 transition-all duration-500 hover:border-red-600 hover:bg-white hover:shadow-xl">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-gray-900/5 group-hover:bg-red-600/10 transition-colors mb-4">
                <svg class="h-6 w-6 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-sm font-black uppercase text-black mb-2">Sarcoplasmic</h3>
              <p class="text-xs text-gray-600">Muscle pump techniques for maximum hypertrophy</p>
            </div>
          </div>

          {/* Card 3 - Large */}
          <div class="lg:col-span-2">
            <div class="group h-full rounded-2xl bg-gray-50 border border-gray-200 p-8 transition-all duration-500 hover:border-red-600 hover:bg-white hover:shadow-xl">
              <div class="flex items-start justify-between mb-6">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-gray-900/5 group-hover:bg-red-600/10 transition-colors">
                  <svg class="h-7 w-7 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <span class="text-xs font-black uppercase text-gray-400">03</span>
              </div>
              <h3 class="text-2xl font-black uppercase text-black mb-3">Advanced Drop Sets</h3>
              <p class="text-gray-600 text-sm leading-relaxed">Progressive weight reduction maintaining muscle tension. Extends sets and maximizes time under tension.</p>
            </div>
          </div>

          {/* Card 4 - Small */}
          <div>
            <div class="group h-full rounded-2xl bg-black border border-gray-800 p-6 transition-all duration-500 hover:border-red-600 hover:shadow-xl hover:shadow-red-600/20">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-red-600/10 group-hover:bg-red-600/20 transition-colors mb-4">
                <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-sm font-black uppercase text-white mb-2">Rest-Pause</h3>
              <p class="text-xs text-gray-400">Brief pauses to maximize reps at failure</p>
            </div>
          </div>

          {/* Card 5 - Large */}
          <div class="lg:col-span-3">
            <div class="group h-full rounded-2xl bg-gradient-to-r from-red-600 via-red-700 to-red-800 border border-red-500 p-8 transition-all duration-500 hover:shadow-2xl hover:shadow-red-600/30">
              <div class="flex items-center justify-between">
