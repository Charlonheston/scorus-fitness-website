        </div>

        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
          {targetAudiences.map((audience) => (
            <div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gradient-to-br from-gray-900 to-black p-6 transition-all duration-300 hover:border-red-600 hover:shadow-lg hover:shadow-red-600/50">
