              {/* Title */}
              <h3 class="mb-3 text-lg font-black uppercase leading-tight text-black">{seminar.title}</h3>
              
              {/* Description */}
              <p class="text-sm leading-relaxed text-gray-600">{seminar.desc}</p>
              
