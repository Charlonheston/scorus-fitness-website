                  {item.step}
                </div>
                
                <div class="pr-8">
                  <h4 class="mb-2 text-lg font-black uppercase text-black">{item.title}</h4>
                  <p class="text-sm text-gray-600">{item.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Target Audiences -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
