---
/**
 * Seminars - Integral Training in Training, Nutrition and Well-being
 * In-person and online seminars with Bernat Scorus
 * Modern and vanguard design 2025-26
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';

const currentLang = 'en';

const seminars = [
  { title: 'Overweight and Obesity', desc: 'Strategies to lose weight in a healthy way' },
  { title: 'Healthy Nutrition', desc: 'How to structure a balanced diet' },
  { title: 'Supplementation', desc: 'Discover which supplements work and how to use them correctly' },
  { title: 'Fat Loss', desc: 'Effective methods to reduce body fat percentage' },
  { title: 'Muscle Gain', desc: 'Fundamental principles of muscle development' },
  { title: 'Home Training', desc: 'Effective routines without needing a gym' },
  { title: 'Cosmetic Poisons', desc: 'Identification of products harmful to health' },
  { title: 'Foods that Kill', desc: 'What to avoid for healthy eating' },
  { title: 'Anti-Aging', desc: 'Strategies to slow down aging' },
  { title: 'Detox', desc: 'Effective detoxification methods' },
  { title: 'Menopause', desc: 'Nutrition and wellness strategies for this stage' },
  { title: 'Vegan Nutrition', desc: 'How to maintain a balanced and healthy vegan diet' },
  { title: 'Motivation and Personal Growth', desc: 'Strategies for mental and emotional development' },
  { title: 'Resilience and Habit Change', desc: 'How to overcome obstacles and transform life positively' }
];

const modalities = [
  {
    title: 'IN-PERSON SEMINARS',
    subtitle: 'Live, in your city',
    icon: 'üé§',
    features: [
      'Available in Spanish, English and Hungarian',
      'For gyms, sports centers and events',
      'Practical sessions and live interaction',
      'Audiovisual support material',
      'Variable duration according to your needs'
    ],
    highlight: true
  },
  {
    title: 'ONLINE SEMINARS',
    subtitle: 'From anywhere',
    icon: 'üíª',
    features: [
      'Live HD videoconference',
      'Unlimited access to recordings',
      'Supplementary material (PDFs, videos, podcasts)',
      'Real-time interaction with questions',
      'Between 60 and 120 minutes duration'
    ],
    highlight: false
  }
];

const benefits = [
  { icon: 'üìö', title: 'Deep Knowledge', desc: 'Comprehensive training based on science and real experience' },
  { icon: 'üéØ', title: 'Varied Topics', desc: '14 different seminars adapted to your interests' },
  { icon: 'üë®‚Äçüè´', title: 'Elite Expert', desc: 'Taught by Bernat Scorus, world champion' },
  { icon: 'üåç', title: 'Global Reach', desc: 'Available in 3 languages: Spanish, English and Hungarian' },
  { icon: 'üí°', title: 'Immediately Applicable', desc: 'Practical knowledge you can use today' },
  { icon: 'üîÑ', title: 'Flexible', desc: 'Choose between in-person or online according to your needs' }
