          {modalities.map((modality) => (
            <div class={`rounded-2xl border-2 transition-all duration-300 ${
              modality.highlight 
                ? 'border-red-600 bg-red-50 shadow-lg hover:shadow-xl hover:shadow-red-600/30' 
                : 'border-gray-200 bg-white hover:border-red-600 hover:shadow-lg'
            }`}>
              <div class="p-8">
                <h3 class="mb-2 text-2xl font-black uppercase text-black">{modality.title}</h3>
                <p class="mb-8 text-sm text-gray-600">{modality.subtitle}</p>
                
                <ul class="space-y-4">
                  {modality.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <span class="text-2xl">{feature.icon}</span>
                      <span class="pt-1 text-sm font-medium text-gray-800">{feature.text}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
