---
/**
 * Workshops - 10 Specialized Bodybuilding and Fitness Workshops
 * Intensive practical and theoretical training
 * Modern and avant-garde design 2025-26
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import WorkshopIcon from '@components/ui/WorkshopIcon.astro';

const currentLang = 'en';

type IconType = 'fundamental' | 'nutrition' | 'supplementation' | 'chest' | 'back' | 'shoulders' | 'arms' | 'legs' | 'cardio' | 'planning' | 'building' | 'check' | 'book' | 'profile';

const workshops: Array<{ number: string; title: string; description: string; iconType: IconType; topics: string[] }> = [
  {
    number: '01',
    title: 'FUNDAMENTAL TRAINING',
    description: 'Optimize your routine with the best combination of exercises, sets, and rest.',
    iconType: 'fundamental',
    topics: ['Periodization', 'Volume and intensity', 'Recovery']
  },
  {
    number: '02',
    title: 'NUTRITION FOR BODYBUILDING',
    description: 'Learn to structure your diet to gain muscle or lose fat.',
    iconType: 'nutrition',
    topics: ['Macronutrients', 'Nutrition periodization', 'Calorie calculation']
  },
  {
    number: '03',
    title: 'INTELLIGENT SUPPLEMENTATION',
    description: 'Discover which supplements work and how to use them correctly.',
    iconType: 'supplementation',
    topics: ['Proteins', 'Creatine', 'Vitamins and minerals']
  },
  {
    number: '04',
    title: 'CHEST AND ABS',
    description: 'Techniques to develop a strong chest and defined abs.',
    iconType: 'chest',
    topics: ['Bench press', 'Isolation', 'Core training']
  },
  {
    number: '05',
    title: 'BACK AND TRAPEZIUS',
    description: 'Build a wide back and protect your spine.',
    iconType: 'back',
    topics: ['Pull-ups', 'Rowing', 'Back width']
  },
  {
    number: '06',
    title: 'STRONG SHOULDERS',
    description: 'Key exercises to define and strengthen the deltoids.',
    iconType: 'shoulders',
    topics: ['Military press', 'Lateral raises', 'Rear delts']
  },
  {
    number: '07',
    title: 'ARMS AND FOREARMS',
    description: 'Strategies to gain size and strength without injury.',
    iconType: 'arms',
    topics: ['Biceps', 'Triceps', 'Forearm']
  },
  {
    number: '08',
    title: 'SYMMETRIC LEGS',
    description: 'Balanced development of glutes, quads, and calves.',
    iconType: 'legs',
    topics: ['Squats', 'Extensions', 'Calves']
  },
  {
    number: '09',
    title: 'CARDIO AND FAT BURNING',
    description: 'Maximize fat loss without affecting your muscle mass.',
    iconType: 'cardio',
    topics: ['HIIT', 'Steady cardio', 'Body composition']
  },
  {
    number: '10',
    title: 'TRAINING PLANNING',
    description: 'Create effective routines according to your level and goals.',
    iconType: 'planning',
    topics: ['Periodization', 'Annual programming', 'Assessment']
  }
];

const modalities: Array<{ title: string; subtitle: string; features: Array<{ iconType: IconType; text: string }>; highlight: boolean }> = [
  {
    title: 'IN-PERSON MODALITY',
    subtitle: 'At Scorus Gym, Alicante',
    features: [
      { iconType: 'building', text: 'Private gym with professional equipment' },
      { iconType: 'check', text: 'Real-time corrections and adjustments' },
      { iconType: 'book', text: 'Integrated theory and practice' },
      { iconType: 'profile', text: 'Personalized attention from Bernat Scorus' }
    ],
    highlight: true
  },
  {
    title: 'ONLINE MODALITY',
    subtitle: 'From anywhere',
    features: [
      { iconType: 'check', text: 'Live video conference' },
      { iconType: 'check', text: 'Unlimited access to recordings' },
      { iconType: 'check', text: 'Direct interaction with Bernat' },
      { iconType: 'book', text: 'Complementary material (PDFs and scripts)' }
    ],
    highlight: false
  }
];

const benefits = [
  { title: 'STRUCTURED TRAINING', description: '10 progressive workshops designed for comprehensive learning' },
  { title: 'CHAMPION EXPERIENCE', description: 'Teaching from a world champion with 30+ years of experience' },
  { title: 'SMALL GROUPS', description: 'Personalized attention and individualized approach' },
  { title: 'CERTIFICATE INCLUDED', description: 'Official diploma upon completion of the program' },
  { title: 'EXCLUSIVE MATERIAL', description: 'Access to resources, guides, and demonstrations' },
  { title: 'FLEXIBILITY', description: 'Choose between in-person or online mode' }
];
---

<Layout
  title="Specialized Workshops | Scorus Fitness - 10 Specialized Workshops"
  description="10 intensive workshops in bodybuilding, nutrition, and training. In-person or online training with Bernat Scorus, world bodybuilding champion."
>
  <!-- Hero Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/services`,
      text: "Back to Services"
    }}
    title="SPECIALIZED WORKSHOPS"
    subtitle="10 intensive workshops designed to master bodybuilding, nutrition, and training. In-person or online."
    backgroundImage="/images/services/workshops-hero.webp"
  />

  <!-- Intro Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <p class="mb-4 text-sm font-bold uppercase tracking-widest text-red-600">Complete Training</p>
        <h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          Transform Your Physique And <span class="text-red-600">Your Knowledge</span>
        </h2>
        <p class="text-lg leading-relaxed text-gray-700">
          Not everyone can afford continuous personal training, but everyone needs proper guidance. With our <strong>10 Specialized Workshops</strong>, you'll get complete training in bodybuilding and fitness, structured in intensive sessions where you'll learn everything about <strong>nutrition, supplementation, training, and muscle development</strong>.
        </p>
      </div>
    </div>
  </section>

  <!-- Modalities Section - Modern & Elegant -->
  <section class="relative bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-20 text-center">
          <p class="mb-4 text-xs font-bold uppercase tracking-[0.2em] text-red-600">Choose Your Format</p>
          <h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
            Two <span class="text-red-600">Modalities</span>
          </h2>
          <p class="text-lg text-gray-600">Access premium content in the format that best suits you</p>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          {modalities.map((modality, idx) => (
            <div class={`group relative overflow-hidden rounded-lg transition-all duration-500 ${
              modality.highlight 
                ? 'ring-2 ring-red-600 ring-offset-4' 
                : 'border border-gray-200'
            }`}>
              <!-- Background card -->
              <div class={`absolute inset-0 transition-colors duration-500 ${
                modality.highlight
                  ? 'bg-gradient-to-br from-red-50 via-white to-white'
                  : 'bg-white group-hover:bg-gray-50'
              }`}></div>

              <!-- Content -->
              <div class="relative z-10 p-10 md:p-12">
                <!-- Top decorative line -->
                <div class={`mb-8 h-1 w-12 transition-all duration-300 ${
                  modality.highlight
                    ? 'bg-red-600'
                    : 'bg-gray-300 group-hover:bg-red-600'
                }`}></div>

                <!-- Icon with circle background -->
                <div class={`mb-8 inline-flex h-14 w-14 items-center justify-center rounded-full transition-all duration-300 ${
                  modality.highlight
                    ? 'bg-red-100 text-red-600'
                    : 'bg-gray-100 text-gray-600 group-hover:bg-red-100 group-hover:text-red-600'
                }`}>
                  <svg class="h-7 w-7" fill="currentColor" viewBox="0 0 24 24">
                    {modality.highlight ? (
                      <path d="M3 13h2v8H3zm4-8h2v16H7zm4-2h2v18h-2zm4 4h2v14h-2zm4-4h2v18h-2zM2 20h20v2H2z"/>
                    ) : (
                      <path d="M20 3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14l4 4V5c0-1.1-.9-2-2-2zm-2 12h-8v-2h8v2zm0-4h-8V9h8v2z"/>
                    )}
                  </svg>
                </div>

                <!-- Title -->
                <h3 class={`mb-3 text-2xl font-black uppercase tracking-tight transition-colors duration-300 ${
                  modality.highlight ? 'text-black' : 'text-gray-900'
                }`}>
                  {modality.title}
                </h3>

                <!-- Subtitle -->
                <p class={`mb-8 text-sm font-medium transition-colors duration-300 ${
                  modality.highlight ? 'text-gray-700' : 'text-gray-600 group-hover:text-gray-700'
                }`}>
                  {modality.subtitle}
                </p>

                <!-- Divider -->
                <div class={`mb-8 transition-colors duration-300 ${
                  modality.highlight ? 'bg-red-200' : 'bg-gray-200 group-hover:bg-gray-300'
                } h-px`}></div>

                <!-- Features list - Clean & Minimal -->
                <ul class="mb-8 space-y-4">
                  {modality.features.map((feature) => (
                    <li class="flex items-start gap-3 transition-transform duration-300 hover:translate-x-1">
                      <div class={`mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full transition-all duration-300 ${
                        modality.highlight
                          ? 'bg-red-100 text-red-600'
                          : 'bg-gray-100 text-gray-600 group-hover:bg-red-100 group-hover:text-red-600'
                      }`}>
                        <WorkshopIcon type={feature.iconType} size="xs" color="currentColor" />
                      </div>
                      <span class={`pt-0.5 text-sm font-medium transition-colors duration-300 ${
                        modality.highlight
                          ? 'text-gray-700'
                          : 'text-gray-600 group-hover:text-gray-800'
                      }`}>
                        {feature.text}
                      </span>
                    </li>
                  ))}
                </ul>

                <!-- CTA Button -->
                <a
                  href={`/${currentLang}/contact`}
                  class={`inline-flex w-full items-center justify-center rounded-lg px-6 py-3.5 font-bold uppercase tracking-wider transition-all duration-300 ${
                    modality.highlight
                      ? 'bg-red-600 text-white hover:bg-red-700 hover:shadow-lg hover:shadow-red-600/30'
                      : 'border-2 border-gray-300 text-gray-700 hover:border-red-600 hover:bg-red-50 hover:text-red-600'
                  }`}>
                  Request Information
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Workshops Grid -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <p class="mb-4 text-sm font-bold uppercase tracking-widest text-red-600">Complete Content</p>
          <h2 class="text-4xl font-black uppercase tracking-tight md:text-5xl">
            The 10 <span class="text-red-600">Workshops</span>
          </h2>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {workshops.map((workshop) => (
            <div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gradient-to-br from-gray-900 to-black transition-all duration-300 hover:border-red-600 hover:shadow-lg hover:shadow-red-600/50">
              <!-- Gradient overlay on hover -->
              <div class="absolute inset-0 bg-gradient-to-br from-red-600/0 to-red-600/0 transition-all duration-300 group-hover:from-red-600/10 group-hover:to-red-600/5"></div>
              
              <div class="relative z-10 p-6">
                <!-- Number -->
                <div class="mb-4 flex items-start justify-between">
                  <span class="text-5xl font-black text-red-600/30 group-hover:text-red-600/50">{workshop.number}</span>
                  <div class="h-10 w-10 text-white">
                    <WorkshopIcon type={workshop.iconType} size="lg" color="white" />
                  </div>
                </div>
                
                <!-- Title -->
                <h3 class="mb-3 text-xl font-black uppercase leading-tight">{workshop.title}</h3>
                
                <!-- Description -->
                <p class="mb-6 text-sm leading-relaxed text-gray-400">{workshop.description}</p>
                
                <!-- Topics -->
                <div class="space-y-2">
                  {workshop.topics.map((topic) => (
                    <div class="flex items-center gap-2 text-xs text-gray-500">
                      <div class="h-1 w-1 rounded-full bg-red-600"></div>
                      {topic}
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <p class="mb-4 text-sm font-bold uppercase tracking-widest text-red-600">Benefits</p>
          <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
            What's <span class="text-red-600">Included</span>?
          </h2>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {benefits.map((benefit) => (
            <div class="group overflow-hidden rounded-lg bg-gray-50 p-8 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
              <div class="mb-3 h-1 w-12 bg-gradient-to-r from-red-600 to-red-400 transition-all duration-300 group-hover:w-full"></div>
              <h3 class="mb-2 text-lg font-black uppercase text-black">{benefit.title}</h3>
              <p class="text-sm text-gray-700">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-black py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter md:text-6xl">
          Ready to <span class="text-red-600">Train</span>?
        </h2>
        <p class="mb-12 text-lg text-gray-400">
          Check the upcoming dates and secure your spot. Limited spots to maintain training quality.
        </p>

        <!-- Contact Info -->
        <div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-3 transition-all hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold">+34 673 97 52 52</span>
          </a>

          <a href={`/${currentLang}/contact`} class="group flex items-center gap-3 transition-all hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span class="font-bold">Send Message</span>
          </a>
        </div>

        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contact`}
            text="Check Dates"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <ButtonSecondary 
            href={`/${currentLang}/services`}
            text="View Other Services"
            icon="arrow"
            variant="glass"
            size="xl"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>
