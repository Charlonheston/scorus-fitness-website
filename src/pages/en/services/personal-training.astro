---
/**
 * Personal Training Page - Premium Black/White/Red Design
 * English version
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import translations from '../../../../public/locales/en/services.json';

const t = translations.personal_training;
const currentLang = 'en';
---

<Layout
  title={t.meta.title}
  description={t.meta.description}
>
  <!-- Header Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/services`,
      text: translations.back_to_services
    }}
    icon={t.icon}
    title={t.title.replace(/\n/g, ' ')}
    subtitle={t.subtitle}
  />

  <!-- Content Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="grid gap-16 lg:grid-cols-2">
        <!-- Image Placeholder -->
        <div class="relative min-h-[400px] overflow-hidden rounded-lg bg-black lg:min-h-[600px]">
          <div class="flex h-full items-center justify-center">
            <div class="text-center">
              <span class="text-9xl">üèãÔ∏è</span>
              <p class="mt-4 text-sm font-bold uppercase tracking-wider text-white">
                Personal Training
              </p>
              <p class="mt-2 text-xs uppercase text-gray-400">
                Image Coming Soon
              </p>
            </div>
          </div>
          <!-- Red Accent Corner -->
          <div class="absolute right-0 top-0 h-32 w-32 bg-red-600 opacity-20 blur-3xl"></div>
        </div>

        <!-- Content -->
        <div class="flex flex-col justify-center">
          <h2 class="mb-8 text-4xl font-black uppercase tracking-tight text-black">{t.includes_title}</h2>
          
          <ul class="mb-12 space-y-5">
            <li class="flex items-start">
              <svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="font-bold text-black">{t.includes.physical_evaluation.title}</h3>
                <p class="text-gray-600">{t.includes.physical_evaluation.description}</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="font-bold text-black">{t.includes.body_composition.title}</h3>
                <p class="text-gray-600">{t.includes.body_composition.description}</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="font-bold text-black">{t.includes.personalized_plan.title}</h3>
                <p class="text-gray-600">{t.includes.personalized_plan.description}</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="font-bold text-black">{t.includes.continuous_tracking.title}</h3>
                <p class="text-gray-600">{t.includes.continuous_tracking.description}</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="font-bold text-black">{t.includes.nutrition_advice.title}</h3>
                <p class="text-gray-600">{t.includes.nutrition_advice.description}</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="font-bold text-black">{t.includes.whatsapp_support.title}</h3>
                <p class="text-gray-600">{t.includes.whatsapp_support.description}</p>
              </div>
            </li>
          </ul>

          <div class="space-y-8">
            <div class="rounded-lg border-l-4 border-red-600 bg-gray-50 p-6">
              <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-black">{t.for_whom_title}</h3>
              <p class="leading-relaxed text-gray-700">
                {t.for_whom_description}
              </p>
            </div>

            <div class="rounded-lg border-l-4 border-black bg-gray-50 p-6">
              <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-black">{t.methodology_title}</h3>
              <p class="leading-relaxed text-gray-700">
                {t.methodology_description}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <h2 class="mb-16 text-center text-4xl font-black uppercase tracking-tight md:text-5xl">
          What Sets <span class="text-red-600">You Apart</span>?
        </h2>

        <div class="grid gap-8 md:grid-cols-3">
          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">Schedule Flexibility</h3>
            <p class="text-gray-400">Sessions adapted to your schedule and availability</p>
          </div>

          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">Guaranteed Results</h3>
            <p class="text-gray-400">Proven methodology with measurable and real results</p>
          </div>

          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">100% Personal</h3>
            <p class="text-gray-400">Every detail adapted to your body and goals</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">
          {t.cta_title}
        </h2>
        <p class="mb-12 text-xl text-gray-600">
          {t.cta_description}
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contact`}
            text={t.cta_button}
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <a
            href={`/${currentLang}/services`}
            class="inline-flex items-center text-sm font-bold uppercase tracking-wider text-black transition-all hover:text-red-600"
          >
            View All Services
            <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
