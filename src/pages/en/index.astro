---
/**
 * English homepage
 * Scorus Fitness - Main landing page
 */

import Layout from '@layouts/Layout.astro';

const services = [
  {
    title: 'Personal Training',
    description: 'Customized programs adapted to your goals and needs.',
    icon: 'üèãÔ∏è',
    href: '/en/services/personal-training',
  },
  {
    title: 'Online Consulting',
    description: 'Professional coaching from anywhere in the world.',
    icon: 'üíª',
    href: '/en/services/online-consulting',
  },
  {
    title: 'Scorus Campus',
    description: 'Professional training in bodybuilding and advanced coaching.',
    icon: 'üéì',
    href: '/en/academy/scorus-campus',
  },
  {
    title: 'RE-BORN Program',
    description: 'Complete physical and mental transformation in 12 weeks.',
    icon: 'üî•',
    href: '/en/academy/re-born',
  },
];

const stats = [
  { value: '15+', label: 'Years of Experience' },
  { value: '500+', label: 'Clients Transformed' },
  { value: '50+', label: 'Competitions' },
  { value: '100%', label: 'Dedication' },
];
---

<Layout
  title="Scorus Fitness | Personal Training in Alicante"
  description="Personal training center and gym in Alicante. Physical transformation with personalized programs, RE-BORN and Scorus Campus. Bernat Scorus, professional bodybuilder."
>
  <!-- Hero Section -->
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-black">
    <div class="absolute inset-0 bg-black/40"></div>
    
    <div class="container relative z-10 py-20 text-center text-white">
      <div class="mx-auto max-w-5xl">
        <h1 class="mb-8 text-6xl font-bold leading-[1.1] tracking-tight md:text-7xl lg:text-8xl">
          Transform Your<br />
          Body
        </h1>
        <p class="mx-auto mb-12 max-w-2xl text-xl text-gray-200 md:text-2xl">
          Professional personal training.<br />
          Real results. Total commitment.
        </p>
        <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a
            href="/en/contact"
            class="group relative inline-flex items-center justify-center overflow-hidden rounded-none border-2 border-white bg-white px-12 py-4 text-lg font-semibold text-black transition-all hover:bg-transparent hover:text-white"
          >
            Start Now
          </a>
          <a
            href="/en/services"
            class="inline-flex items-center justify-center rounded-none border-2 border-white px-12 py-4 text-lg font-semibold text-white transition-all hover:bg-white hover:text-black"
          >
            Explore
          </a>
        </div>
      </div>
    </div>

    <div class="absolute bottom-8 left-1/2 z-10 -translate-x-1/2 animate-bounce">
      <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Services Section -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-20 text-center">
        <p class="mb-4 text-sm font-semibold uppercase tracking-widest text-gray-500">
          Services
        </p>
        <h2 class="text-5xl font-bold text-gray-900 md:text-6xl">
          How I Can Help You
        </h2>
      </div>

      <div class="grid gap-px bg-gray-200 md:grid-cols-2">
        {services.map((service) => (
          <a
            href={service.href}
            class="group bg-white p-12 transition-all hover:bg-black hover:text-white md:p-16"
          >
            <div class="mb-6 text-4xl">{service.icon}</div>
            <h3 class="mb-4 text-3xl font-bold">
              {service.title}
            </h3>
            <p class="mb-6 text-lg leading-relaxed opacity-80">
              {service.description}
            </p>
            <span class="inline-flex items-center text-sm font-semibold uppercase tracking-wider">
              Discover
              <svg class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="grid gap-16 md:grid-cols-4">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="mb-4 text-6xl font-bold md:text-7xl">
              {stat.value}
            </div>
            <div class="text-sm uppercase tracking-widest text-gray-400">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="relative min-h-screen bg-gray-100">
    <div class="grid lg:grid-cols-2">
      <div class="relative min-h-[50vh] bg-gray-300 lg:min-h-screen">
        <div class="flex h-full items-center justify-center text-gray-500">
          <div class="text-center">
            <span class="text-9xl">üì∑</span>
            <p class="mt-4 text-sm font-semibold uppercase tracking-wider">
              Photo of Bernat Scorus
            </p>
          </div>
        </div>
      </div>

      <div class="flex items-center px-8 py-24 lg:px-16 lg:py-32">
        <div class="max-w-xl">
          <p class="mb-6 text-sm font-semibold uppercase tracking-widest text-gray-500">
            About Me
          </p>
          <h2 class="mb-8 text-5xl font-bold leading-tight text-gray-900 lg:text-6xl">
            Bernat<br />Scorus
          </h2>
          <div class="mb-8 space-y-6 text-lg leading-relaxed text-gray-600">
            <p>
              Professional bodybuilder with over 15 years of experience in high-performance training
              and physical transformation.
            </p>
            <p>
              My philosophy is based on a holistic approach that combines personalized training,
              optimized nutrition and mental development.
            </p>
          </div>
          <a
            href="/en/biography"
            class="inline-flex items-center border-b-2 border-black pb-1 text-sm font-semibold uppercase tracking-wider text-black transition-all hover:border-gray-400"
          >
            Know My Story
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-12 text-6xl font-bold leading-tight text-gray-900 md:text-7xl">
          Start Your<br />
          Transformation Today
        </h2>
        <a
          href="/en/contact"
          class="inline-flex items-center justify-center border-2 border-black bg-black px-16 py-5 text-lg font-semibold text-white transition-all hover:bg-white hover:text-black"
        >
          Contact
        </a>
      </div>
    </div>
  </section>
</Layout>

