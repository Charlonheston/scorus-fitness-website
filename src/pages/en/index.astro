---
/**
 * English homepage - Premium Black, White and Red Design
 * Scorus Fitness - Main landing page
 * Complete version with all modules
 */

import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import ButtonGhost from '@components/ui/ButtonGhost.astro';

// Import images
import heroImage from '../../../public/images/hero/bernat-hero.jpg';
import aboutImage from '../../../public/images/about/bernat-champion.jpg';
import gymImage from '../../../public/images/gym/gym-01.jpg';

// Get latest blog posts
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const features = [
  {
    title: 'Support',
    description: 'Resolve all your doubts and questions through individual or group video calls',
    iconType: 'users',
  },
  {
    title: 'Personal Training',
    description: 'Sessions adapted to your level and current physical state, regardless of your starting point.',
    iconType: 'target',
  },
  {
    title: 'Tailored Nutrition',
    description: 'Personalized meal plans for all types of diets: vegan, gluten-free, keto, FODMAP and more.',
    iconType: 'utensils',
  },
];

// Services
const services = [
  {
    title: 'Personal Training',
    description: 'Personalized plans adapted to your goals and level.',
    badge: 'Popular',
    iconType: 'user',
    href: '/en/services/personal-training',
    image: '/images/services/personal-training.jpg',
  },
  {
    title: 'Online Counseling',
    description: 'Complete system with video consultations and personalized monitoring.',
    badge: 'Premium',
    iconType: 'laptop',
    href: '/en/services/online-counseling',
    image: '/images/services/online-coaching-hero.jpg',
  },
  {
    title: 'Online Consulting',
    description: 'Solve your doubts with professional consulting sessions.',
    iconType: 'video',
    href: '/en/services/online-consulting',
    image: '/images/services/online-consulting.jpg',
  },
  {
    title: 'Scorus Campus',
    description: 'Exclusive 7-day intensive training experience.',
    badge: 'Exclusive',
    iconType: 'graduation-cap',
    href: '/en/academy/scorus-campus',
    image: '/images/gym/gym-01.jpg',
  },
];

// Academy
const academy = [
  {
    title: 'Workshops',
    description: 'Practical sessions to perfect your technique.',
    iconType: 'wrench',
    href: '/en/services/workshops',
    image: '/images/gym/gym-03.jpg',
  },
  {
    title: 'Seminars',
    description: 'Specialized training in advanced training techniques.',
    iconType: 'presentation',
    href: '/en/services/seminars',
    image: '/images/gym/gym-05.jpg',
  },
  {
    title: 'Video Courses',
    description: 'Learn at your own pace with exclusive pre-recorded content.',
    iconType: 'camera',
    href: '/en/services/video-courses',
    image: '/images/gym/gym-07.jpg',
  },
  {
    title: 'RE-BORN',
    description: 'Comprehensive transformation at physical, mental and spiritual level.',
    badge: 'Premium',
    iconType: 'zap',
    href: '/en/academy/re-born',
    image: '/images/gym/gym-09.jpg',
  },
];

const stats = [
  { value: '4500+', label: 'Clients Transformed' },
  { value: '30+', label: 'Years of Experience' },
  { value: '50+', label: 'Trophies Won' },
  { value: '100%', label: 'Total Dedication' },
];

const transformationSteps = [
  {
    number: '1',
    title: 'Request your consultation',
    description: 'Contact me and choose the service that best suits your needs or schedule a consultation to find the ideal option.',
  },
  {
    number: '2',
    title: 'Start your plan',
    description: 'Access a training and nutrition program adjusted to your goals and lifestyle.',
  },
  {
    number: '3',
    title: 'Transform yourself',
    description: 'Transform your body and mind with a structured plan and my personalized support. Follow the right guidelines and achieve the results you have always desired.',
  },
];

const testimonials = [
  {
    name: 'Alberto Bernal',
    text: 'Bernat is much more than a personal trainer. His professionalism speaks for itself, but what really makes him stand out is the great person he is. He not only helps you improve physically, but also motivates you in your personal growth and learning.',
    image: 'testimonial-1',
  },
  {
    name: 'MÃ³nica Olmeda',
    role: 'Classical Pilates',
    text: 'Bernat, in addition to being an excellent person, is a personal trainer with unparalleled experience and charisma. His gym is very familiar and pleasant. He is constantly watching each client and ensuring the technique is correct to find the best results.',
    image: 'testimonial-2',
  },
  {
    name: 'Aaron Navarro',
    text: 'A 10/10 personal trainer. I have been training with Bernat for about 3 months and I am delighted. In his gym, sessions are small, with a maximum of 2 or 3 people, which allows more personalized training. I always recommend him to anyone who asks me about a personal trainer in Alicante.',
    image: 'testimonial-3',
  },
];
---

<Layout
  title="Scorus Fitness | Personal Training in Alicante"
  description="Personal training center and gym in Alicante. Physical transformation with personalized programs, RE-BORN and Scorus Campus. Bernat Scorus, professional bodybuilder."
>
  <!-- Hero Section -->
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden bg-black">
    <div class="absolute inset-0">
      <Image
        src={heroImage}
        alt="Bernat Scorus - Personal Training"
        class="h-full w-full object-cover"
        widths={[640, 768, 1024, 1280, 1536, 1920]}
        sizes="100vw"
        quality={80}
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/70 to-black/80"></div>
    </div>
    
    <div class="absolute left-0 top-1/4 h-1 w-32 bg-gradient-to-r from-red-600 to-transparent"></div>
    <div class="absolute right-0 top-2/3 h-1 w-32 bg-gradient-to-l from-red-600 to-transparent"></div>
    
    <div class="container relative z-10 py-32 pt-40 text-center">
      <div class="mx-auto max-w-6xl">
        <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Scorus Fitness
          </p>
        </div>
        
        <h1 class="mb-8 text-3xl font-black uppercase leading-[0.9] tracking-tighter text-white sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl">
          TRANSFORM<br />
          <span class="text-red-600">YOUR BODY</span>
        </h1>
        
        <p class="mx-auto mb-12 max-w-2xl text-sm leading-relaxed text-gray-300 sm:text-base md:text-lg lg:text-xl">
          Elite training. Extraordinary results.<br />
          <span class="font-semibold text-red-600">Your transformation starts here.</span>
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href="/en/contact" 
            text="Start Now" 
            icon="fire"
            size="lg"
            variant="glow"
          />
          
          <ButtonSecondary 
            href="/en/services" 
            text="Services"
            icon="eye"
            variant="glass"
            size="lg"
          />
        </div>
      </div>
    </div>

    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="flex flex-col items-center gap-2">
        <span class="text-xs font-semibold uppercase tracking-widest text-gray-400">Scroll</span>
        <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Services
          </p>
        </div>
        <h2 class="text-2xl font-black uppercase tracking-tight text-black sm:text-3xl md:text-4xl lg:text-5xl">
          PERSONALIZED PROGRAMS<br />
          <span class="text-red-600">FOR YOUR TRANSFORMATION</span>
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        {services.map((program) => (
          <a
            href={program.href}
            class="group relative overflow-hidden min-h-[380px] p-8 shadow-xl transition-all duration-300 hover:shadow-2xl hover:shadow-red-600/50 hover:-translate-y-2 flex flex-col"
          >
            {/* Background Image with WebP optimization and responsive sizes */}
            <div class="absolute inset-0 z-0" set:html={`
              <picture>
                <source srcset="${program.image.replace(/\.(jpg|jpeg|png)$/i, '-400w.webp')} 400w, ${program.image.replace(/\.(jpg|jpeg|png)$/i, '-800w.webp')} 800w, ${program.image.replace(/\.(jpg|jpeg|png)$/i, '.webp')} 1200w" type="image/webp" sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 25vw">
                <img src="${program.image}" alt="${program.title}" class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" decoding="async">
              </picture>
            `} />
            
            {/* Dark Overlay for contrast */}
            <div class="absolute inset-0 z-10 bg-gradient-to-b from-black/70 via-black/80 to-black/95 transition-opacity duration-300 group-hover:from-red-600/70 group-hover:via-red-600/80 group-hover:to-red-600/95"></div>
            
            {/* Badge */}
            {program.badge && (
              <div class="absolute right-4 top-4 z-20 rounded-full bg-red-600 px-3 py-1 text-xs font-bold uppercase tracking-wider text-white shadow-lg group-hover:bg-black">
                {program.badge}
              </div>
            )}
            
            <div class="relative z-20 mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-white/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-white/20 group-hover:shadow-lg">
              {program.iconType === 'user' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              )}
              {program.iconType === 'laptop' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              )}
              {program.iconType === 'video' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              )}
              {program.iconType === 'graduation-cap' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                </svg>
              )}
            </div>
            
            <h3 class="relative z-20 mb-3 min-h-[4rem] text-2xl font-black uppercase tracking-tight text-white transition-colors group-hover:text-white">
              {program.title}
            </h3>
            <p class="relative z-20 mb-6 min-h-[4.5rem] leading-relaxed text-gray-300 transition-colors group-hover:text-white">
              {program.description}
            </p>
            
            <div class="relative z-20 mt-auto inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
              Discover
              <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Features Section -->
  <section class="bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            About Us
          </p>
        </div>
        <h2 class="mx-auto max-w-4xl text-2xl font-black uppercase leading-tight tracking-tight text-white sm:text-3xl md:text-4xl lg:text-5xl">
          WE TRANSFORM YOUR BODY,<br />
          <span class="text-red-600">ENHANCE YOUR PERFORMANCE</span>
        </h2>
        <p class="mx-auto mt-6 max-w-3xl text-lg text-gray-300">
          Forget generic diets and routines. Achieve your best version with a 100% personalized plan and real support.
        </p>
      </div>

      <div class="grid gap-12 md:grid-cols-3">
        {features.map((feature) => (
          <div class="group text-center">
            <div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-600/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600 group-hover:shadow-lg group-hover:shadow-red-600/50">
              {feature.iconType === 'users' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {feature.iconType === 'target' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {feature.iconType === 'utensils' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
            </div>
            
            <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-white">
              {feature.title}
            </h3>
            <p class="text-gray-400">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Academy Section -->
  <section class="bg-gray-50 py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Academy
          </p>
        </div>
        <h2 class="text-2xl font-black uppercase tracking-tight text-black sm:text-3xl md:text-4xl lg:text-5xl">
          TRAINING AND EDUCATION<br />
          <span class="text-red-600">FOR PROFESSIONALS</span>
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        {academy.map((program) => (
          <a
            href={program.href}
            class="group relative overflow-hidden min-h-[380px] p-8 shadow-xl transition-all duration-300 hover:shadow-2xl hover:shadow-red-600/50 hover:-translate-y-2 flex flex-col"
          >
            {/* Background Image with WebP optimization */}
            <div class="absolute inset-0 z-0" set:html={`
              <picture>
                <source srcset="${program.image.replace(/\.(jpg|jpeg|png)$/i, '-400w.webp')} 400w, ${program.image.replace(/\.(jpg|jpeg|png)$/i, '-800w.webp')} 800w, ${program.image.replace(/\.(jpg|jpeg|png)$/i, '.webp')} 1200w" type="image/webp" sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 25vw">
                <img src="${program.image}" alt="${program.title}" class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" decoding="async">
              </picture>
            `} />
            
            {/* Dark Overlay for contrast */}
            <div class="absolute inset-0 z-10 bg-gradient-to-b from-black/70 via-black/80 to-black/95 transition-opacity duration-300 group-hover:from-red-600/70 group-hover:via-red-600/80 group-hover:to-red-600/95"></div>
            
            {/* Badge */}
            {program.badge && (
              <div class="absolute right-4 top-4 z-20 rounded-full bg-red-600 px-3 py-1 text-xs font-bold uppercase tracking-wider text-white shadow-lg group-hover:bg-black">
                {program.badge}
              </div>
            )}
            
            <div class="relative z-20 mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-white/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-white/20 group-hover:shadow-lg">
              {program.iconType === 'wrench' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              )}
              {program.iconType === 'presentation' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                </svg>
              )}
              {program.iconType === 'camera' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              )}
              {program.iconType === 'zap' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
            </div>
            
            <h3 class="relative z-20 mb-3 min-h-[4rem] text-2xl font-black uppercase tracking-tight text-white transition-colors group-hover:text-white">
              {program.title}
            </h3>
            <p class="relative z-20 mb-6 min-h-[4.5rem] leading-relaxed text-gray-300 transition-colors group-hover:text-white">
              {program.description}
            </p>
            
            <div class="relative z-20 mt-auto inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
              Discover
              <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Scorus GYM Section -->
  <section class="relative bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
        <div class="flex flex-col justify-center">
          <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
            <p class="text-sm font-bold uppercase tracking-widest text-red-600">
              Scorus GYM
            </p>
          </div>
          
          <h2 class="mb-6 text-2xl font-black uppercase leading-tight tracking-tight text-white sm:text-3xl md:text-4xl lg:text-5xl">
            A PRIVATE GYM<br />
            DESIGNED FOR YOUR<br />
            <span class="text-red-600">MAXIMUM PERFORMANCE</span>
          </h2>
          
          <p class="mb-8 text-lg leading-relaxed text-gray-300">
            Train in an exclusive, private and welcoming space, fully equipped and with your own music.
          </p>

          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-red-600 shadow-lg shadow-red-600/50">
                <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-white">Private and Exclusive Space</h4>
                <p class="text-sm text-gray-400">No distractions, just you and your workout</p>
