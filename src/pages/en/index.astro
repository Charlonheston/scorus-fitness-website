---
/**
 * English homepage - Premium Black, White and Red Design
 * Scorus Fitness - Main landing page
 * Complete version with all modules
 */

import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

// Import images
import heroImage from '../../../public/images/hero/bernat-hero.jpg';
import aboutImage from '../../../public/images/about/bernat-about.jpg';
import gymImage from '../../../public/images/gym/gym-01.jpg';

// Get latest blog posts
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const mainServices = [
  {
    title: 'Personal Training',
    description: 'Learn to perform exercises, stretch and breathe.',
    cta: 'Transform yourself now!',
    iconType: 'dumbbell',
    href: '/en/services/personal-training',
  },
  {
    title: 'Personalized Diets',
    description: 'Nutritional plan tailored to all types of diets.',
    cta: 'Discover your plan',
    iconType: 'apple',
    href: '/en/services',
  },
  {
    title: 'Personalized Routines',
    description: 'Personalized and visually designed workout routines.',
    cta: 'Get physically prepared',
    iconType: 'clipboard',
    href: '/en/services',
  },
  {
    title: 'Online Consulting',
    description: 'Answers to all your questions.',
    cta: 'Get advice from a champion',
    iconType: 'monitor',
    href: '/en/services/online-consulting',
  },
];

const features = [
  {
    title: 'Support',
    description: 'Resolve all your doubts and questions through individual or group video calls',
    iconType: 'users',
  },
  {
    title: 'Personal Training',
    description: 'Sessions adapted to your level and current physical state, regardless of your starting point.',
    iconType: 'target',
  },
  {
    title: 'Tailored Nutrition',
    description: 'Personalized meal plans for all types of diets: vegan, gluten-free, keto, FODMAP and more.',
    iconType: 'utensils',
  },
];

const programs = [
  {
    title: 'RE-BORN',
    description: 'Comprehensive transformation at physical, mental and spiritual level.',
    badge: 'Premium',
    iconType: 'zap',
    href: '/en/academy/re-born',
  },
  {
    title: 'Scorus Campus',
    description: 'Exclusive 7-day intensive training experience.',
    badge: 'Premium',
    iconType: 'graduation-cap',
    href: '/en/academy/scorus-campus',
  },
  {
    title: 'Seminars',
    description: 'Specialized training in advanced training techniques.',
    iconType: 'presentation',
    href: '/en/services/seminars',
  },
  {
    title: 'Video Courses',
    description: 'Learn at your own pace with exclusive pre-recorded content.',
    iconType: 'video',
    href: '/en/services/video-courses',
  },
  {
    title: 'Workshops',
    description: 'Practical sessions to perfect your technique.',
    iconType: 'wrench',
    href: '/en/services/workshops',
  },
  {
    title: 'Online Consulting',
    description: 'Professional advice from anywhere.',
    iconType: 'laptop',
    href: '/en/services/online-consulting',
  },
];

const stats = [
  { value: '4500+', label: 'Clients Transformed' },
  { value: '30+', label: 'Years of Experience' },
  { value: '50+', label: 'Trophies Won' },
  { value: '100%', label: 'Total Dedication' },
];

const transformationSteps = [
  {
    number: '1',
    title: 'Request your consultation',
    description: 'Contact me and choose the service that best suits your needs or schedule a consultation to find the ideal option.',
  },
  {
    number: '2',
    title: 'Start your plan',
    description: 'Access a training and nutrition program adjusted to your goals and lifestyle.',
  },
  {
    number: '3',
    title: 'Transform yourself',
    description: 'Transform your body and mind with a structured plan and my personalized support. Follow the right guidelines and achieve the results you have always desired.',
  },
];

const testimonials = [
  {
    name: 'Alberto Bernal',
    text: 'Bernat is much more than a personal trainer. His professionalism speaks for itself, but what really makes him stand out is the great person he is. He not only helps you improve physically, but also motivates you in your personal growth and learning.',
    image: 'testimonial-1',
  },
  {
    name: 'Mónica Olmeda',
    role: 'Classical Pilates',
    text: 'Bernat, in addition to being an excellent person, is a personal trainer with unparalleled experience and charisma. His gym is very familiar and pleasant. He is constantly watching each client and ensuring the technique is correct to find the best results.',
    image: 'testimonial-2',
  },
  {
    name: 'Aaron Navarro',
    text: 'A 10/10 personal trainer. I have been training with Bernat for about 3 months and I am delighted. In his gym, sessions are small, with a maximum of 2 or 3 people, which allows more personalized training. I always recommend him to anyone who asks me about a personal trainer in Alicante.',
    image: 'testimonial-3',
  },
];
---

<Layout
  title="Scorus Fitness | Personal Training in Alicante"
  description="Personal training center and gym in Alicante. Physical transformation with personalized programs, RE-BORN and Scorus Campus. Bernat Scorus, professional bodybuilder."
>
  <!-- Hero Section -->
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden bg-black">
    <div class="absolute inset-0">
      <Image
        src={heroImage}
        alt="Bernat Scorus - Personal Training"
        class="h-full w-full object-cover"
        widths={[640, 768, 1024, 1280, 1536, 1920]}
        sizes="100vw"
        quality={80}
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/70 to-black/80"></div>
    </div>
    
    <div class="absolute left-0 top-1/4 h-1 w-32 bg-gradient-to-r from-red-600 to-transparent"></div>
    <div class="absolute right-0 top-2/3 h-1 w-32 bg-gradient-to-l from-red-600 to-transparent"></div>
    
    <div class="container relative z-10 py-32 pt-40 text-center">
      <div class="mx-auto max-w-6xl">
        <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Scorus Fitness
          </p>
        </div>
        
        <h1 class="mb-8 text-7xl font-black uppercase leading-[0.9] tracking-tighter text-white md:text-8xl lg:text-9xl">
          TRANSFORM<br />
          <span class="text-red-600">YOUR BODY</span>
        </h1>
        
        <p class="mx-auto mb-12 max-w-2xl text-xl leading-relaxed text-gray-300 md:text-2xl">
          Elite training. Extraordinary results.<br />
          <span class="font-semibold text-red-600">Your transformation starts here.</span>
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <a
            href="/en/contact"
            class="group relative overflow-hidden bg-red-600 px-12 py-5 text-lg font-bold uppercase tracking-wider text-white shadow-2xl shadow-red-600/50 transition-all duration-300 hover:bg-red-700 hover:shadow-red-600/70 hover:scale-105"
          >
            <span class="relative z-10">Start Now</span>
            <div class="absolute inset-0 -z-0 bg-gradient-to-r from-red-700 to-red-600 opacity-0 transition-opacity group-hover:opacity-100"></div>
          </a>
          
          <a
            href="/en/services"
            class="bg-white/10 px-12 py-5 text-lg font-bold uppercase tracking-wider text-white shadow-xl backdrop-blur-sm transition-all duration-300 hover:bg-white hover:text-black hover:shadow-2xl hover:scale-105"
          >
            View Services
          </a>
        </div>
      </div>
    </div>

    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="flex flex-col items-center gap-2">
        <span class="text-xs font-semibold uppercase tracking-widest text-gray-400">Scroll</span>
        <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Main Services Section -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Main Services
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          START YOUR <span class="text-red-600">TRANSFORMATION</span>
        </h2>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {mainServices.map((service) => (
          <a
            href={service.href}
            class="group relative overflow-hidden bg-white p-6 sm:p-8 shadow-lg transition-all duration-300 hover:bg-black hover:shadow-2xl hover:shadow-red-600/30 hover:-translate-y-1"
          >
            <div class="absolute right-0 top-0 h-16 w-16 bg-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-20" style="clip-path: polygon(100% 0, 0 0, 100% 100%)"></div>
            
            <div class="relative z-10">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-gray-100 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600">
                {service.iconType === 'dumbbell' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 11l2 2m10-2l-2 2"/>
                  </svg>
                )}
                {service.iconType === 'apple' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                  </svg>
                )}
                {service.iconType === 'clipboard' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                )}
                {service.iconType === 'monitor' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                )}
              </div>
              
              <h3 class="mb-3 text-lg sm:text-xl font-black uppercase tracking-tight text-black transition-colors group-hover:text-white">
                {service.title}
              </h3>
              <p class="mb-4 text-sm leading-relaxed text-gray-600 transition-colors group-hover:text-gray-200">
                {service.description}
              </p>
              
              <div class="inline-flex items-center gap-2 text-xs sm:text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
                {service.cta}
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Features Section -->
  <section class="bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            About Us
          </p>
        </div>
        <h2 class="mx-auto max-w-4xl text-4xl font-black uppercase leading-tight tracking-tight text-white md:text-5xl">
          WE TRANSFORM YOUR BODY,<br />
          <span class="text-red-600">ENHANCE YOUR PERFORMANCE</span>
        </h2>
        <p class="mx-auto mt-6 max-w-3xl text-lg text-gray-300">
          Forget generic diets and routines. Achieve your best version with a 100% personalized plan and real support.
        </p>
      </div>

      <div class="grid gap-12 md:grid-cols-3">
        {features.map((feature) => (
          <div class="group text-center">
            <div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-600/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600 group-hover:shadow-lg group-hover:shadow-red-600/50">
              {feature.iconType === 'users' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {feature.iconType === 'target' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {feature.iconType === 'utensils' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
            </div>
            
            <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-white">
              {feature.title}
            </h3>
            <p class="text-gray-400">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Programs Showcase -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Our Programs
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          DISCOVER PROGRAMS THAT<br />
          <span class="text-red-600">TRANSFORM BODIES AND MINDS</span>
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {programs.map((program) => (
          <a
            href={program.href}
            class="group relative overflow-hidden bg-black p-8 shadow-xl transition-all duration-300 hover:bg-red-600 hover:shadow-2xl hover:shadow-red-600/50 hover:-translate-y-1"
          >
            {program.badge && (
              <div class="absolute right-4 top-4 rounded-full bg-red-600 px-3 py-1 text-xs font-bold uppercase tracking-wider text-white shadow-lg group-hover:bg-black">
                {program.badge}
              </div>
            )}
            
            <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-white/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-black group-hover:shadow-lg">
              <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            
            <h3 class="mb-3 text-2xl font-black uppercase tracking-tight text-white transition-colors group-hover:text-black">
              {program.title}
            </h3>
            <p class="mb-4 leading-relaxed text-gray-300 transition-colors group-hover:text-black">
              {program.description}
            </p>
            
            <div class="inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-black">
              Discover
              <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Scorus GYM Section -->
  <section class="relative bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
        <div class="flex flex-col justify-center">
          <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
            <p class="text-sm font-bold uppercase tracking-widest text-red-600">
              Scorus GYM
            </p>
          </div>
          
          <h2 class="mb-6 text-4xl font-black uppercase leading-tight tracking-tight text-white md:text-5xl">
            A PRIVATE GYM<br />
            DESIGNED FOR YOUR<br />
            <span class="text-red-600">MAXIMUM PERFORMANCE</span>
          </h2>
          
          <p class="mb-8 text-lg leading-relaxed text-gray-300">
            Train in an exclusive, private and welcoming space, fully equipped and with your own music.
          </p>

          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-red-600 shadow-lg shadow-red-600/50">
                <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-white">Private and Exclusive Space</h4>
                <p class="text-sm text-gray-400">No distractions, just you and your workout</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-red-600 shadow-lg shadow-red-600/50">
                <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-white">Professional Equipment</h4>
                <p class="text-sm text-gray-400">Everything you need to train at the highest level</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-red-600 shadow-lg shadow-red-600/50">
                <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-white">Your Music, Your Atmosphere</h4>
                <p class="text-sm text-gray-400">Create the perfect atmosphere for your session</p>
              </div>
            </div>
          </div>

          <a
            href="/en/gym"
            class="mt-8 inline-flex w-fit items-center gap-3 bg-red-600 px-8 py-4 font-bold uppercase tracking-wider text-white shadow-xl shadow-red-600/50 transition-all hover:shadow-2xl hover:shadow-red-600/70 hover:scale-105"
          >
            View Facilities
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <div class="relative min-h-[400px] overflow-hidden lg:min-h-[600px]">
          <Image
            src={gymImage}
            alt="Scorus GYM - Private Gym in Alicante"
            class="h-full w-full object-cover object-center"
            widths={[640, 768, 1024, 1280]}
            sizes="(max-width: 1024px) 100vw, 50vw"
            quality={85}
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-l from-black/30 via-transparent to-transparent"></div>
          <div class="absolute bottom-0 left-0 h-1 w-full bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="relative bg-white py-24">
    <div class="container">
      <div class="grid gap-12 md:grid-cols-4">
        {stats.map((stat) => (
          <div class="group text-center">
            <div class="mb-4 text-6xl font-black text-black transition-all group-hover:scale-110 group-hover:text-red-600 md:text-7xl">
              {stat.value}
            </div>
            <div class="text-sm font-semibold uppercase tracking-widest text-gray-600">{stat.label}</div>
            <div class="mx-auto mt-4 h-1 w-12 bg-red-600 opacity-0 transition-all group-hover:w-24 group-hover:opacity-100"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Transformation Steps -->
  <section class="bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Your Process
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-white md:text-5xl">
          STEPS TO TRANSFORM<br />
          <span class="text-red-600">YOUR PHYSIQUE</span>
        </h2>
        <p class="mx-auto mt-6 max-w-2xl text-lg text-gray-300">
          Your evolution begins with a structured plan. Follow these three steps and reach your best version.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-3">
        {transformationSteps.map((step) => (
          <div class="group relative">
            <div class="mb-6 flex h-20 w-20 items-center justify-center rounded-2xl bg-red-600 shadow-2xl shadow-red-600/50 transition-all duration-300 group-hover:scale-110">
              <span class="text-4xl font-black text-white">{step.number}</span>
            </div>
            
            <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-white">
