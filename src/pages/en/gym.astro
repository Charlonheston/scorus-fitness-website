---
/**
 * Scorus GYM - Premium Black/White/Red Design with Gallery
 */

import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';

// Import hero image
import gym01 from '../../../public/images/gym/gym-01.jpg';

const currentLang = 'en';

const gymImages = [
  { src: '/images/gym/gym-01.jpg', alt: 'Scorus Fitness - Main view of the gym' },
  { src: '/images/gym/gym-02.jpg', alt: 'Scorus Fitness - Wide view of facilities' },
  { src: '/images/gym/gym-03.jpg', alt: 'Scorus Fitness - Machines area with mirrors' },
  { src: '/images/gym/gym-04.jpg', alt: 'Scorus Fitness - Free weights area' },
  { src: '/images/gym/gym-05.jpg', alt: 'Scorus Fitness - Professional equipment' },
  { src: '/images/gym/gym-06.jpg', alt: 'Scorus Fitness - Lateral view of the gym' },
  { src: '/images/gym/gym-07.jpg', alt: 'Scorus Fitness - Training zone' },
  { src: '/images/gym/gym-08.jpg', alt: 'Scorus Fitness - Personal training' },
  { src: '/images/gym/gym-09.jpg', alt: 'Scorus Fitness - Training environment' },
  { src: '/images/gym/gym-10.jpg', alt: 'Scorus Fitness - Complete facilities' },
];
---

<Layout
  title="Scorus GYM | Training in Alicante"
  description="Boutique gym in Alicante specialized in bodybuilding and personal training"
>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden bg-black">
    <div class="absolute inset-0">
      <Image 
        src={gym01}
        alt="Scorus GYM" 
        class="h-full w-full object-cover opacity-40"
        loading="eager"
      />
    </div>
    
    <div class="container relative z-10 py-32">
      <div class="max-w-4xl text-white">
        <h1 class="mb-8 text-5xl font-black uppercase leading-[1.1] tracking-tighter md:text-6xl lg:text-7xl">
          SCORUS <span class="text-red-600">GYM</span>
        </h1>
        <p class="mb-12 max-w-2xl text-xl leading-relaxed text-gray-200 md:text-2xl">
          Your space. Your pace. Your music. Personalized training in premium facilities.
        </p>
        <div class="flex flex-col gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contact`}
            text="Book Session"
            icon="zap"
            size="xl"
            variant="glow"
          />
          <ButtonSecondary 
            href={`/${currentLang}/services/personal-training`}
            text="View Services"
            icon="arrow"
            variant="glass"
            size="xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-3xl font-black uppercase tracking-tighter text-black sm:text-4xl md:text-5xl lg:text-6xl">
          A Different <span class="text-red-600">Gym</span>
        </h2>
        <div class="space-y-6 text-lg leading-relaxed text-gray-700">
          <p>
            <strong>Scorus GYM</strong> is not a conventional gym. It's a space designed for people seeking real results with personalized attention.
          </p>
          <p>
            Boutique facilities with cutting-edge equipment, motivating environment and the experience of over 15 years in professional bodybuilding.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-gray-50 py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Why <span class="text-red-600">Scorus GYM</span>?
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {[
            {title: "Premium Equipment", desc: "Latest generation machines and equipment for maximum performance", icon: "M13 10V3L4 14h7v7l9-11h-7z"},
            {title: "Personalized Attention", desc: "Individual tracking and plans adapted to your goals", icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"},
            {title: "Motivating Atmosphere", desc: "Space designed to inspire you to give your best", icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"},
            {title: "Flexible Hours", desc: "Sessions adapted to your availability and schedule", icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"},
            {title: "Music Your Way", desc: "Train with the music that motivates you", icon: "M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"},
            {title: "Professional Experience", desc: "+15 years in bodybuilding and high-performance training", icon: "M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"}
          ].map(feature => (
            <div class="group rounded-lg bg-white p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-black transition-all duration-300 group-hover:bg-red-600">
                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon}/>
                </svg>
              </div>
              <h3 class="mb-3 text-xl font-black uppercase text-black">{feature.title}</h3>
              <p class="text-sm leading-relaxed text-gray-600">{feature.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="bg-black py-24">
    <div class="container">
      <div class="mb-16 text-center">
        <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-white md:text-5xl">
          Our <span class="text-red-600">Facilities</span>
        </h2>
        <p class="text-xl text-gray-400">Designed to inspire and boost your training</p>
      </div>
      
      <!-- Masonry Gallery -->
      <div class="grid gap-4 grid-cols-1 md:grid-cols-3 lg:grid-cols-4 auto-rows-[280px]">
        {gymImages.map((image, idx) => {
          // Crear patrones de tama√±o variable
          let colSpan = 'col-span-1';
          let rowSpan = 'row-span-1';
          
          if (idx === 0) {
            colSpan = 'md:col-span-2 lg:col-span-2';
            rowSpan = 'md:row-span-2 lg:row-span-2';
          } else if (idx === 3) {
            colSpan = 'md:col-span-2 lg:col-span-2';
            rowSpan = 'md:row-span-2 lg:row-span-2';
          } else if (idx === 6) {
            colSpan = 'md:col-span-1 lg:col-span-2';
            rowSpan = 'row-span-1';
          } else if (idx === 8) {
            colSpan = 'md:col-span-1 lg:col-span-2';
            rowSpan = 'row-span-1';
          }
          
          return (
            <div class={`group relative overflow-hidden rounded-lg bg-gray-900 ${colSpan} ${rowSpan}`}>
              <div set:html={`
                <picture>
                  <source srcset="${image.src.replace(/\.(jpg|jpeg|png)$/i, '.webp')}" type="image/webp" sizes="100vw">
                  <img src="${image.src}" alt="${image.alt}" loading="lazy" decoding="async" class="h-full w-full object-contain transition-all duration-500 group-hover:scale-110 group-hover:opacity-80">
                </picture>
              `} />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                <div class="absolute bottom-0 left-0 right-0 p-6">
                  <p class="text-sm font-bold uppercase tracking-wider text-white">{image.alt}</p>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Location And <span class="text-red-600">Contact</span>
          </h2>
        </div>

        <div class="grid gap-12 md:grid-cols-2">
          <!-- Info -->
          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="mb-2 font-black uppercase text-black">Address</h3>
                <p class="text-gray-700">Av. Conrado Albaladejo 31<br />03016 Alicante, Spain</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="mb-2 font-black uppercase text-black">Hours</h3>
                <p class="text-gray-700"><strong>Monday - Friday</strong><br />10:00 - 14:00 | 15:00 - 22:00</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h3 class="mb-2 font-black uppercase text-black">Phone</h3>
                <a href="tel:+34673975252" class="text-gray-700 transition-colors hover:text-red-600">+34 673 97 52 52</a>
              </div>
            </div>
          </div>

          <!-- Map Placeholder -->
          <div class="relative aspect-square overflow-hidden rounded-lg bg-gray-200 md:aspect-auto">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3133.1743586936626!2d-0.4960773!3d38.3554567!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd6236b3f3e3e3e3%3A0x3e3e3e3e3e3e3e3e!2sAv.%20Conrado%20Albaladejo%2C%2031%2C%2003016%20Alicante!5e0!3m2!1sen!2ses!4v1234567890123!5m2!1sen!2ses"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="h-full min-h-[400px] w-full"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gray-50 py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">
          Ready To <span class="text-red-600">Start</span>?
        </h2>
        <p class="mb-12 text-xl text-gray-600">
          Come visit our facilities and discover how we can help you reach your goals
        </p>

        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contact`}
            text="Book Visit"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <ButtonSecondary 
            href={`/${currentLang}/services/personal-training`}
            text="View Personal Training"
            icon="arrow"
            variant="glass"
            size="xl"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>

