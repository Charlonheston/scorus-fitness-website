---
/**
 * Blog Page - Article List
 * English - Netflix Minimalist Fitness Style
 */

import Layout from '@layouts/Layout.astro';
import { getArticles, type StrapiArticle } from '@lib/strapi';
import { formatDate } from '@lib/utils';

const articles = await getArticles('en');

// Helper to get image URL
function getImageUrl(imgUrl: any): string | null {
  if (!imgUrl) return null;
  if (typeof imgUrl === 'object' && imgUrl.data) {
    const url = imgUrl.data.attributes?.url || imgUrl.data.url;
    return url ? (url.startsWith('http') ? url : `https://scorus-cms-strapi.onrender.com${url}`) : null;
  }
  if (typeof imgUrl === 'object' && imgUrl.attributes) {
    const url = imgUrl.attributes.url;
    return url ? (url.startsWith('http') ? url : `https://scorus-cms-strapi.onrender.com${url}`) : null;
  }
  return null;
}

const currentLang = 'en';
---

<Layout
  title="Blog | Scorus Fitness"
  description="Articles about fitness, nutrition and training"
>
  <!-- Hero Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="mb-6 text-5xl font-black uppercase tracking-tighter md:text-6xl">
          Scorus <span class="text-red-600">Blog</span>
        </h1>
        <p class="text-xl text-gray-300">
          Discover the latest articles about fitness, nutrition and training
        </p>
      </div>
    </div>
  </section>

  <!-- Articles Grid - Netflix Style -->
  <section class="bg-black py-16">
    <div class="container">
      {articles.length === 0 ? (
        <div class="py-20 text-center">
          <p class="text-xl text-gray-500">No articles available yet.</p>
        </div>
      ) : (
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {articles.map((article) => {
            if (!article?.attributes?.title || !article?.attributes?.slug) {
              return null;
            }

            const publishedDate = article.attributes.date 
              ? new Date(article.attributes.date)
              : (article.attributes.publishedAt 
                  ? new Date(article.attributes.publishedAt)
                  : new Date(article.attributes.createdAt));
            
            const imageUrl = getImageUrl(article.attributes.imgUrl);
            const excerpt = article.attributes.excerpt || '';
            const categories = article.attributes.categories?.data || [];
            const tags = article.attributes.tags?.data || [];
            const author = article.attributes.author?.data;
            
            return (
              <article class="group relative overflow-hidden min-h-[500px] rounded-lg bg-white shadow-2xl transition-all duration-300 hover:shadow-red-600/50 hover:-translate-y-2 flex flex-col">
                {/* Netflix-style background image */}
                {imageUrl && (
                  <div class="absolute inset-0 z-0">
                    <img 
                      src={imageUrl} 
                      alt={article.attributes.imageAlt || article.attributes.title}
                      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                      loading="lazy"
                      decoding="async"
                    />
                    {/* Gradient overlay */}
                    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/80 to-black/95 transition-opacity duration-300 group-hover:from-red-600/60 group-hover:via-red-600/80 group-hover:to-red-600/95"></div>
                  </div>
                )}
                
                {/* Content */}
                <div class="relative z-10 flex flex-col flex-1 p-6 justify-between min-h-[500px]">
                  <div>
                    {/* Categories */}
                    {categories.length > 0 && (
                      <div class="mb-4 flex flex-wrap gap-2">
                        {categories.slice(0, 2).map((category) => (
                          <span 
                            class="inline-flex items-center gap-1 rounded-full bg-red-600/90 px-3 py-1 text-xs font-bold uppercase tracking-wider text-white backdrop-blur-sm"
                            style={category.attributes?.color ? `background-color: ${category.attributes.color}` : ''}
                          >
                            {category.attributes?.icon && <span>{category.attributes.icon}</span>}
                            {category.attributes?.name || category.name}
                          </span>
                        ))}
                      </div>
                    )}
                    
                    {/* Date */}
                    <time class="mb-3 block text-sm font-semibold uppercase tracking-wider text-gray-300">
                      {formatDate(publishedDate, 'en-US')}
                    </time>
                    
                    {/* Title */}
                    <h2 class="mb-4 text-2xl font-black uppercase leading-tight tracking-tighter text-white transition-colors group-hover:text-red-600">
                      {article.attributes.title}
                    </h2>
                    
                    {/* Excerpt */}
                    {excerpt && (
                      <p class="mb-4 line-clamp-2 text-sm leading-relaxed text-gray-300">
                        {excerpt}
                      </p>
                    )}
                  </div>
                  
                  {/* Footer with tags and author */}
                  <div class="mt-auto border-t border-white/10 pt-4">
                    {/* Tags */}
                    {tags.length > 0 && (
                      <div class="mb-3 flex flex-wrap gap-1.5">
                        {tags.slice(0, 3).map((tag) => (
                          <span class="rounded bg-white/10 px-2 py-0.5 text-xs font-semibold text-gray-300 backdrop-blur-sm">
                            #{tag.attributes?.name || tag.name}
                          </span>
                        ))}
                      </div>
                    )}
                    
                    {/* Author */}
                    {author && (
                      <div class="flex items-center gap-3">
                        {author.attributes?.avatar?.data && (
                          <img 
                            src={getImageUrl(author.attributes.avatar) || ''} 
                            alt={author.attributes.name}
                            class="h-8 w-8 rounded-full object-cover"
                            loading="lazy"
                          />
                        )}
                        <div>
                          <p class="text-xs font-bold uppercase tracking-wider text-white">
                            {author.attributes?.name || author.name}
                          </p>
                          {author.attributes?.title && (
                            <p class="text-xs text-gray-400">{author.attributes.title}</p>
                          )}
                        </div>
                      </div>
                    )}
                    
                    {/* CTA */}
                    <div class="mt-4 inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
                      Read more
                      <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    </div>
                  </div>
                </div>
                
                {/* Link overlay */}
                <a href={`/en/blog/${article.attributes.slug}`} class="absolute inset-0 z-20"></a>
              </article>
            );
          })}
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

