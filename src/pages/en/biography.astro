---
import Layout from '@layouts/Layout.astro';
import BioIntro from '@components/biography/BioIntro.tsx';

const title = 'Biografía | Bernat Scorus';
const description = 'De la superación personal a la excelencia en el fitness. Scrollytelling.';

const videoMp4 = '/videos/biography/intro.mp4';
const videoWebm = '/videos/biography/intro.webm';
---

<Layout title={title} description={description}>
  <BioIntro 
    client:only="react" 
    lang="en"
    videoMp4={videoMp4} 
    videoWebm={videoWebm}
    framesPattern="/images/about/biography/frames/Timeline 1_{index}.jpg"
    framesCount={242}
    frames2Pattern="/images/about/biography/training-frames/Timeline 1_{i}.jpg"
    frames2Count={301}
    frames3Pattern="/images/about/biography/challenge-frames/Timeline 1_{index}.webp"
    frames3Count={242}
    frames3Start={86400}
    frames4Pattern="/images/about/biography/final-frames/Timeline 1_{index}.webp"
    frames4Count={241}
    frames4Start={86400}
    frames5Pattern="/images/about/biography/legacy-frames/Timeline 1_{index}.webp"
    frames5Count={192}
    frames5Start={86400}
    frames6Pattern="/images/about/biography/epilogue-frames/Timeline 1_{index}.webp"
    frames6Count={242}
    frames6Start={86400}
  />
  <!-- Altura extra responsive para cubrir todo el scrollytelling -->
  <div id="bio-scroll-spacer"></div>
  <!-- Espacio para el CTA fijo, permite que el footer aparezca debajo -->
  <div id="bio-cta-spacer" class="relative bg-black"></div>
</Layout>

<style is:inline>
  html, body { background-color: #000; }
  /* Spacer responsive: Incluye fade out final de 2 notches */
  #bio-scroll-spacer { height: 6200vh; }
  @media (min-width: 768px) {
    #bio-scroll-spacer { height: 5030vh; }
  }
  @media (min-width: 1024px) {
    #bio-scroll-spacer { height: 4570vh; }
  }
  
  /* Espacio para el CTA fijo - permite que el footer sea visible */
  #bio-cta-spacer { 
    height: 100vh; 
    min-height: 600px;
  }
  @media (min-width: 768px) {
    #bio-cta-spacer { 
      height: 90vh;
      min-height: 550px;
    }
  }
  @media (min-width: 1024px) {
    #bio-cta-spacer { 
      height: 80vh;
      min-height: 500px;
    }
  }
</style>