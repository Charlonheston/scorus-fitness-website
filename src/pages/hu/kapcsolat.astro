---
/**
 * Kapcsolat oldal - Húngaro
 */

import Layout from '@/layouts/Layout.astro';
---

<Layout 
  title="Kapcsolat | Scorus Fitness" 
  description="Lépj kapcsolatba Scorus Fitness-szel. Telefon, email és cím Alicantéban."
>
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center justify-center bg-black text-white">
    <div class="absolute inset-0 bg-gradient-to-br from-black via-black/95 to-black"></div>
    <div class="container relative z-10 py-32 text-center">
      <p class="mb-4 text-sm sm:text-base font-bold uppercase tracking-widest text-red-600">
        Lépj Kapcsolatba
      </p>
      <h1 class="mb-6 text-5xl sm:text-6xl md:text-7xl font-black uppercase tracking-tighter">
        KEZDJÜK <span class="text-red-600">EL</span>
      </h1>
      <p class="mx-auto max-w-2xl text-lg sm:text-xl text-gray-300 px-4">
        Készen állsz átalakítani életed? Vedd fel velem a kapcsolatot
      </p>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="grid gap-8 md:grid-cols-3">
          <!-- Phone -->
          <div class="text-center px-4">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-lg sm:text-xl font-bold uppercase text-black">Telefon</h3>
            <a href="tel:+34673975252" class="text-base sm:text-lg text-red-600 hover:text-black">
              +34 673 97 52 52
            </a>
          </div>

          <!-- Email -->
          <div class="text-center px-4">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-lg sm:text-xl font-bold uppercase text-black">Email</h3>
            <a href="mailto:info@scorusfitness.com" class="text-base sm:text-lg text-red-600 hover:text-black break-all">
              info@scorusfitness.com
            </a>
          </div>

          <!-- Location -->
          <div class="text-center px-4">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-lg sm:text-xl font-bold uppercase text-black">Cím</h3>
            <p class="text-base sm:text-lg text-gray-700">
              Av. Conrado Albaladejo, 31<br />
              03540 Alicante, Spanyolország
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-gray-100 py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl px-4">
        <h2 class="mb-8 text-3xl sm:text-4xl font-black uppercase text-center text-black">
          TALÁLJ MEG <span class="text-red-600">MINKET</span>
        </h2>
        <div class="aspect-video w-full overflow-hidden rounded-lg shadow-2xl">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3134.0573859678823!2d-0.5162!3d38.3825!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzjCsDIyJzU3LjAiTiAwwrAzMCc1OC4zIlc!5e0!3m2!1sen!2ses!4v1234567890"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Hours Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-3xl text-center px-4">
        <h2 class="mb-8 text-3xl sm:text-4xl font-black uppercase">
          NYITVATARTÁS
        </h2>
        <div class="space-y-3 text-base sm:text-lg">
          <p><strong>Hétfő - Péntek:</strong> 07:00 - 21:00</p>
          <p><strong>Szombat:</strong> 09:00 - 14:00</p>
          <p><strong>Vasárnap:</strong> Zárva</p>
        </div>
        <p class="mt-8 text-gray-400 text-sm sm:text-base">
          * Előzetes időpont egyeztetés ajánlott
        </p>
      </div>
    </div>
  </section>
</Layout>

