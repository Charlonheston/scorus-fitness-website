---
/**
 * Página de Video Cursos - Diseño Netflix
 * Hungarian video courses page with Netflix-style design
 */

import Layout from '@/layouts/Layout.astro';
import VideoCourseCarousel from '@/components/sections/VideoCourseCarousel.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import CTAFinal from '@/components/sections/CTAFinal.astro';

const coursesData = {
  seo: {
    title: "Video Kurzusok Online | Scorus Fitness",
    description: "Hozzáférés az online videó-kurzusokhoz az edzés és táplálkozás terén. Tanulj saját tempódban 100% videótartalmakkal és további anyagok."
  },
  courses: [
    {
      id: 'nutrition',
      title: 'Táplálkozás és Étkezés',
      description: 'Tanulj meg struktúrált étkezést és számítsd ki a makrotápanyagokat a fizikai célok eléréséhez.',
      icon: 'nutrition',
      color: 'from-emerald-600 to-teal-600'
    },
    {
      id: 'supplement',
      title: 'Intelligens Kiegészítés',
      description: 'Fedezd fel, mely kiegészítések működnek valóban és hogyan integráld őket a rutinodba.',
      icon: 'supplement',
      color: 'from-blue-600 to-cyan-600'
    },
    {
      id: 'training',
      title: 'Strukturált Edzés',
      description: 'Izomépítés, erő és autonómia rutinok szakértők által tervezve.',
      icon: 'training',
      color: 'from-red-600 to-pink-600'
    },
    {
      id: 'antiaging',
      title: 'Anti-aging és Optimális Egészség',
      description: 'Stratégiák az öregedés lassítására és az életminőség javítására.',
      icon: 'antiaging',
      color: 'from-purple-600 to-violet-600'
    },
    {
      id: 'cardio',
      title: 'Cardio és Zsírvesztés',
      description: 'Hatékony módszerek az autonómiás szint javítására és az zsír fenntartható elvesztésére.',
      icon: 'cardio',
      color: 'from-orange-600 to-red-600'
    },
    {
      id: 'wellness',
      title: 'Megelőzés és Jóllét',
      description: 'Kulcsok a sérülések megelőzésére és a hosszú élet és helyreállítás optimalizálására.',
      icon: 'wellness',
      color: 'from-indigo-600 to-blue-600'
    }
  ]
};
---

<Layout
  title={coursesData.seo.title}
  description={coursesData.seo.description}
>
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-screen bg-black overflow-hidden flex items-center justify-center pt-32 pb-16">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img src="/images/academia/video-cursos.jpeg" alt="Video Kurzusok Háttér" class="h-full w-full object-cover object-center" loading="eager" decoding="async">
    </div>

    <!-- Dark Overlay -->
    <div class="absolute inset-0 z-10 bg-black/60"></div>

    <!-- Background Elements (Gradient Blurs) -->
    <div class="absolute inset-0 z-20 opacity-30">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-red-600 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-600 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-30 container text-center">
      <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
        <p class="text-sm font-bold uppercase tracking-widest text-red-600">
          SCORUS ACADEMY
        </p>
      </div>

      <h1 class="mb-8 text-5xl md:text-7xl font-black uppercase tracking-tighter text-white max-w-4xl mx-auto">
        Video Kurzusok <span class="text-red-600">Online</span>
      </h1>

      <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        Szeretnél velem edzeni, de a távolság megnehezíti? Férj hozzáférést meine videó-kurzusaihoz és tanulj meg edzeni és étkezni, mint egy profi, bárhol és bármikor.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <ButtonPrimary 
          href="#kurzusok" 
          text="Fedezd Fel a Kurzusokat" 
          icon="zap"
          size="xl"
          variant="glow"
        />
        <a
          href="#hogyan-mukodik"
          class="inline-flex items-center gap-3 px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-black transition-all duration-300 rounded-lg font-black uppercase tracking-wider"
        >
          Hogyan Működik
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-16 animate-bounce">
        <svg class="w-6 h-6 text-red-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="bg-white py-20 md:py-32">
    <div class="container">
      <div class="grid md:grid-cols-5 gap-8">
        <!-- Feature 1 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            100% Videó
          </h3>
          <p class="text-gray-600">
            Részletes és praktikus magyarázatok az egyes koncepciókhoz
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-3a6 6 0 11-12 0 6 6 0 0112 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Extra Anyag
          </h3>
          <p class="text-gray-600">
            Táblák, étrendk, receptek és letölthető PDF útmutatók
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Korlátlan Hozzáférés
          </h3>
          <p class="text-gray-600">
            Tanulj a saját tempódban, amikor és ahol akarod
          </p>
        </div>

        <!-- Feature 4 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Bizonyított Módszer
          </h3>
          <p class="text-gray-600">
            Tudományon és 20+ év valós tapasztalaton alapul
          </p>
        </div>

        <!-- Feature 5 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m0 0l-2-1m2 1v2.5M14 4l-2 1m0 0L10 4m2 1v2.5"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Garantált Eredmények
          </h3>
          <p class="text-gray-600">
            Alkalmazza a tudást és lásson valódi változásokat
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Courses Carousel Section -->
  <section id="kurzusok" class="py-4">
    <VideoCourseCarousel 
      title="Az Ön"
      titleHighlight="Video Kurzusai"
      courses={coursesData.courses}
      nextLabel="Következő"
      prevLabel="Előző"
    />
  </section>

  <!-- How It Works Section -->
  <section id="hogyan-mukodik" class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-black mb-4">
          Hogyan <span class="text-red-600">Működnek</span> a Video Kurzusok
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Egy egyszerű, de hatékony folyamat a tudás eredményekké alakításához
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-12">
        <!-- Step 1 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                1
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Válaszd az Ön Kurzusát
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Találd meg azt, amely a legjobban megfelel az Ön céljainak és tapasztalati szintjének. Van lehetőség kezdőtől haladóig.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 2 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                2
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Hozzáférés a Tartalomhoz
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Tanulj részletes videókon, letölthető anyagokkal és kiegészítő forrásokkal. Minden modul szerint szervezve.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 3 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                3
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Alkalmaz és Transzformál
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Kövess minden lépést és alkalmaz az élet szituációban tanultakat. Az eredmények jönni fognak, ha konzisztens maradssz.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="mt-16 text-center">
        <ButtonPrimary 
          href="#kurzusok" 
          text="Tekintsd Meg az Összes Kurzust" 
          icon="arrow"
          size="lg"
          variant="default"
        />
      </div>
    </div>
  </section>

  <!-- Comparison/Benefits Section -->
  <section class="bg-black py-24 md:py-32 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16 text-center">
          <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter mb-4">
            Miért <span class="text-red-600">Video Kurzusok</span>?
          </h2>
          <p class="text-xl text-gray-400">
            A legflexibilisebb és legközelítő megoldás a minőségi oktatáshoz
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Flexibilis Tanulás</h4>
                <p class="text-gray-400">Tanulj a saját tempódban, amikor és ahol akarod. Nincs rögzített óra.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Premium Tartalom</h4>
                <p class="text-gray-400">Hozzáférés az exkluzív tudáshoz a több éves tapasztalattal rendelkező szakemberektől.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Élethosszig Hozzáférés</h4>
                <p class="text-gray-400">Vásárolj egyszer, örökké hozzáférésre. Beleértve a jövőbeli frissítéseket.</p>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Exkluzív Közösség</h4>
                <p class="text-gray-400">Csatlakozz más hallgatókkal és oszd meg az előrehaladásodat közösségünkkel.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Tanúsítványok</h4>
                <p class="text-gray-400">Szerezz befejezési tanúsítványokat minden abszolvált kurzushoz.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Elégedettség Garancia</h4>
                <p class="text-gray-400">30 napos pénzvisszatérítés garancia, ha nem vagy elégedett.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <CTAFinal 
    tagline="KÉSZEN ÁLLSZ?"
    title="Transzformáld az Ön"
    titleHighlight="Tudást Eredményekké"
    description="Férj hozzáférést mostanában az videó-kurzusainkhoz és kezdd meg az átalakulási utadat. Száz hallgató már lát eredményeket."
    primaryCta={{
      text: "Tekintsd Meg az Elérhető Kurzusokat",
      href: "#kurzusok",
      icon: "zap"
    }}
    secondaryCta={{
      text: "Ingyenes Konzultáció",
      href: "/hu/kapcsolat"
    }}
  />
</Layout>

