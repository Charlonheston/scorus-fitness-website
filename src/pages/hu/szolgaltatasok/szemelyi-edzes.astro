---
/**
 * Személyi Edzés oldal - Prémium Fekete/Fehér/Piros Design
 * Teljes tartalom mint a többi nyelven
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import translations from '../../../../public/locales/hu/services.json';

const t = translations.personal_training;
const currentLang = 'hu';
---

<Layout
  title={t.meta.title}
  description={t.meta.description}
>
  <!-- Header Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/szolgaltatasok`,
      text: translations.back_to_services
    }}
    title="SZEMÉLYI EDZÉS"
    subtitle="Személyre szabott programok, amelyek kifejezetten a céljaid biztonságos és hatékony elérésére lettek tervezve."
    backgroundImage="/images/services/personal-training.jpg"
  />

  <!-- Intro Section -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="mb-6 text-3xl sm:text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          Személyi Edzés <span class="text-red-600">Szolgáltatások</span>
        </h2>
        <p class="text-base sm:text-lg leading-relaxed text-gray-700">
          Személyre szabott programokat kínálok <strong>Izomtömeg Növelésre</strong> és <strong>Zsírvesztésre</strong> férfiak és nők számára minden korosztályból. Minden ember egyedi, specifikus kihívásokkal és célokkal. Célom, hogy segítsek legyőzni az akadályokat és elérni céljaidat biztonságosan és hatékonyan.
        </p>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section class="bg-black py-16 sm:py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-6xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <h2 class="mb-4 text-3xl sm:text-4xl font-black uppercase tracking-tighter md:text-5xl">
            Válaszd Ki Az Utad És <span class="text-red-600">Alakítsd Át</span><br />
            Tested És Elméd <span class="text-red-600">Most</span>
          </h2>
        </div>

        <div class="grid gap-6 sm:gap-8 md:grid-cols-3">
          <!-- Bono 8 Ülés -->
          <div class="group relative overflow-hidden rounded-lg bg-white text-black transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="p-6 sm:p-8 text-center relative z-10">
              <!-- Icon Badge -->
              <div class="mb-6 inline-flex h-16 w-16 sm:h-20 sm:w-20 items-center justify-center rounded-full bg-black text-2xl sm:text-3xl font-black text-white">
                8
              </div>
              
              <h3 class="mb-2 text-xl sm:text-2xl font-black uppercase tracking-tight">8 Üléses Bérlet</h3>
              <p class="mb-6 text-xs sm:text-sm text-gray-600">Heti 1-2 edzéshez</p>
              
              <!-- Price -->
              <div class="mb-6 sm:mb-8">
                <span class="text-4xl sm:text-5xl font-black text-red-600">200€</span>
                <span class="text-base sm:text-lg text-gray-600">/hó</span>
              </div>

              <ButtonSecondary 
                href={`/${currentLang}/kapcsolat`}
                text="Kezdd el" 
                icon="arrow"
                variant="outline-dark"
                size="md"
              />
            </div>
            <!-- Hover Border -->
            <div class="absolute inset-0 border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100 z-0 pointer-events-none"></div>
          </div>

          <!-- Bono 12 Ülés (DESTACADO) -->
          <div class="group relative overflow-hidden rounded-lg bg-red-600 text-white shadow-2xl shadow-red-600/50 transition-all duration-300 hover:-translate-y-2 hover:scale-105">
            <!-- Popular Badge -->
            <div class="absolute right-4 top-4">
              <span class="rounded-full bg-white px-3 py-1 text-xs font-bold uppercase tracking-wider text-red-600">
                Legnépszerűbb
              </span>
            </div>

            <div class="p-6 sm:p-8 text-center">
              <!-- Icon Badge -->
              <div class="mb-6 inline-flex h-16 w-16 sm:h-20 sm:w-20 items-center justify-center rounded-full bg-white text-2xl sm:text-3xl font-black text-red-600">
                12
              </div>
              
              <h3 class="mb-2 text-xl sm:text-2xl font-black uppercase tracking-tight">12 Üléses Bérlet</h3>
              <p class="mb-6 text-xs sm:text-sm text-white/90">Heti 3 edzéshez</p>
              
              <!-- Price -->
              <div class="mb-6 sm:mb-8">
                <span class="text-4xl sm:text-5xl font-black text-white">285€</span>
                <span class="text-base sm:text-lg text-white/80">/hó</span>
              </div>

              <div class="[&>a]:!bg-black [&>a]:!text-white [&>a]:hover:!bg-white [&>a]:hover:!text-black">
                <ButtonPrimary 
                  href={`/${currentLang}/kapcsolat`}
                  text="Cselekedj" 
                  icon="zap"
                  variant="default"
                  size="md"
                />
              </div>
            </div>
          </div>

          <!-- Bono 16 Ülés -->
          <div class="group relative overflow-hidden rounded-lg bg-white text-black transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="p-6 sm:p-8 text-center relative z-10">
              <!-- Icon Badge -->
              <div class="mb-6 inline-flex h-16 w-16 sm:h-20 sm:w-20 items-center justify-center rounded-full bg-black text-2xl sm:text-3xl font-black text-white">
                16
              </div>
              
              <h3 class="mb-2 text-xl sm:text-2xl font-black uppercase tracking-tight">16 Üléses Bérlet</h3>
              <p class="mb-6 text-xs sm:text-sm text-gray-600">Heti 4 edzéshez</p>
              
              <!-- Price -->
              <div class="mb-6 sm:mb-8">
                <span class="text-4xl sm:text-5xl font-black text-red-600">360€</span>
                <span class="text-base sm:text-lg text-gray-600">/hó</span>
              </div>

              <ButtonSecondary 
                href={`/${currentLang}/kapcsolat`}
                text="Alakítsd át" 
                icon="arrow"
                variant="outline-dark"
                size="md"
              />
            </div>
            <!-- Hover Border -->
            <div class="absolute inset-0 border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100 z-0 pointer-events-none"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Training Types Section -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <h2 class="mb-4 text-3xl sm:text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Edzés <span class="text-red-600">Típusok</span>
          </h2>
        </div>

        <div class="grid gap-8 sm:gap-12 md:grid-cols-2">
          <!-- Entrenamiento Individual -->
          <div class="group relative overflow-hidden rounded-lg bg-black p-8 sm:p-10 text-white transition-all duration-300 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="absolute right-4 top-4 text-7xl sm:text-9xl font-black opacity-10">1</div>
            <div class="relative z-10">
              <div class="mb-6 inline-flex h-14 w-14 sm:h-16 sm:w-16 items-center justify-center rounded-full bg-red-600">
                <svg class="h-7 w-7 sm:h-8 sm:w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <h3 class="mb-4 text-xl sm:text-2xl font-black uppercase tracking-tight">Egyéni Edzés</h3>
              <p class="text-sm sm:text-base leading-relaxed text-gray-300">
                Két személyes ülések, ideálisak pároknak vagy barátoknak, akik együtt szeretnének edzeni. Maximum személyre szabott figyelem és alkalmazkodás specifikus céljaidhoz.
              </p>
            </div>
          </div>

          <!-- Entrenamiento Grupal -->
          <div class="group relative overflow-hidden rounded-lg bg-black p-8 sm:p-10 text-white transition-all duration-300 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="absolute right-4 top-4 text-7xl sm:text-9xl font-black opacity-10">2</div>
            <div class="relative z-10">
              <div class="mb-6 inline-flex h-14 w-14 sm:h-16 sm:w-16 items-center justify-center rounded-full bg-red-600">
                <svg class="h-7 w-7 sm:h-8 sm:w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <h3 class="mb-4 text-xl sm:text-2xl font-black uppercase tracking-tight">Csoportos Edzés</h3>
              <p class="text-sm sm:text-base leading-relaxed text-gray-300">
                Dinamikus workshopok 5-10 fős csoportoknak, tökéletesek a munkahelyi környezetben történő jólét előmozdítására. Csoportos motiváció és közös eredmények.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="bg-gray-50 py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <h2 class="mb-4 text-3xl sm:text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Mit <span class="text-red-600">Tartalmaz</span>?
          </h2>
        </div>

        <div class="grid gap-4 sm:gap-6 md:grid-cols-2">
          <div class="flex items-start rounded-lg bg-white p-4 sm:p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-3 sm:mr-4 mt-1 h-6 w-6 sm:h-7 sm:w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 text-sm sm:text-base font-black uppercase text-black">Teljes Fizikai Értékelés</h3>
              <p class="text-xs sm:text-sm text-gray-600">Részletes elemzés jelenlegi fizikai állapotodról és testösszetételedről.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-4 sm:p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-3 sm:mr-4 mt-1 h-6 w-6 sm:h-7 sm:w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 text-sm sm:text-base font-black uppercase text-black">100% Személyre Szabott Terv</h3>
              <p class="text-xs sm:text-sm text-gray-600">Rutin alkalmazkodva céljaidhoz, szintedhez és rendelkezésre állásodhoz.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-4 sm:p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-3 sm:mr-4 mt-1 h-6 w-6 sm:h-7 sm:w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 text-sm sm:text-base font-black uppercase text-black">Folyamatos Követés</h3>
              <p class="text-xs sm:text-sm text-gray-600">Módosítások előrehaladásod és mérhető eredményeid szerint.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-4 sm:p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-3 sm:mr-4 mt-1 h-6 w-6 sm:h-7 sm:w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 text-sm sm:text-base font-black uppercase text-black">Táplálkozási Tanácsadás</h3>
              <p class="text-xs sm:text-sm text-gray-600">Étkezési útmutató fejlődésed optimalizálásához.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-4 sm:p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-3 sm:mr-4 mt-1 h-6 w-6 sm:h-7 sm:w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 text-sm sm:text-base font-black uppercase text-black">WhatsApp Támogatás</h3>
              <p class="text-xs sm:text-sm text-gray-600">Oldj meg kétségeket és kapj motivációt, amikor szükséged van rá.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-4 sm:p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-3 sm:mr-4 mt-1 h-6 w-6 sm:h-7 sm:w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 text-sm sm:text-base font-black uppercase text-black">Rugalmas Időbeosztás</h3>
              <p class="text-xs sm:text-sm text-gray-600">Ülések alkalmazkodva napirendedhez és rendelkezésre állásodhoz.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final Section -->
  <section class="bg-black py-20 sm:py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="mb-4 sm:mb-6 text-4xl sm:text-5xl font-black uppercase tracking-tighter md:text-6xl">
          Van <span class="text-red-600">Kérdésed</span>?
        </h2>
        <p class="mb-6 sm:mb-8 text-base sm:text-lg sm:text-xl text-gray-300">
          Hívj minket vagy látogass meg edzőtermünkben Alicantéban
        </p>

        <!-- Contact Info -->
        <div class="mb-8 sm:mb-12 flex flex-col items-center justify-center gap-4 sm:gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold">+34 673 97 52 52</span>
          </a>

          <a href="https://maps.google.com/?q=Av.+Conrado+Albaladejo+31+Alicante" target="_blank" rel="noopener" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="font-bold">Alicante, Spanyolország</span>
          </a>
        </div>

        <div class="mb-8 sm:mb-12">
          <h3 class="mb-4 text-xs sm:text-sm font-bold uppercase tracking-widest text-gray-400">Nyitvatartás</h3>
          <p class="text-base sm:text-lg">
            <span class="font-bold text-white">Hétfő - Péntek</span> | 10:00 - 14:00; 15:00 - 22:00
          </p>
        </div>

        <div class="flex flex-col items-center justify-center gap-4 sm:gap-6">
          <ButtonPrimary 
            href={`/${currentLang}/kapcsolat`}
            text="Foglald Le Az Ülésedet"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <a
            href={`/${currentLang}/szolgaltatasok`}
            class="inline-flex items-center text-xs sm:text-sm font-bold uppercase tracking-wider text-white transition-all hover:text-red-600"
          >
            Összes Szolgáltatás Megtekintése
            <svg class="ml-2 h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

