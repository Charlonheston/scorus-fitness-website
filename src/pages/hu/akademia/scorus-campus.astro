---
/**
 * Scorus Campus oldal - Magyar verzió
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';

const currentLang = 'hu';
---

<Layout 
  title="Scorus Campus | Scorus Fitness" 
  description="Exkluzív 7 napos intenzív edzési élmény Alicantéban."
>
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/akademia`,
      text: "Vissza az Akadémiához"
    }}
    title="SCORUS CAMPUS"
    subtitle="Exkluzív 7 napos intenzív edzési élmény."
  />

  <!-- Intro Section -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="mb-6 text-3xl sm:text-4xl font-black uppercase text-black md:text-5xl">
          EGY HETES <span class="text-red-600">INTENZÍV ÉLMÉNY</span>
        </h2>
        <p class="text-base sm:text-lg text-gray-700 leading-relaxed">
          A Scorus Campus egy exkluzív 7 napos program, amelyben teljes mértékben elmerülsz az edzés, táplálkozás és wellness világában Alicantéban.
        </p>
      </div>
    </div>
  </section>

  <!-- What You Get Section -->
  <section class="bg-gray-50 py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl px-4">
        <h2 class="mb-12 text-center text-3xl sm:text-4xl font-black uppercase text-black">
          MIT TARTALMAZ?
        </h2>
        <div class="grid gap-6 sm:gap-8 md:grid-cols-2">
          <div class="flex items-start gap-4 rounded-lg bg-white p-6 shadow-md">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="mb-2 text-lg sm:text-xl font-bold text-black">Napi Edzések</h3>
              <p class="text-sm sm:text-base text-gray-600">Intenzív edzési ülések személyes útmutatással</p>
            </div>
          </div>

          <div class="flex items-start gap-4 rounded-lg bg-white p-6 shadow-md">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="mb-2 text-lg sm:text-xl font-bold text-black">Táplálkozási Terv</h3>
              <p class="text-sm sm:text-base text-gray-600">Teljes étkezési terv 7 napra</p>
            </div>
          </div>

          <div class="flex items-start gap-4 rounded-lg bg-white p-6 shadow-md">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="mb-2 text-lg sm:text-xl font-bold text-black">Szállás és Étkezés</h3>
              <p class="text-sm sm:text-base text-gray-600">Privát szállás teljes ellátással</p>
            </div>
          </div>

          <div class="flex items-start gap-4 rounded-lg bg-white p-6 shadow-md">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="mb-2 text-lg sm:text-xl font-bold text-black">Exkluzív Hozzáférés</h3>
              <p class="text-sm sm:text-base text-gray-600">Privát hozzáférés az edzőteremhez</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-black py-20 sm:py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="mb-4 sm:mb-6 text-4xl sm:text-5xl font-black uppercase tracking-tighter md:text-6xl">
          KORLÁTOZOTT <span class="text-red-600">HELYEK</span>
        </h2>
        <p class="mb-6 sm:mb-8 text-base sm:text-lg sm:text-xl text-gray-300">
          Csak 6 hely elérhető programonként. Biztosítsd helyedet most.
        </p>
        
        <ButtonPrimary 
          href={`/${currentLang}/kapcsolat`}
          text="Információ és Foglalás"
          icon="zap"
          size="xl"
          variant="glow"
        />
      </div>
    </div>
  </section>
</Layout>

