---
/**
 * RE-BORN - Premium Black/White/Red Design
 * Programa de transformación integral 12 semanas
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';

const currentLang = 'es';
---

<Layout
  title="Programa RE-BORN | Transformación Integral"
  description="Transformación física y mental completa en 12 semanas. Renace como la mejor versión de ti mismo."
>
  <!-- Header Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/academia`,
      text: "Volver a Academia"
    }}
    title="RE-BORN"
    subtitle="Transformación física y mental completa en 12 semanas. No es solo un programa de entrenamiento, es un proceso de renacimiento integral."
  />

  <!-- Intro Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          Renace Como Tu <span class="text-red-600">Mejor Versión</span>
        </h2>
        <p class="text-lg leading-relaxed text-gray-700">
          <strong>RE-BORN</strong> es un programa intensivo de transformación que combina entrenamiento de alto rendimiento, nutrición optimizada, mentalidad ganadora y hábitos sostenibles. En 12 semanas, alcanzarás resultados que nunca imaginaste posibles.
        </p>
      </div>
    </div>
  </section>

  <!-- Pillars Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">
            Los 4 <span class="text-red-600">Pilares</span>
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
          {[
            {num: "01", title: "Entrenamiento", desc: "Rutinas progresivas de alta intensidad", icon: "M13 10V3L4 14h7v7l9-11h-7z"},
            {num: "02", title: "Nutrición", desc: "Plan personalizado según tus objetivos", icon: "M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"},
            {num: "03", title: "Mentalidad", desc: "Desarrollo de mindset ganador", icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"},
            {num: "04", title: "Hábitos", desc: "Creación de rutinas sostenibles", icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"}
          ].map(pillar => (
            <div class="group relative overflow-hidden rounded-lg bg-white/10 p-8 backdrop-blur-sm transition-all duration-300 hover:bg-white/20">
              <div class="mb-4 text-4xl font-black text-red-600/30">{pillar.num}</div>
              <div class="mb-4 inline-flex h-14 w-14 items-center justify-center rounded-full bg-red-600">
                <svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={pillar.icon}/>
                </svg>
              </div>
              <h3 class="mb-3 text-xl font-black uppercase tracking-tight">{pillar.title}</h3>
              <p class="text-sm text-gray-300">{pillar.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Program Structure -->
  <section class="bg-gray-50 py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Estructura Del <span class="text-red-600">Programa</span>
          </h2>
        </div>

        <div class="grid gap-6 md:grid-cols-3">
          {[
            {phase: "Fase 1", weeks: "Semanas 1-4", title: "Adaptación", desc: "Preparación física, evaluación inicial y creación de base sólida", color: "red"},
            {phase: "Fase 2", weeks: "Semanas 5-8", title: "Progresión", desc: "Aumento de intensidad, optimización nutricional y construcción muscular", color: "red"},
            {phase: "Fase 3", weeks: "Semanas 9-12", title: "Transformación", desc: "Máximo rendimiento, definición final y consolidación de hábitos", color: "red"}
          ].map(phase => (
            <div class="group overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
              <div class="bg-black p-6 text-white">
                <div class="mb-2 text-xs font-bold uppercase tracking-widest text-red-600">{phase.weeks}</div>
                <h3 class="text-2xl font-black uppercase">{phase.phase}</h3>
                <p class="mt-2 text-lg font-bold text-white">{phase.title}</p>
              </div>
              <div class="p-6">
                <p class="text-gray-700">{phase.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            ¿Qué <span class="text-red-600">Incluye</span>?
          </h2>
        </div>

        <div class="grid gap-6 md:grid-cols-2">
          {[
            "Plan de entrenamiento personalizado (12 semanas)",
            "Plan nutricional completo y ajustable",
            "Seguimiento semanal de progreso",
            "Acceso a grupo privado de WhatsApp",
            "Material educativo sobre hábitos",
            "Sesiones de mentalidad y motivación",
            "Evaluaciones físicas mensuales",
            "Soporte continuo 24/7",
            "Certificado de finalización",
            "Acceso a comunidad exclusiva"
          ].map(item => (
            <div class="flex items-start gap-4 rounded-lg border-l-4 border-red-600 bg-gray-50 p-6 transition-all duration-300 hover:bg-gray-100">
              <svg class="mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <p class="font-semibold text-gray-800">{item}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Results Stats -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">
            Resultados <span class="text-red-600">Garantizados</span>
          </h2>
          <p class="text-xl text-gray-300">Si sigues el programa al 100%, obtendrás resultados visibles y medibles</p>
        </div>

        <div class="grid gap-8 md:grid-cols-4">
          {[
            {val: "-8kg", txt: "Grasa Promedio"},
            {val: "+4kg", txt: "Músculo Promedio"},
            {val: "100%", txt: "Compromiso"},
            {val: "12", txt: "Semanas"}
          ].map(stat => (
            <div class="rounded-lg bg-white/10 p-8 text-center backdrop-blur-sm transition-all duration-300 hover:bg-white/20">
              <div class="mb-3 text-5xl font-black text-red-600">{stat.val}</div>
              <p class="text-lg font-bold uppercase tracking-wider">{stat.txt}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gray-50 py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">
          ¿Listo Para <span class="text-red-600">Renacer</span>?
        </h2>
        <p class="mb-8 text-xl text-gray-600">
          Plazas limitadas. Contacta ahora para asegurar tu lugar en la próxima edición
        </p>

        <div class="mb-12 rounded-lg bg-black p-8 text-white">
          <div class="mb-4 text-3xl font-black text-red-600">INVERSIÓN</div>
          <div class="mb-2 text-6xl font-black">997€</div>
          <p class="text-gray-400">Pago único • 12 semanas • Todo incluido</p>
        </div>

        <div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold text-black group-hover:text-red-600">+34 673 97 52 52</span>
          </a>

          <a href={`/${currentLang}/contacto`} class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span class="font-bold text-black group-hover:text-red-600">Formulario de Contacto</span>
          </a>
        </div>

        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contacto`}
            text="Reserva Tu Plaza"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <ButtonSecondary 
            href={`/${currentLang}/academia`}
            text="Ver Otros Programas"
            icon="arrow"
            variant="glass"
            size="xl"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>
