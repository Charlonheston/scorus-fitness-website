// Helper para obtener URL de imagen
function getImageUrl(imgUrl: any): string | null {
  if (!imgUrl) return null;
  if (typeof imgUrl === 'object' && imgUrl.data) {
    const url = imgUrl.data.attributes?.url || imgUrl.data.url;
    return url ? (url.startsWith('http') ? url : `https://scorus-cms-strapi.onrender.com${url}`) : null;
  }
  if (typeof imgUrl === 'object' && imgUrl.attributes) {
    const url = imgUrl.attributes.url;
    return url ? (url.startsWith('http') ? url : `https://scorus-cms-strapi.onrender.com${url}`) : null;
  }
  return null;
}

