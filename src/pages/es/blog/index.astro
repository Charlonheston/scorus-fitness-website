---
/**
 * P치gina de Blog - Lista de Art칤culos
 * Espa침ol - Estilo Netflix Minimalista Fitness
 */

import Layout from '@layouts/Layout.astro';
import { getArticles, type StrapiArticle } from '@lib/strapi';
import { formatDate } from '@lib/utils';

const articles = await getArticles('es');

console.log('游닄 Articles fetched:', articles.length);
console.log('游늶 Sample article:', articles[0]);

// Helper para obtener URL de imagen
function getImageUrl(imgUrl: any): string | null {
  if (!imgUrl) return null;
  if (typeof imgUrl === 'object' && imgUrl.data) {
    const url = imgUrl.data.attributes?.url || imgUrl.data.url;
    return url ? (url.startsWith('http') ? url : `https://scorus-cms-strapi.onrender.com${url}`) : null;
  }
  if (typeof imgUrl === 'object' && imgUrl.attributes) {
    const url = imgUrl.attributes.url;
    return url ? (url.startsWith('http') ? url : `https://scorus-cms-strapi.onrender.com${url}`) : null;
  }
  return null;
}

const currentLang = 'es';
---

<Layout
  title="Blog | Scorus Fitness"
  description="Art칤culos sobre fitness, nutrici칩n y entrenamiento"
>
  <!-- Hero Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="mb-6 text-5xl font-black uppercase tracking-tighter md:text-6xl">
          Blog <span class="text-red-600">Scorus</span>
        </h1>
        <p class="text-xl text-gray-300">
          Descubre los 칰ltimos art칤culos sobre fitness, nutrici칩n y entrenamiento
        </p>
      </div>
    </div>
  </section>

  <!-- Articles Grid - Netflix Style -->
  <section class="bg-gradient-to-b from-gray-50 to-white py-16">
    <div class="container">
      {articles.length === 0 ? (
        <div class="py-20 text-center">
          <p class="text-xl text-gray-500">No hay art칤culos disponibles todav칤a.</p>
          <p class="mt-4 text-sm text-gray-600">Art칤culos encontrados: {articles.length}</p>
        </div>
      ) : (
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 auto-rows-fr">
          {articles.map((article, index) => {
            console.log(`Processing article ${index}:`, article?.attributes?.title);
            
            if (!article?.attributes?.title || !article?.attributes?.slug) {
              console.warn(`Article ${index} skipped:`, { 
                hasTitle: !!article?.attributes?.title, 
                hasSlug: !!article?.attributes?.slug 
              });
              return null;
            }

            const publishedDate = article.attributes.date 
              ? new Date(article.attributes.date)
              : (article.attributes.publishedAt 
                  ? new Date(article.attributes.publishedAt)
                  : new Date(article.attributes.createdAt));
            
            const imageUrl = getImageUrl(article.attributes.imgUrl);
            const excerpt = article.attributes.excerpt || '';
            const categories = article.attributes.categories?.data || [];
            const tags = article.attributes.tags?.data || [];
            const author = article.attributes.author?.data;
            
            return (
              <article class="group relative overflow-hidden h-full min-h-[650px] max-h-[750px] w-full min-w-[320px] max-w-[450px] mx-auto rounded-2xl bg-white shadow-xl transition-all duration-500 hover:shadow-2xl hover:shadow-red-600/20 hover:-translate-y-3 flex flex-col">
                {/* Imagen de fondo Netflix-style */}
                {imageUrl ? (
                  <div class="absolute inset-0 z-0">
                    <img 
                      src={imageUrl} 
                      alt={article.attributes.imageAlt || article.attributes.title}
                      class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
                      loading="lazy"
                      decoding="async"
                    />
                    {/* Overlay gradiente m치s fuerte para mejor contraste */}
                    <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/85 to-black/95"></div>
                    {/* Overlay rojo sutil al hover */}
                    <div class="absolute inset-0 bg-gradient-to-b from-red-600/0 via-red-600/0 to-red-600/0 transition-all duration-500 group-hover:from-red-600/20 group-hover:via-red-600/30 group-hover:to-red-600/40"></div>
                  </div>
                ) : (
                  <div class="absolute inset-0 z-0 bg-gradient-to-br from-gray-800 to-black"></div>
                )}
                
                {/* Contenido con mejor contraste */}
                <div class="relative z-10 flex flex-col h-full p-8">
                  {/* Header con categor칤as - secci칩n flexible */}
                  <div class="flex-shrink-0">
                    {/* Categor칤as */}
                    {categories.length > 0 && (
                      <div class="mb-4 flex flex-wrap gap-2">
                        {categories.slice(0, 2).map((category) => (
                          <span 
                            class="inline-flex items-center gap-1.5 rounded-full bg-red-600 px-4 py-1.5 text-xs font-black uppercase tracking-wider text-white shadow-lg backdrop-blur-md border border-white/20"
                            style={category.attributes?.color ? `background-color: ${category.attributes.color}` : ''}
                          >
                            {category.attributes?.icon && <span class="text-sm">{category.attributes.icon}</span>}
                            {category.attributes?.name || category.name}
                          </span>
                        ))}
                      </div>
                    )}
                    
                    {/* Fecha */}
                    <time class="mb-3 block text-xs font-bold uppercase tracking-widest text-gray-300">
                      {formatDate(publishedDate, 'es-ES')}
                    </time>
                    
                    {/* T칤tulo con sombra para mejor legibilidad */}
                    <h2 class="mb-4 text-2xl md:text-3xl font-black uppercase leading-tight tracking-tighter text-white drop-shadow-2xl transition-all duration-300 group-hover:text-red-400 group-hover:drop-shadow-[0_0_20px_rgba(220,38,38,0.5)]">
                      {article.attributes.title}
                    </h2>
                    
                    {/* Excerpt - altura din치mica */}
                    {excerpt && (
                      <p class="mb-4 line-clamp-3 text-sm leading-relaxed text-gray-200 drop-shadow-lg">
                        {excerpt}
                      </p>
                    )}
                  </div>
                  
                  {/* Espaciador flexible que empuja el footer hacia abajo */}
                  <div class="flex-grow min-h-[20px]"></div>
                  
                  {/* Footer con tags nube y autor - siempre en el fondo */}
                  <div class="flex-shrink-0 space-y-3 pt-2">
                    {/* Tags estilo nube */}
                    {tags.length > 0 && (
                      <div class="flex flex-wrap gap-2">
                        {tags.map((tag) => (
                          <span class="group/tag inline-flex items-center gap-1 rounded-full bg-white/20 backdrop-blur-md px-3 py-1.5 text-xs font-semibold text-white transition-all duration-300 hover:bg-red-600 hover:scale-110 hover:shadow-lg border border-white/30">
                            <svg class="h-3 w-3 opacity-70 group-hover/tag:opacity-100" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                            </svg>
                            {tag.attributes?.name || tag.name}
                          </span>
                        ))}
                      </div>
                    )}
                    
                    {/* Autor con mejor visibilidad */}
                    {author && (
                      <div class="flex items-center gap-3 rounded-lg bg-white/10 backdrop-blur-md p-3 border border-white/20">
                        {author.attributes?.avatar?.data && (
                          <img 
                            src={getImageUrl(author.attributes.avatar) || ''} 
                            alt={author.attributes.name}
                            class="h-12 w-12 rounded-full object-cover ring-2 ring-red-600 ring-offset-2 ring-offset-black/50 shadow-lg flex-shrink-0"
                            loading="lazy"
                          />
                        )}
                        <div class="flex-1 min-w-0">
                          <p class="text-sm font-black uppercase tracking-wider text-white drop-shadow-lg truncate">
                            {author.attributes?.name || author.name}
                          </p>
                          {author.attributes?.title && (
                            <p class="text-xs font-semibold text-gray-300 mt-0.5 truncate">{author.attributes.title}</p>
                          )}
                        </div>
                      </div>
                    )}
                    
                    {/* CTA mejorado - siempre en la misma posici칩n */}
                    <div class="flex items-center justify-center gap-2 rounded-lg bg-red-600 px-6 py-3 text-sm font-black uppercase tracking-wider text-white shadow-lg transition-all duration-300 group-hover:bg-white group-hover:text-red-600 group-hover:scale-105 group-hover:shadow-xl group-hover:shadow-red-600/50">
                      Leer art칤culo
                      <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    </div>
                  </div>
                </div>
                
                {/* Link overlay */}
                <a href={`/es/blog/${article.attributes.slug}`} class="absolute inset-0 z-20" aria-label={`Leer art칤culo: ${article.attributes.title}`}></a>
              </article>
            );
          })}
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Asegurar que todos los cards tengan la misma altura */
  .auto-rows-fr > * {
    display: flex;
    flex-direction: column;
  }

  /* Asegurar altura m칤nima consistente en el grid */
  @media (min-width: 768px) {
    .auto-rows-fr {
      grid-auto-rows: 1fr;
    }
  }
</style>
