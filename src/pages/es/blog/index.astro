  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Asegurar que todos los cards tengan la misma altura */
  .auto-rows-fr > * {
    display: flex;
    flex-direction: column;
  }

  /* Asegurar altura m칤nima consistente en el grid */
  @media (min-width: 768px) {
