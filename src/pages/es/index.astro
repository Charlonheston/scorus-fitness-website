---
/**
 * Página de inicio en español - Diseño Premium con Negro, Blanco y Rojo
 * Scorus Fitness - Landing page principal
 */

import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';

// Importar imágenes
import heroImage from '../../../public/images/hero/bernat-hero.jpg';
import aboutImage from '../../../public/images/about/bernat-about.jpg';

const services = [
  {
    title: 'Entrenamiento Personal',
    description: 'Programas personalizados que transforman tu cuerpo y mente.',
    iconType: 'dumbbell',
    href: '/es/servicios/entrenamiento-personal',
  },
  {
    title: 'Consultoría Online',
    description: 'Asesoramiento profesional sin importar donde estés.',
    iconType: 'monitor',
    href: '/es/servicios/consultoria-online',
  },
  {
    title: 'Scorus Campus',
    description: 'Formación profesional en culturismo de alto nivel.',
    iconType: 'graduation-cap',
    href: '/es/academia/scorus-campus',
  },
  {
    title: 'Programa RE-BORN',
    description: 'Transformación radical en 12 semanas intensivas.',
    iconType: 'zap',
    href: '/es/academia/re-born',
  },
];

const stats = [
  { value: '15+', label: 'Años de Experiencia' },
  { value: '500+', label: 'Clientes Transformados' },
  { value: '50+', label: 'Competiciones Ganadas' },
  { value: '100%', label: 'Dedicación Total' },
];
---

<Layout
  title="Scorus Fitness | Entrenamiento Personal en Alicante"
  description="Centro de entrenamiento personal y gimnasio en Alicante. Transformación física con programas personalizados, RE-BORN y Scorus Campus. Bernat Scorus, culturista profesional."
>
  <!-- Hero Section - Impactante con imagen de fondo -->
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden bg-black">
    <!-- Hero Background Image con overlay -->
    <div class="absolute inset-0">
      <Image
        src={heroImage}
        alt="Bernat Scorus - Entrenamiento Personal"
        class="h-full w-full object-cover"
        widths={[640, 768, 1024, 1280, 1536, 1920]}
        sizes="100vw"
        quality={80}
        loading="eager"
        decoding="async"
      />
      <!-- Overlay oscuro para legibilidad del texto -->
      <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/70 to-black/80"></div>
    </div>
    
    <!-- Red Accent Lines -->
    <div class="absolute left-0 top-1/4 h-1 w-32 bg-gradient-to-r from-red-600 to-transparent"></div>
    <div class="absolute right-0 top-2/3 h-1 w-32 bg-gradient-to-l from-red-600 to-transparent"></div>
    
    <!-- Hero Content - Con padding-top para compensar el header superpuesto -->
    <div class="container relative z-10 py-32 pt-40 text-center">
      <div class="mx-auto max-w-6xl">
        <!-- Tagline -->
        <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Scorus Fitness
          </p>
        </div>
        
        <h1 class="mb-8 text-7xl font-black uppercase leading-[0.9] tracking-tighter text-white md:text-8xl lg:text-9xl">
          TRANSFORMA<br />
          <span class="text-red-600">TU CUERPO</span>
        </h1>
        
        <p class="mx-auto mb-12 max-w-2xl text-xl leading-relaxed text-gray-300 md:text-2xl">
          Entrenamiento de élite. Resultados extraordinarios.<br />
          <span class="text-red-600 font-semibold">Tu transformación empieza aquí.</span>
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <a
            href="/es/contacto"
            class="group relative overflow-hidden bg-red-600 px-12 py-5 text-lg font-bold uppercase tracking-wider text-white transition-all duration-300 hover:bg-red-700 hover:shadow-2xl hover:shadow-red-600/50"
          >
            <span class="relative z-10">Comenzar Ahora</span>
            <div class="absolute inset-0 -z-0 bg-gradient-to-r from-red-700 to-red-600 opacity-0 transition-opacity group-hover:opacity-100"></div>
          </a>
          
          <a
            href="/es/servicios"
            class="border-2 border-white px-12 py-5 text-lg font-bold uppercase tracking-wider text-white transition-all duration-300 hover:border-red-600 hover:bg-red-600"
          >
            Ver Servicios
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="flex flex-col items-center gap-2">
        <span class="text-xs font-semibold uppercase tracking-widest text-gray-400">Scroll</span>
        <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Stats Section - Impactante -->
  <section class="relative bg-black py-24">
    <!-- Red accent top border -->
    <div class="absolute left-0 top-0 h-1 w-full bg-gradient-to-r from-transparent via-red-600 to-transparent"></div>
    
    <div class="container">
      <div class="grid gap-12 md:grid-cols-4">
        {stats.map((stat) => (
          <div class="group text-center">
            <div class="mb-4 text-7xl font-black text-white transition-all group-hover:scale-110 group-hover:text-red-600 md:text-8xl">
              {stat.value}
            </div>
            <div class="text-sm font-semibold uppercase tracking-widest text-gray-400">{stat.label}</div>
            <!-- Red line -->
            <div class="mx-auto mt-4 h-1 w-12 bg-red-600 opacity-0 transition-all group-hover:w-24 group-hover:opacity-100"></div>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Red accent bottom border -->
    <div class="absolute bottom-0 left-0 h-1 w-full bg-gradient-to-r from-transparent via-red-600 to-transparent"></div>
  </section>

  <!-- Services Section - Grid Moderno -->
  <section class="bg-white py-32">
    <div class="container">
      <div class="mb-20 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Nuestros Servicios
          </p>
        </div>
        <h2 class="text-5xl font-black uppercase tracking-tight text-black md:text-6xl lg:text-7xl">
          CÓMO TE<br />
          <span class="text-red-600">AYUDAMOS</span>
        </h2>
      </div>

      <div class="grid gap-1 bg-black md:grid-cols-2">
        {services.map((service) => (
          <a
            href={service.href}
            class="group relative overflow-hidden bg-white p-12 transition-all duration-500 hover:bg-black md:p-16"
          >
            <!-- Red accent corner -->
            <div class="absolute right-0 top-0 h-24 w-24 bg-red-600 opacity-0 transition-all duration-500 group-hover:opacity-100" style="clip-path: polygon(100% 0, 0 0, 100% 100%)"></div>
            
            <div class="relative z-10">
              <!-- Icon minimalista con efectos hover -->
              <div class="mb-8 inline-flex h-20 w-20 items-center justify-center border-2 border-black transition-all duration-500 group-hover:scale-110 group-hover:border-red-600">
                {service.iconType === 'dumbbell' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-500 group-hover:text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 12h1m16 0h1M5 8V16M19 8v8M9 7v10M15 7v10M6 8h2M16 8h2M6 16h2M16 16h2" />
                  </svg>
                )}
                {service.iconType === 'monitor' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-500 group-hover:text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                )}
                {service.iconType === 'graduation-cap' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-500 group-hover:text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                  </svg>
                )}
                {service.iconType === 'zap' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-500 group-hover:text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
              </div>
              
              <h3 class="mb-4 text-3xl font-black uppercase tracking-tight text-black transition-colors group-hover:text-white md:text-4xl">
                {service.title}
              </h3>
              <p class="mb-6 text-lg leading-relaxed text-gray-600 transition-colors group-hover:text-gray-300">
                {service.description}
              </p>
              
              <!-- Arrow with red accent -->
              <div class="inline-flex items-center gap-3">
                <span class="text-sm font-bold uppercase tracking-wider text-black transition-colors group-hover:text-red-600">
                  Descubrir
                </span>
                <svg class="h-6 w-6 text-red-600 transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section - Split con imagen -->
  <section class="relative bg-black">
    <div class="grid lg:grid-cols-2">
      <!-- Image Side -->
      <div class="relative min-h-[60vh] overflow-hidden bg-gradient-to-br from-gray-900 to-black lg:min-h-screen">
        <!-- Imagen de Bernat -->
        <Image
          src={aboutImage}
          alt="Bernat Scorus - Culturista Profesional"
          class="h-full w-full object-cover object-center"
          widths={[640, 768, 1024, 1280]}
          sizes="(max-width: 1024px) 100vw, 50vw"
          quality={85}
          loading="lazy"
        />
        
        <!-- Overlay sutil para profundidad -->
        <div class="absolute inset-0 bg-gradient-to-r from-black/40 via-transparent to-transparent"></div>
        
        <!-- Red overlay accent -->
        <div class="absolute bottom-0 left-0 h-1 w-full bg-gradient-to-r from-red-600 to-transparent"></div>
      </div>

      <!-- Content Side -->
      <div class="flex items-center px-8 py-24 lg:px-16 lg:py-32">
        <div class="max-w-xl">
          <div class="mb-6 border-l-4 border-red-600 pl-4">
            <p class="text-sm font-bold uppercase tracking-widest text-red-600">
              Sobre Mí
            </p>
          </div>
          
          <h2 class="mb-8 text-5xl font-black uppercase leading-tight text-white lg:text-6xl">
            BERNAT<br />
            <span class="text-red-600">SCORUS</span>
          </h2>
          
          <div class="mb-8 space-y-6 text-lg leading-relaxed text-gray-300">
            <p>
              <span class="font-bold text-white">15 años de experiencia</span> en el mundo del culturismo profesional y el entrenamiento personalizado. He dedicado mi vida a transformar cuerpos y mentes.
            </p>
            <p>
              En <span class="font-bold text-red-600">Scorus Fitness</span>, combino ciencia, pasión y resultados comprobados. Cada cliente es único, cada programa está diseñado para garantizar tu éxito.
            </p>
          </div>
          
          <a
            href="/es/biografia"
            class="group inline-flex items-center gap-3 border-b-2 border-red-600 pb-2 text-sm font-bold uppercase tracking-wider text-white transition-all hover:border-white"
          >
            Conoce Mi Historia
            <svg class="h-5 w-5 text-red-600 transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final - Impactante -->
  <section class="relative overflow-hidden bg-red-600 py-32">
    <!-- Pattern overlay -->
    <div class="absolute inset-0 opacity-10" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(0,0,0,.1) 10px, rgba(0,0,0,.1) 20px);"></div>
    
    <div class="container relative z-10">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-12 text-6xl font-black uppercase leading-[0.9] tracking-tighter text-white md:text-7xl lg:text-8xl">
          EMPIEZA TU<br />
          TRANSFORMACIÓN<br />
          <span class="text-black">HOY MISMO</span>
        </h2>
        
        <a
          href="/es/contacto"
          class="inline-flex items-center gap-3 border-4 border-white bg-white px-16 py-6 text-xl font-black uppercase tracking-wider text-black transition-all duration-300 hover:bg-black hover:text-white"
        >
          Contactar
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Animaciones personalizadas */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
