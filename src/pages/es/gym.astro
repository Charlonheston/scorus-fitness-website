---
/**
 * Scorus GYM - Premium Black/White/Red Design con Galería
 */

import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import FAQs from '@components/faq/FAQs.astro';
import FAQSchema from '@components/faq/FAQSchema.astro';
import { faqsGym } from '@data/faqs';
import { getImageGallerySchema } from '@lib/schema';

// Import hero image
import gym01 from '../../../public/images/gym/gym-01.jpg';

const currentLang = 'es';

const gymImages = [
  { src: '/images/gym/gym-01.jpg', alt: 'Scorus Fitness - Vista principal del gimnasio' },
  { src: '/images/gym/gym-02.jpg', alt: 'Scorus Fitness - Vista amplia de instalaciones' },
  { src: '/images/gym/gym-03.jpg', alt: 'Scorus Fitness - Zona de máquinas con espejos' },
  { src: '/images/gym/gym-04.jpg', alt: 'Scorus Fitness - Área de pesas libres' },
  { src: '/images/gym/gym-05.jpg', alt: 'Scorus Fitness - Equipamiento profesional' },
];

// ImageGallery Schema para SEO
const imageGallerySchema = getImageGallerySchema(
  gymImages.map(img => ({
    url: img.src,
    caption: img.alt,
    description: img.alt,
  }))
);
---

<Layout
  title="Scorus GYM | Entrenamiento en Alicante"
  description="Gimnasio boutique exclusivo en Alicante para culturismo y entrenamiento personalizado. Equipamiento profesional, ambiente privado y tu propia música. Tu espacio, tu ritmo, tus resultados."
>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden bg-black">
    <div class="absolute inset-0">
      <Image 
        src={gym01}
        alt="Scorus GYM" 
        class="h-full w-full object-cover opacity-40"
        loading="eager"
      />
    </div>
    
    <div class="container relative z-10 py-32">
      <div class="max-w-4xl text-white">
        <h1 class="mb-8 text-5xl font-black uppercase leading-[1.1] tracking-tighter md:text-6xl lg:text-7xl">
          SCORUS <span class="text-red-600">GYM</span>
        </h1>
        <p class="mb-12 max-w-2xl text-xl leading-relaxed text-gray-200 md:text-2xl">
          Tu espacio. Tu ritmo. Tu música. Entrenamiento personalizado en instalaciones premium.
        </p>
        <div class="flex flex-col gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contacto`}
            text="Reservar Sesión"
            icon="zap"
            size="xl"
            variant="glow"
          />
          <ButtonSecondary 
            href={`/${currentLang}/servicios/entrenamiento-personal`}
            text="Ver Servicios"
            icon="arrow"
            variant="glass"
            size="xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-3xl font-black uppercase tracking-tighter text-black sm:text-4xl md:text-5xl lg:text-6xl">
          Un Gimnasio <span class="text-red-600">Diferente</span>
        </h2>
        <div class="space-y-6 text-lg leading-relaxed text-gray-700">
          <p>
            <strong>Scorus GYM</strong> no es un gimnasio convencional. Es un espacio diseñado para personas que buscan resultados reales con atención personalizada.
          </p>
          <p>
            Instalaciones boutique con equipamiento de última generación, ambiente motivador y la experiencia de más de 15 años en el sector del culturismo profesional.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-gray-50 py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            ¿Por Qué <span class="text-red-600">Scorus GYM</span>?
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {[
            {title: "Equipamiento Premium", desc: "Máquinas y equipos de última generación para máximo rendimiento", icon: "M13 10V3L4 14h7v7l9-11h-7z"},
            {title: "Atención Personalizada", desc: "Seguimiento individualizado y planes adaptados a tus objetivos", icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"},
            {title: "Ambiente Motivador", desc: "Espacio diseñado para inspirarte y dar lo mejor de ti", icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"},
            {title: "Horarios Flexibles", desc: "Sesiones adaptadas a tu disponibilidad y agenda", icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"},
            {title: "Música A Tu Gusto", desc: "Entrena con la música que te motiva", icon: "M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"},
            {title: "Experiencia Profesional", desc: "+15 años en culturismo y entrenamiento de alto rendimiento", icon: "M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"}
          ].map(feature => (
            <div class="group rounded-lg bg-white p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-black transition-all duration-300 group-hover:bg-red-600">
                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon}/>
                </svg>
              </div>
              <h3 class="mb-3 text-xl font-black uppercase text-black">{feature.title}</h3>
              <p class="text-sm leading-relaxed text-gray-600">{feature.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section - Diseño Vanguardista Inspirado en Scorus Campus -->
  <section class="bg-black py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-20 text-center">
        <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-white md:text-5xl">
          Nuestras <span class="text-red-600">Instalaciones</span>
        </h2>
        <p class="text-xl text-gray-400">Diseñadas para inspirar y potenciar tu entrenamiento</p>
      </div>
      
        <!-- Grid Mosaico Moderno: 2 grandes arriba + 3 medianas abajo -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Primera fila: 2 imágenes grandes -->
          <div class="group relative h-[400px] md:h-[450px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-2xl hover:shadow-red-600/30">
            <picture>
              <source srcset="/images/gym/gym-01.webp" type="image/webp">
              <img src="/images/gym/gym-01.jpg" alt="Scorus Fitness - Vista principal del gimnasio" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
            </picture>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <p class="text-sm font-bold uppercase tracking-wider text-white">Vista Principal</p>
              </div>
            </div>
          </div>

          <div class="group relative h-[400px] md:h-[450px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-2xl hover:shadow-red-600/30">
            <picture>
              <source srcset="/images/gym/gym-02.webp" type="image/webp">
              <img src="/images/gym/gym-02.jpg" alt="Scorus Fitness - Vista amplia de instalaciones" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
            </picture>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <p class="text-sm font-bold uppercase tracking-wider text-white">Vista Amplia</p>
              </div>
            </div>
          </div>

          <!-- Segunda fila: 3 imágenes medianas -->
          <div class="md:col-span-2">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div class="group relative h-[280px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-xl hover:shadow-red-600/20">
                <picture>
                  <source srcset="/images/gym/gym-03.webp" type="image/webp">
                  <img src="/images/gym/gym-03.jpg" alt="Scorus Fitness - Zona de máquinas con espejos" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
                </picture>
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <p class="text-xs font-bold uppercase tracking-wider text-white">Zona de Máquinas</p>
                  </div>
                </div>
              </div>

              <div class="group relative h-[280px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-xl hover:shadow-red-600/20">
                <picture>
                  <source srcset="/images/gym/gym-04.webp" type="image/webp">
                  <img src="/images/gym/gym-04.jpg" alt="Scorus Fitness - Área de pesas libres" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
                </picture>
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <p class="text-xs font-bold uppercase tracking-wider text-white">Pesas Libres</p>
                  </div>
                </div>
              </div>

              <div class="group relative h-[280px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-xl hover:shadow-red-600/20">
                <picture>
                  <source srcset="/images/gym/gym-05.webp" type="image/webp">
                  <img src="/images/gym/gym-05.jpg" alt="Scorus Fitness - Equipamiento profesional" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
                </picture>
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <p class="text-xs font-bold uppercase tracking-wider text-white">Equipamiento Profesional</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Elemento decorativo inferior -->
        <div class="mt-16 pt-12 border-t border-gray-800">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div>
              <div class="text-4xl font-black text-red-600 mb-2">+120m²</div>
              <p class="text-sm text-gray-400 uppercase tracking-wider">Espacio de entrenamiento</p>
            </div>
            <div>
              <div class="text-4xl font-black text-red-600 mb-2">Premium</div>
              <p class="text-sm text-gray-400 uppercase tracking-wider">Equipamiento profesional</p>
            </div>
            <div>
              <div class="text-4xl font-black text-red-600 mb-2">100%</div>
              <p class="text-sm text-gray-400 uppercase tracking-wider">Personalizado</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Visítanos
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          SCORUS GYM<br />
          <span class="text-red-600">ALICANTE</span>
        </h2>
      </div>

      <div class="grid gap-8 lg:grid-cols-2">
        {/* Información de Contacto */}
        <div class="flex flex-col justify-center space-y-8 rounded-2xl bg-black p-8 text-white lg:p-12">
          <div>
            <h3 class="mb-6 text-3xl font-black uppercase tracking-tight">
              TU TRANSFORMACIÓN<br />
              <span class="text-red-600">EMPIEZA AQUÍ</span>
            </h3>
            <p class="text-lg text-gray-300">
              Centro de entrenamiento personal de élite en Alicante. Ven y descubre cómo podemos ayudarte a alcanzar tus objetivos.
            </p>
          </div>

          {/* Dirección */}
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Dirección</h4>
                <p class="text-gray-300">Av. Conrado Albaladejo, 31<br />03540 Alicante, España</p>
              </div>
        </div>
        
            {/* Teléfono */}
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Teléfono</h4>
                <a href="tel:+34673975252" class="text-gray-300 transition-colors hover:text-white">+34 673 97 52 52</a>
              </div>
            </div>

            {/* Email */}
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Email</h4>
                <a href="mailto:info@scorusfitness.com" class="text-gray-300 transition-colors hover:text-white">info@scorusfitness.com</a>
              </div>
            </div>

            {/* Horario */}
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Horario</h4>
                <p class="text-gray-300">Lunes - Viernes: 10:00 - 14:00 | 15:00 - 22:00</p>
              </div>
            </div>
          </div>

          <div class="pt-4">
        <ButtonPrimary 
          href={`/${currentLang}/contacto`}
              text="Solicita Información"
          icon="zap"
              size="lg"
          variant="glow"
        />
          </div>
        </div>

        {/* Mapa */}
        <div class="relative min-h-[500px] overflow-hidden rounded-2xl shadow-2xl lg:min-h-[600px]">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6254.759686256192!2d-0.4262063230456152!3d38.386465576687634!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd6239c8af9c4d8b%3A0x8c2ce624b4b83c7a!2sEntrenador%20Personal%20en%20Alicante%20-%20ScorusFitness!5e0!3m2!1ses!2ses!4v1761756712352!5m2!1ses!2ses" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="absolute inset-0"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gray-50 py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">
          ¿Listo Para <span class="text-red-600">Empezar</span>?
        </h2>
        <p class="mb-12 text-xl text-gray-600">
          Ven a conocer nuestras instalaciones y descubre cómo podemos ayudarte a alcanzar tus objetivos
        </p>

        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contacto`}
            text="Reservar Visita"
            icon="zap"
            size="lg"
            variant="glow"
          />
          
          <ButtonSecondary 
            href={`/${currentLang}/servicios/entrenamiento-personal`}
            text="Ver Servicios"
            icon="arrow"
            variant="outline"
            size="lg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <FAQs 
    faqs={faqsGym}
    title="Preguntas Frecuentes sobre Scorus GYM"
    subtitle="Conoce más sobre nuestras instalaciones y servicios exclusivos"
  />

  <!-- FAQPage Schema for SEO -->
  <FAQSchema faqs={faqsGym} />

  <!-- ImageGallery Schema for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(imageGallerySchema)} />

</Layout>

