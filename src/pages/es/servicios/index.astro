---
/**
 * Page Servicios - Diseño Premium Negro/Blanco/Rojo
 * Página de índice de servicios en español con componentes reutilizables
 */

import Layout from '@/layouts/Layout.astro';
import ServicesPageHeader from '@components/sections/ServicesPageHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import Breadcrumbs from '@components/ui/Breadcrumbs.astro';
import { getServiceSchema } from '@lib/schema';
import FAQs from '@components/faq/FAQs.astro';
import FAQSchema from '@components/faq/FAQSchema.astro';
import { faqsServiciosIndex } from '@data/faqs';

const servicesData = {
  seo: {
    title: "Servicios de Entrenamiento Personal y Fitness | Scorus Fitness Alicante",
    description: "Servicios profesionales de entrenamiento personal, consultoría online, talleres, cursos de vídeo y seminarios. Transformación física y mental con metodologías probadas por un campeón mundial.",
    keywords: [
      'entrenamiento personal',
      'consultoría fitness',
      'asesoramiento online',
      'gimnasio Alicante',
      'entrenador personal Alicante',
      'coaching fitness',
      'transformación física',
      'scorus campus',
    ],
  },
  header: {
    tagline: "Scorus Fitness",
    title: "TRANSFORMA TU VIDA CON",
    titleHighlight: "NUESTROS SERVICIOS",
    subtitle: "Cada servicio está diseñado para maximizar tu potencial físico y mental. Metodologías probadas, apoyo profesional y resultados garantizados."
  },
  services: [
    {
      title: 'Entrenamiento Personal',
      href: '/es/servicios/entrenamiento-personal',
      iconType: 'dumbbell',
      description: 'Programas de entrenamiento completamente personalizados y adaptados a tus objetivos específicos.',
      features: [
        'Evaluación inicial completa',
        'Plan personalizado para ti',
        'Seguimiento continuo y ajustes',
        'Resultados medibles'
      ],
    },
    {
      title: 'Consultoría Online',
      href: '/es/servicios/consultoria-online',
      iconType: 'video',
      description: 'Asesoramiento profesional mediante videollamadas para resolver tus dudas específicas.',
      features: [
        'Sesiones de consulta personalizadas',
        'Resolución de dudas en tiempo real',
        'Plan de acción específico',
        'Seguimiento post-consulta'
      ],
    },
    {
      title: 'Asesoramiento Online',
      href: '/es/servicios/asesoramiento-online',
      iconType: 'laptop',
      description: 'Sistema completo de coaching online con seguimiento continuo y soporte 24/7.',
      features: [
        'Plan de entrenamiento personalizado',
        'Plan nutricional adaptado',
        'Seguimiento semanal',
        'Apoyo continuo 24/7'
      ],
    },
    {
      title: 'Scorus Campus',
      href: '/es/academia/scorus-campus',
      iconType: 'graduation',
      description: 'Experiencia exclusiva de entrenamiento intensivo de 7 días en nuestro gimnasio.',
      features: [
        'Entrenamiento presencial intensivo',
        'Alojamiento incluido',
        'Plan nutricional completo',
        'Certificación de asistencia'
      ],
    },
  ]
};
---

<Layout
  title={servicesData.seo.title}
  description={servicesData.seo.description}
>
  <!-- Header Section -->
  <ServicesPageHeader {...servicesData.header} />

  <!-- Breadcrumbs -->
  <div class="container pt-8">
    <Breadcrumbs 
      items={[{ name: 'Servicios', url: '/es/servicios' }]} 
      currentLang="es" 
    />
  </div>

  <!-- Services Grid Section -->
  <section class="bg-white py-24">
    <div class="container">
      <!-- Section Title -->
      <div class="mb-16 text-center">
        <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
          Explora <span class="text-red-600">Nuestros Servicios</span>
        </h2>
        <p class="mx-auto max-w-2xl text-lg text-gray-600">
          Encuentra el programa perfecto para alcanzar tus objetivos
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {servicesData.services.map((service) => (
          <div class="group relative overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
            <!-- Service Card -->
            <div class="p-8">
              <!-- Icon -->
              <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-lg bg-black transition-all duration-300 group-hover:bg-red-600">
                {service.iconType === 'dumbbell' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7 16V8m10 8V8M3 12h2m14 0h2M5 8h14M5 16h14"/>
                  </svg>
                )}
                {service.iconType === 'laptop' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                )}
                {service.iconType === 'users' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                )}
                {service.iconType === 'video' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                )}
                {service.iconType === 'presentation' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                  </svg>
                )}
                {service.iconType === 'graduation' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                  </svg>
                )}
              </div>

              <!-- Title -->
              <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-black">
                {service.title}
              </h3>

              <!-- Description -->
              <p class="mb-6 leading-relaxed text-gray-600">
                {service.description}
              </p>

              <!-- Features List -->
              <ul class="mb-8 space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-start text-sm text-gray-700">
                    <svg class="mr-2 mt-0.5 h-5 w-5 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              <!-- CTA Link Button -->
              <a
                href={service.href}
                class="group/link inline-flex items-center text-sm font-bold uppercase tracking-wider text-black transition-all hover:text-red-600"
              >
                Más Información
                <svg class="ml-2 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>

            <!-- Hover Border Effect -->
            <div class="pointer-events-none absolute inset-0 border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">
            ¿Por Qué <span class="text-red-600">Scorus Fitness</span>?
          </h2>
          <p class="text-lg text-gray-400">
            Más de 20 años de experiencia transformando vidas
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">Resultados Garantizados</h3>
            <p class="text-gray-400">Metodología probada con resultados reales y medibles</p>
          </div>

          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">100% Personalizado</h3>
            <p class="text-gray-400">Cada programa se adapta a tus necesidades únicas</p>
          </div>

          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">Apoyo Constante</h3>
            <p class="text-gray-400">Acompañamiento continuo en cada etapa de tu transformación</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-3xl font-black uppercase tracking-tighter text-black sm:text-4xl md:text-5xl lg:text-6xl">
          ¿Listo Para <span class="text-red-600">Transformarte</span>?
        </h2>
        <p class="mb-12 text-xl text-gray-600">
          No esperes más. Tu mejor versión te está esperando. Agenda una consulta gratuita y descubre cómo podemos ayudarte.
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href="/es/contacto" 
            text="Consulta" 
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <a
            href="/es/biografia"
            class="inline-flex items-center text-sm font-bold uppercase tracking-wider text-black transition-all hover:text-red-600"
          >
            Sobre Bernat
            <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
