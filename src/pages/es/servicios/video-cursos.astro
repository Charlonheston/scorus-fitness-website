---
/**
 * Página de Video Cursos - Diseño Netflix
 * Spanish video courses page with Netflix-style design
 */

import Layout from '@/layouts/Layout.astro';
import VideoCourseCarousel from '@/components/sections/VideoCourseCarousel.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import CTAFinal from '@components/sections/CTAFinal.astro';

const coursesData = {
  seo: {
    title: "Video Cursos Online | Scorus Fitness",
    description: "Acceso a video cursos online de entrenamiento y nutrición. Aprende a tu ritmo con contenido de calidad 100% en video y material extra incluido."
  },
  courses: [
    {
      id: 'nutrition',
      title: 'Nutrición y Alimentación',
      description: 'Aprende a estructurar tu dieta y calcular macronutrientes para lograr tus objetivos físicos.',
      icon: 'nutrition',
      color: 'from-emerald-600 to-teal-600'
    },
    {
      id: 'supplement',
      title: 'Suplementación Inteligente',
      description: 'Descubre qué suplementos realmente funcionan y cómo implementarlos en tu rutina.',
      icon: 'supplement',
      color: 'from-blue-600 to-cyan-600'
    },
    {
      id: 'training',
      title: 'Entrenamiento Estructurado',
      description: 'Rutinas de musculación, fuerza y resistencia diseñadas por expertos.',
      icon: 'training',
      color: 'from-red-600 to-pink-600'
    },
    {
      id: 'antiaging',
      title: 'Antiaging y Salud Óptima',
      description: 'Estrategias para ralentizar el envejecimiento y mejorar la calidad de vida.',
      icon: 'antiaging',
      color: 'from-purple-600 to-violet-600'
    },
    {
      id: 'cardio',
      title: 'Cardio y Quema de Grasa',
      description: 'Métodos eficaces para mejorar resistencia y perder grasa de forma sostenible.',
      icon: 'cardio',
      color: 'from-orange-600 to-red-600'
    },
    {
      id: 'wellness',
      title: 'Prevención y Bienestar',
      description: 'Claves para evitar lesiones y optimizar la longevidad y recuperación.',
      icon: 'wellness',
      color: 'from-indigo-600 to-blue-600'
    }
  ]
};
---

<Layout
  title={coursesData.seo.title}
  description={coursesData.seo.description}
>
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-screen bg-black overflow-hidden flex items-center justify-center pt-32 pb-16">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img src="/images/academia/video-cursos.jpeg" alt="Video Cursos Background" class="h-full w-full object-cover object-center" loading="eager" decoding="async">
    </div>

    <!-- Dark Overlay -->
    <div class="absolute inset-0 z-10 bg-black/60"></div>

    <!-- Background Elements (Gradient Blurs) -->
    <div class="absolute inset-0 z-20 opacity-30">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-red-600 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-600 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-30 container text-center">
      <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
        <p class="text-sm font-bold uppercase tracking-widest text-red-600">
          SCORUS ACADEMY
        </p>
      </div>

      <h1 class="mb-8 text-5xl md:text-7xl font-black uppercase tracking-tighter text-white max-w-4xl mx-auto">
        Video Cursos <span class="text-red-600">Online</span>
      </h1>

      <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        ¿Te gustaría entrenar conmigo pero la distancia lo hace difícil? Accede a mis video cursos y aprende a entrenar y nutrirte como un profesional desde cualquier lugar y en cualquier momento.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <ButtonPrimary 
          href="#cursos" 
          text="Explorar Cursos" 
          icon="zap"
          size="xl"
          variant="glow"
        />
        <a
          href="#como-funciona"
          class="inline-flex items-center gap-3 px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-black transition-all duration-300 rounded-lg font-black uppercase tracking-wider"
        >
          Cómo Funciona
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-16 animate-bounce">
        <svg class="w-6 h-6 text-red-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="bg-white py-20 md:py-32">
    <div class="container">
      <div class="grid md:grid-cols-5 gap-8">
        <!-- Feature 1 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            100% en Video
          </h3>
          <p class="text-gray-600">
            Explicaciones detalladas y prácticas de cada concepto
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-3a6 6 0 11-12 0 6 6 0 0112 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Material Extra
          </h3>
          <p class="text-gray-600">
            Tablas, dietas, recetas y guías en PDF descargables
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Acceso Ilimitado
          </h3>
          <p class="text-gray-600">
            Aprende a tu ritmo, cuando quieras y dónde quieras
          </p>
        </div>

        <!-- Feature 4 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Método Probado
          </h3>
          <p class="text-gray-600">
            Basado en ciencia y experiencia real de 20+ años
          </p>
        </div>

        <!-- Feature 5 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m0 0l-2-1m2 1v2.5M14 4l-2 1m0 0L10 4m2 1v2.5"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Resultados Garantizados
          </h3>
          <p class="text-gray-600">
            Aplica el conocimiento y ve cambios reales
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Courses Carousel Section -->
  <section id="cursos" class="py-4">
    <VideoCourseCarousel 
      title="Nuestros"
      titleHighlight="Video Cursos"
      courses={coursesData.courses}
      nextLabel="Siguiente"
      prevLabel="Anterior"
    />
  </section>

  <!-- How It Works Section -->
  <section id="como-funciona" class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-black mb-4">
          Cómo <span class="text-red-600">Funcionan</span> los Video Cursos
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Un proceso simple pero efectivo para transformar tu conocimiento en resultados
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-12">
        <!-- Step 1 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                1
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Elige tu Curso
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Encuentra el que mejor se adapte a tus objetivos y nivel de experiencia. Tenemos opciones para principiantes hasta avanzados.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 2 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                2
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Accede al Contenido
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Aprende con videos detallados, material extra descargable y recursos complementarios. Todo organizado por módulos.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 3 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                3
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Aplica y Transforma
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Sigue cada paso y aplica lo aprendido en tu vida real. Los resultados llegarán si mantienes la consistencia.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="mt-16 text-center">
        <ButtonPrimary 
          href="#cursos" 
          text="Ver Todos los Cursos" 
          icon="arrow"
          size="lg"
          variant="default"
        />
      </div>
    </div>
  </section>

  <!-- Comparison/Benefits Section -->
  <section class="bg-black py-24 md:py-32 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16 text-center">
          <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter mb-4">
            ¿Por Qué <span class="text-red-600">Video Cursos</span>?
          </h2>
          <p class="text-xl text-gray-400">
            La forma más flexible y accesible de acceder a educación de calidad
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Aprendizaje Flexible</h4>
                <p class="text-gray-400">Estudia a tu ritmo, cuando y donde quieras. Sin horarios fijos.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Contenido Premium</h4>
                <p class="text-gray-400">Acceso a conocimiento exclusivo de profesionales con años de experiencia.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Acceso de Por Vida</h4>
                <p class="text-gray-400">Compra una vez, accede para siempre. Incluyendo actualizaciones futuras.</p>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Comunidad Exclusiva</h4>
                <p class="text-gray-400">Conecta con otros estudiantes y comparte tu progreso en nuestra comunidad.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Certificados</h4>
                <p class="text-gray-400">Obtén certificados de finalización para cada curso completado.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Garantía de Satisfacción</h4>
                <p class="text-gray-400">30 días de garantía de devolución del dinero si no estás satisfecho.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <CTAFinal 
    tagline="¿LISTO PARA COMENZAR?"
    title="Transforma tu"
    titleHighlight="Conocimiento en Resultados"
    address="Av. Conrado Albaladejo, 31 – 03540 Alicante, España"
    cta={{
      text: "Ver Cursos Disponibles",
      href: "#cursos"
    }}
  />
</Layout>
