---
/**
 * Talleres - 10 Talleres Especializados en Culturismo y Fitness
 * Formación intensiva práctica y teórica
 * Diseño moderno y vanguardista 2025-26
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import WorkshopIcon from '@components/ui/WorkshopIcon.astro';

const currentLang = 'es';

type IconType = 'fundamental' | 'nutrition' | 'supplementation' | 'chest' | 'back' | 'shoulders' | 'arms' | 'legs' | 'cardio' | 'planning' | 'building' | 'check' | 'book' | 'profile';

const workshops: Array<{ number: string; title: string; description: string; iconType: IconType; topics: string[] }> = [
  {
    number: '01',
    title: 'ENTRENAMIENTO FUNDAMENTAL',
    description: 'Optimiza tu rutina con la mejor combinación de ejercicios, series y descansos.',
    iconType: 'fundamental',
    topics: ['Periodización', 'Volumen e intensidad', 'Recuperación']
  },
  {
    number: '02',
    title: 'NUTRICIÓN PARA CULTURISMO',
    description: 'Aprende a estructurar tu dieta para ganar músculo o perder grasa.',
    iconType: 'nutrition',
    topics: ['Macronutrientes', 'Periodicidad nutricional', 'Cálculo de calorías']
  },
  {
    number: '03',
    title: 'SUPLEMENTACIÓN INTELIGENTE',
    description: 'Descubre qué suplementos funcionan y cómo usarlos correctamente.',
    iconType: 'supplementation',
    topics: ['Proteínas', 'Creatina', 'Vitaminas y minerales']
  },
  {
    number: '04',
    title: 'PECTORAL Y ABDOMINALES',
    description: 'Técnicas para desarrollar un pecho fuerte y abdominales definidos.',
    iconType: 'chest',
    topics: ['Press de banca', 'Aislamiento', 'Core training']
  },
  {
    number: '05',
    title: 'ESPALDA Y TRAPECIO',
    description: 'Construye una espalda ancha y protege tu columna.',
    iconType: 'back',
    topics: ['Dominadas', 'Remo', 'Espalda ancha']
  },
  {
    number: '06',
    title: 'HOMBROS FUERTES',
    description: 'Ejercicios clave para definir y fortalecer los deltoides.',
    iconType: 'shoulders',
    topics: ['Press militar', 'Laterales', 'Traseros']
  },
  {
    number: '07',
    title: 'BRAZOS Y ANTEBRAZOS',
    description: 'Estrategias para ganar tamaño y fuerza sin lesiones.',
    iconType: 'arms',
    topics: ['Bíceps', 'Tríceps', 'Antebrazo']
  },
  {
    number: '08',
    title: 'PIERNAS SIMÉTRICAS',
    description: 'Desarrollo equilibrado de glúteos, cuádriceps y gemelos.',
    iconType: 'legs',
    topics: ['Sentadillas', 'Extensiones', 'Gemelos']
  },
  {
    number: '09',
    title: 'CARDIO Y QUEMA DE GRASA',
    description: 'Maximiza la pérdida de grasa sin afectar tu musculatura.',
    iconType: 'cardio',
    topics: ['HIIT', 'Cardio estable', 'Composición corporal']
  },
  {
    number: '10',
    title: 'PLANIFICACIÓN DE ENTRENAMIENTOS',
    description: 'Crea rutinas efectivas según tu nivel y objetivos.',
    iconType: 'planning',
    topics: ['Periodización', 'Programación anual', 'Evaluación']
  }
];

const modalities: Array<{ title: string; subtitle: string; features: Array<{ iconType: IconType; text: string }>; highlight: boolean }> = [
  {
    title: 'MODALIDAD PRESENCIAL',
    subtitle: 'En Scorus Gym, Alicante',
    features: [
      { iconType: 'building', text: 'Gimnasio privado con equipamiento profesional' },
      { iconType: 'check', text: 'Correcciones y ajustes en tiempo real' },
      { iconType: 'book', text: 'Teoría y práctica integradas' },
      { iconType: 'profile', text: 'Atención personalizada de Bernat Scorus' }
    ],
    highlight: true
  },
  {
    title: 'MODALIDAD ONLINE',
    subtitle: 'Desde cualquier lugar',
    features: [
      { iconType: 'check', text: 'Videoconferencia en directo' },
      { iconType: 'check', text: 'Acceso ilimitado a grabaciones' },
      { iconType: 'check', text: 'Interacción directa con Bernat' },
      { iconType: 'book', text: 'Material complementario (PDFs y scripts)' }
    ],
    highlight: false
  }
];

const benefits = [
  { title: 'FORMACIÓN ESTRUCTURADA', description: '10 talleres progresivos diseñados para aprendizaje integral' },
  { title: 'EXPERIENCIA DE CAMPEÓN', description: 'Enseñanza de un campeón mundial con 30+ años de experiencia' },
  { title: 'GRUPOS REDUCIDOS', description: 'Atención personalizada y enfoque individualizado' },
  { title: 'CERTIFICADO INCLUIDO', description: 'Diploma oficial tras completar el programa' },
  { title: 'MATERIAL EXCLUSIVO', description: 'Acceso a recursos, guías y demostraciones' },
  { title: 'FLEXIBILIDAD', description: 'Elige entre modalidad presencial u online' }
];
---

<Layout
  title="Talleres Formativos | Scorus Fitness - 10 Talleres Especializados"
  description="10 talleres intensivos en culturismo, nutrición y entrenamiento. Formación presencial u online con Bernat Scorus, campeón mundial de fisicoculturismo."
>
  <!-- Hero Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/servicios`,
      text: "Volver a Servicios"
    }}
    title="TALLERES ESPECIALIZADOS"
    subtitle="10 talleres intensivos diseñados para dominar culturismo, nutrición y entrenamiento. Presencial u online."
    backgroundImage="/images/services/workshops-hero.webp"
  />

  <!-- Intro Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <p class="mb-4 text-sm font-bold uppercase tracking-widest text-red-600">Formación Completa</p>
        <h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          Transforma Tu Físico Y <span class="text-red-600">Tu Conocimiento</span>
        </h2>
        <p class="text-lg leading-relaxed text-gray-700">
          No todo el mundo puede permitirse un servicio continuo de entrenamiento personal, pero todos necesitamos una guía adecuada. Con nuestros <strong>10 Talleres Especializados</strong>, accederás a una formación completa en culturismo y fitness, estructurada en sesiones intensivas donde aprenderás todo sobre <strong>nutrición, suplementación, entrenamiento y desarrollo muscular</strong>.
        </p>
      </div>
    </div>
  </section>

  <!-- Modalities Section - Modern & Elegant -->
  <section class="relative bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-20 text-center">
          <p class="mb-4 text-xs font-bold uppercase tracking-[0.2em] text-red-600">Elige Tu Formato</p>
          <h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
            Dos <span class="text-red-600">Modalidades</span>
          </h2>
          <p class="text-lg text-gray-600">Accede a contenido premium en el formato que mejor se adapte a ti</p>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          {modalities.map((modality, idx) => (
            <div class={`group relative overflow-hidden rounded-lg transition-all duration-500 ${
              modality.highlight 
                ? 'ring-2 ring-red-600 ring-offset-4' 
                : 'border border-gray-200'
            }`}>
              <!-- Background card -->
              <div class={`absolute inset-0 transition-colors duration-500 ${
                modality.highlight
                  ? 'bg-gradient-to-br from-red-50 via-white to-white'
                  : 'bg-white group-hover:bg-gray-50'
              }`}></div>

              <!-- Content -->
              <div class="relative z-10 p-10 md:p-12">
                <!-- Top decorative line -->
                <div class={`mb-8 h-1 w-12 transition-all duration-300 ${
                  modality.highlight
                    ? 'bg-red-600'
                    : 'bg-gray-300 group-hover:bg-red-600'
                }`}></div>

                <!-- Icon with circle background -->
                <div class={`mb-8 inline-flex h-14 w-14 items-center justify-center rounded-full transition-all duration-300 ${
                  modality.highlight
                    ? 'bg-red-100 text-red-600'
                    : 'bg-gray-100 text-gray-600 group-hover:bg-red-100 group-hover:text-red-600'
                }`}>
                  <svg class="h-7 w-7" fill="currentColor" viewBox="0 0 24 24">
                    {modality.highlight ? (
                      <path d="M3 13h2v8H3zm4-8h2v16H7zm4-2h2v18h-2zm4 4h2v14h-2zm4-4h2v18h-2zM2 20h20v2H2z"/>
                    ) : (
                      <path d="M20 3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14l4 4V5c0-1.1-.9-2-2-2zm-2 12h-8v-2h8v2zm0-4h-8V9h8v2z"/>
                    )}
                  </svg>
                </div>

                <!-- Title -->
                <h3 class={`mb-3 text-2xl font-black uppercase tracking-tight transition-colors duration-300 ${
                  modality.highlight ? 'text-black' : 'text-gray-900'
                }`}>
                  {modality.title}
                </h3>

                <!-- Subtitle -->
                <p class={`mb-8 text-sm font-medium transition-colors duration-300 ${
                  modality.highlight ? 'text-gray-700' : 'text-gray-600 group-hover:text-gray-700'
                }`}>
                  {modality.subtitle}
                </p>

                <!-- Divider -->
                <div class={`mb-8 transition-colors duration-300 ${
                  modality.highlight ? 'bg-red-200' : 'bg-gray-200 group-hover:bg-gray-300'
                } h-px`}></div>

                <!-- Features list - Clean & Minimal -->
                <ul class="mb-8 space-y-4">
                  {modality.features.map((feature) => (
                    <li class="flex items-start gap-3 transition-transform duration-300 hover:translate-x-1">
                      <div class={`mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full transition-all duration-300 ${
                        modality.highlight
                          ? 'bg-red-100 text-red-600'
                          : 'bg-gray-100 text-gray-600 group-hover:bg-red-100 group-hover:text-red-600'
                      }`}>
                        <WorkshopIcon type={feature.iconType} size="xs" color="currentColor" />
                      </div>
                      <span class={`pt-0.5 text-sm font-medium transition-colors duration-300 ${
                        modality.highlight
                          ? 'text-gray-700'
                          : 'text-gray-600 group-hover:text-gray-800'
                      }`}>
                        {feature.text}
                      </span>
                    </li>
                  ))}
                </ul>

                <!-- CTA Button -->
                <a
                  href={`/${currentLang}/contacto`}
                  class={`inline-flex w-full items-center justify-center rounded-lg px-6 py-3.5 font-bold uppercase tracking-wider transition-all duration-300 ${
                    modality.highlight
                      ? 'bg-red-600 text-white hover:bg-red-700 hover:shadow-lg hover:shadow-red-600/30'
                      : 'border-2 border-gray-300 text-gray-700 hover:border-red-600 hover:bg-red-50 hover:text-red-600'
                  }`}>
                  Solicitar Información
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Workshops Grid -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <p class="mb-4 text-sm font-bold uppercase tracking-widest text-red-600">Contenido Completo</p>
          <h2 class="text-4xl font-black uppercase tracking-tight md:text-5xl">
            Los 10 <span class="text-red-600">Talleres</span>
          </h2>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {workshops.map((workshop, idx) => (
            <div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gradient-to-br from-gray-900 to-black transition-all duration-300 hover:border-red-600 hover:shadow-lg hover:shadow-red-600/50">
              <!-- Gradient overlay on hover -->
              <div class="absolute inset-0 bg-gradient-to-br from-red-600/0 to-red-600/0 transition-all duration-300 group-hover:from-red-600/10 group-hover:to-red-600/5"></div>
              
              <div class="relative z-10 p-6">
                <!-- Number -->
                <div class="mb-4 flex items-start justify-between">
                  <span class="text-5xl font-black text-red-600/30 group-hover:text-red-600/50">{workshop.number}</span>
                  <div class="h-10 w-10 text-white">
                    <WorkshopIcon type={workshop.iconType} size="lg" color="white" />
                  </div>
                </div>
                
                <!-- Title -->
                <h3 class="mb-3 text-xl font-black uppercase leading-tight">{workshop.title}</h3>
                
                <!-- Description -->
                <p class="mb-6 text-sm leading-relaxed text-gray-400">{workshop.description}</p>
                
                <!-- Topics -->
                <div class="space-y-2">
                  {workshop.topics.map((topic) => (
                    <div class="flex items-center gap-2 text-xs text-gray-500">
                      <div class="h-1 w-1 rounded-full bg-red-600"></div>
                      {topic}
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <p class="mb-4 text-sm font-bold uppercase tracking-widest text-red-600">Ventajas</p>
          <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
            ¿Qué <span class="text-red-600">Incluye</span>?
          </h2>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {benefits.map((benefit) => (
            <div class="group overflow-hidden rounded-lg bg-gray-50 p-8 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
              <div class="mb-3 h-1 w-12 bg-gradient-to-r from-red-600 to-red-400 transition-all duration-300 group-hover:w-full"></div>
              <h3 class="mb-2 text-lg font-black uppercase text-black">{benefit.title}</h3>
              <p class="text-sm text-gray-700">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-black py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter md:text-6xl">
          ¿Listo Para <span class="text-red-600">Formarte</span>?
        </h2>
        <p class="mb-12 text-lg text-gray-400">
          Consulta las próximas fechas y asegura tu plaza. Plazas limitadas para mantener la calidad de la formación.
        </p>

        <!-- Contact Info -->
        <div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-3 transition-all hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold">+34 673 97 52 52</span>
          </a>

          <a href={`/${currentLang}/contacto`} class="group flex items-center gap-3 transition-all hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span class="font-bold">Enviar Mensaje</span>
          </a>
        </div>

        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contacto`}
            text="Consultar Fechas"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <ButtonSecondary 
            href={`/${currentLang}/servicios`}
            text="Ver Otros Servicios"
            icon="arrow"
            variant="glass"
            size="xl"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>
