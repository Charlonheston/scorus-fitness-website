---
/**
 * Page Académie - Design Premium Noir/Blanc/Rouge
 * French academy index page with reusable components
 */

import Layout from '@/layouts/Layout.astro';
import ServicesPageHeader from '@components/sections/ServicesPageHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';

const academyData = {
  seo: {
    title: "Académie | Scorus Fitness",
    description: "Programmes de formation et d'éducation professionnelle en fitness. Ateliers, séminaires, cours vidéo et RE-BORN. Apprenez d'un champion du monde."
  },
  header: {
    tagline: "Scorus Académie",
    title: "FORMATION ET ÉDUCATION",
    titleHighlight: "POUR LES PROFESSIONNELS",
    subtitle: "Programmes de formation intensive conçus pour transformer vos connaissances et votre pratique dans le monde du fitness et de l'entraînement professionnel."
  },
  programs: [
    {
      title: 'Ateliers',
      href: '/fr/services/ateliers',
      iconType: 'users',
      description: '10 ateliers pratiques spécialisés en culturisme et fitness avec des sessions théoriques et pratiques.',
      features: [
        'Formation fondamentale',
        'Nutrition pour le culturisme',
        'Supplémentation intelligente',
        'Techniques d\'entraînement avancées'
      ],
    },
    {
      title: 'Séminaires',
      href: '/fr/academie/seminaires',
      iconType: 'presentation',
      description: '14 séminaires spécialisés en présentiel et en ligne sur l\'entraînement, la nutrition et le bien-être.',
      features: [
        'Modalité présentielle et en ligne',
        'Formation en 3 langues',
        'Matériel audiovisuel inclus',
        'Certificat de présence'
      ],
    },
    {
      title: 'Cours Vidéo',
      href: '/fr/services/cours-video',
      iconType: 'video',
      description: 'Cours en ligne avec du contenu préenregistré de haute qualité pour apprendre à votre rythme.',
      features: [
        'Accès illimité à vie',
        'Matériel téléchargeable',
        'Contenu mis à jour',
        'Communauté exclusive'
      ],
    },
    {
      title: 'RE-BORN',
      href: '/fr/academie/re-born',
      iconType: 'fire',
      description: 'Programme de transformation intégrale physique, mentale et spirituelle pour hommes de 35-55 ans.',
      features: [
        'Transformation complète',
        'Reconstruction personnelle',
        'Accompagnement personnalisé',
        'Résultats garantis'
      ],
    },
  ]
};
---

<Layout
  title={academyData.seo.title}
  description={academyData.seo.description}
>
  <!-- Header Section -->
  <ServicesPageHeader {...academyData.header} />

  <!-- Programs Grid Section -->
  <section class="bg-white py-24">
    <div class="container">
      <!-- Section Title -->
      <div class="mb-16 text-center">
        <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
          Explorez <span class="text-red-600">Nos Programmes</span>
        </h2>
        <p class="mx-auto max-w-2xl text-lg text-gray-600">
          Éducation d'élite pour transformer votre carrière professionnelle
        </p>
      </div>

      <!-- Programs Grid -->
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {academyData.programs.map((program) => (
          <div class="group relative overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
            <!-- Program Card -->
            <div class="p-8">
              <!-- Icon -->
              <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-lg bg-black transition-all duration-300 group-hover:bg-red-600">
                {program.iconType === 'users' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                )}
                {program.iconType === 'presentation' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                  </svg>
                )}
                {program.iconType === 'video' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                )}
                {program.iconType === 'fire' && (
                  <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"/>
                  </svg>
                )}
              </div>

              <!-- Title -->
              <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-black">
                {program.title}
              </h3>

              <!-- Description -->
              <p class="mb-6 leading-relaxed text-gray-600">
                {program.description}
              </p>

              <!-- Features List -->
              <ul class="mb-8 space-y-2">
                {program.features.map((feature) => (
                  <li class="flex items-start text-sm text-gray-700">
                    <svg class="mr-2 mt-0.5 h-5 w-5 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              <!-- CTA Link Button -->
              <a
                href={program.href}
                class="group/link inline-flex items-center text-sm font-bold uppercase tracking-wider text-black transition-all hover:text-red-600"
              >
                Plus D'informations
                <svg class="ml-2 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>

            <!-- Hover Border Effect -->
            <div class="pointer-events-none absolute inset-0 border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Academia Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">
            Pourquoi <span class="text-red-600">Scorus Académie</span>?
          </h2>
          <p class="text-lg text-gray-400">
            Formation d'élite avec un champion du monde
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">Expérience Réelle</h3>
            <p class="text-gray-400">Apprenez d'un champion du monde avec plus de 30 ans d'expérience</p>
          </div>

          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C6.5 6.253 2 10.998 2 17s4.5 10.747 10 10.747c5.5 0 10-4.998 10-10.747S17.5 6.253 12 6.253z"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">Contenu Exclusif</h3>
            <p class="text-gray-400">Méthodologies et techniques prouvées en compétition</p>
          </div>

          <div class="text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold uppercase">Multilingue</h3>
            <p class="text-gray-400">Formation disponible en espagnol, anglais et hongrois</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-3xl font-black uppercase tracking-tighter text-black sm:text-4xl md:text-5xl lg:text-6xl">
          Prêt À <span class="text-red-600">Apprendre</span>?
        </h2>
        <p class="mb-12 text-xl text-gray-600">
          Investissez dans votre formation professionnelle et faites passer votre carrière au niveau supérieur avec l'académie d'un champion du monde.
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href="/fr/contact" 
            text="Plus D'informations" 
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <a
            href="/fr/biographie"
            class="inline-flex items-center text-sm font-bold uppercase tracking-wider text-black transition-all hover:text-red-600"
          >
            À Propos Bernat
            <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
