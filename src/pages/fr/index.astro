---
/**
 * Page d'accueil en français - Design Premium Noir, Blanc et Rouge
 * Scorus Fitness - Page principale
 * Version complète avec tous les modules
 */

import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import ButtonGhost from '@components/ui/ButtonGhost.astro';

// Importer les images
import heroImage from '../../../public/images/hero/bernat-hero.jpg';
import aboutImage from '../../../public/images/about/bernat-about.jpg';
import gymImage from '../../../public/images/gym/gym-01.jpg';

// Obtenir les derniers articles de blog
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const mainServices = [
  {
    title: 'Entraînement Personnel',
    description: 'Apprenez à exécuter les exercices, vous étirer et respirer.',
    cta: 'Transformez-vous maintenant!',
    iconType: 'dumbbell',
    href: '/fr/services/entrainement-personnel',
  },
  {
    title: 'Régimes Personnalisés',
    description: 'Plan nutritionnel sur mesure pour tous types de régimes.',
    cta: 'Découvrez votre plan',
    iconType: 'apple',
    href: '/fr/services',
  },
  {
    title: 'Routines Personnalisées',
    description: 'Programmes d\'entraînement personnalisés et conçus visuellement.',
    cta: 'Préparez-vous physiquement',
    iconType: 'clipboard',
    href: '/fr/services',
  },
  {
    title: 'Consultation en Ligne',
    description: 'Réponses à toutes vos questions.',
    cta: 'Conseils d\'un champion',
    iconType: 'monitor',
    href: '/fr/services/consultation-en-ligne',
  },
];

const features = [
  {
    title: 'Accompagnement',
    description: 'Résolvez tous vos doutes et questions via des appels vidéo individuels ou en groupe',
    iconType: 'users',
  },
  {
    title: 'Entraînement Personnel',
    description: 'Séances adaptées à votre niveau et à votre état physique actuel, quel que soit votre point de départ.',
    iconType: 'target',
  },
  {
    title: 'Nutrition Sur Mesure',
    description: 'Plans alimentaires personnalisés pour tous types de régimes: végétalien, sans gluten, keto, FODMAP et plus.',
    iconType: 'utensils',
  },
];

const programs = [
  {
    title: 'RE-BORN',
    description: 'Transformation complète aux niveaux physique, mental et spirituel.',
    badge: 'Premium',
    iconType: 'zap',
    href: '/fr/academie/re-born',
  },
  {
    title: 'Scorus Campus',
    description: 'Expérience intensive exclusive de 7 jours d\'entraînement.',
    badge: 'Premium',
    iconType: 'graduation-cap',
    href: '/fr/academie/scorus-campus',
  },
  {
    title: 'Séminaires',
    description: 'Formation spécialisée en techniques d\'entraînement avancées.',
    iconType: 'presentation',
    href: '/fr/services/seminaires',
  },
  {
    title: 'Cours Vidéo',
    description: 'Apprenez à votre rythme avec du contenu exclusif préenregistré.',
    iconType: 'video',
    href: '/fr/services/cours-video',
  },
  {
    title: 'Ateliers',
    description: 'Séances pratiques pour perfectionner votre technique.',
    iconType: 'wrench',
    href: '/fr/services/ateliers',
  },
  {
    title: 'Consultation en Ligne',
    description: 'Conseils professionnels de n\'importe où.',
    iconType: 'laptop',
    href: '/fr/services/consultation-en-ligne',
  },
];

const stats = [
  { value: '4500+', label: 'Clients Transformés' },
  { value: '30+', label: 'Ans d\'Expérience' },
  { value: '50+', label: 'Trophées Remportés' },
  { value: '100%', label: 'Dévouement Total' },
];

const transformationSteps = [
  {
    number: '1',
    title: 'Demandez votre consultation',
    description: 'Contactez-moi et choisissez le service qui correspond le mieux à vos besoins ou planifiez une consultation pour trouver l\'option idéale.',
  },
  {
    number: '2',
    title: 'Commencez votre plan',
    description: 'Accédez à un programme d\'entraînement et de nutrition adapté à vos objectifs et à votre style de vie.',
  },
  {
    number: '3',
    title: 'Transformez-vous',
    description: 'Transformez votre corps et votre esprit avec un plan structuré et mon soutien personnalisé. Suivez les bonnes directives et obtenez les résultats que vous avez toujours souhaités.',
  },
];

const testimonials = [
  {
    name: 'Alberto Bernal',
    text: 'Bernat est bien plus qu\'un entraîneur personnel. Son professionnalisme parle de lui-même, mais ce qui le fait vraiment se démarquer, c\'est la grande personne qu\'il est. Il vous aide non seulement à vous améliorer physiquement, mais aussi à vous motiver dans votre croissance personnelle et votre apprentissage.',
    image: 'testimonial-1',
  },
  {
    name: 'Mónica Olmeda',
    role: 'Pilates Classique',
    text: 'Bernat, en plus d\'être une excellente personne, est un entraîneur personnel avec une expérience et un charisme inégalés. Sa salle est très familiale et agréable. Il surveille constamment chaque client et s\'assure que la technique est correcte pour trouver les meilleurs résultats.',
    image: 'testimonial-2',
  },
  {
    name: 'Aaron Navarro',
    text: 'Un entraîneur personnel 10/10. Je m\'entraîne avec Bernat depuis environ 3 mois et je suis ravi. Dans sa salle, les séances sont petites, avec un maximum de 2 ou 3 personnes, ce qui permet un entraînement plus personnalisé. Je le recommande toujours à tous ceux qui me posent des questions sur un entraîneur personnel à Alicante.',
    image: 'testimonial-3',
  },
];
---

<Layout
  title="Scorus Fitness | Entraînement Personnel à Alicante"
  description="Centre d'entraînement personnel et salle de sport à Alicante. Transformation physique avec des programmes personnalisés, RE-BORN et Scorus Campus. Bernat Scorus, culturiste professionnel."
>
  <!-- Section Hero -->
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden bg-black">
    <div class="absolute inset-0">
      <Image
        src={heroImage}
        alt="Bernat Scorus - Entraînement Personnel"
        class="h-full w-full object-cover"
        widths={[640, 768, 1024, 1280, 1536, 1920]}
        sizes="100vw"
        quality={80}
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/70 to-black/80"></div>
    </div>
    
    <div class="absolute left-0 top-1/4 h-1 w-32 bg-gradient-to-r from-red-600 to-transparent"></div>
    <div class="absolute right-0 top-2/3 h-1 w-32 bg-gradient-to-l from-red-600 to-transparent"></div>
    
    <div class="container relative z-10 py-32 pt-40 text-center">
      <div class="mx-auto max-w-6xl">
        <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Scorus Fitness
          </p>
        </div>
        
        <h1 class="mb-8 text-7xl font-black uppercase leading-[0.9] tracking-tighter text-white md:text-8xl lg:text-9xl">
          TRANSFORMEZ<br />
          <span class="text-red-600">VOTRE CORPS</span>
        </h1>
        
        <p class="mx-auto mb-12 max-w-2xl text-xl leading-relaxed text-gray-300 md:text-2xl">
          Entraînement d'élite. Résultats extraordinaires.<br />
          <span class="font-semibold text-red-600">Votre transformation commence ici.</span>
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href="/fr/contact" 
            text="Commencer Maintenant" 
            icon="fire"
            size="lg"
            variant="glow"
          />
          
          <ButtonSecondary 
            href="/fr/services" 
            text="Voir les Services"
            icon="eye"
            variant="glass"
            size="lg"
          />
        </div>
      </div>
    </div>

    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="flex flex-col items-center gap-2">
        <span class="text-xs font-semibold uppercase tracking-widest text-gray-400">Défiler</span>
        <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Section Services Principaux -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Services Principaux
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          COMMENCEZ VOTRE <span class="text-red-600">TRANSFORMATION</span>
        </h2>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {mainServices.map((service) => (
          <a
            href={service.href}
            class="group relative overflow-hidden bg-white p-6 sm:p-8 shadow-lg transition-all duration-300 hover:bg-black hover:shadow-2xl hover:shadow-red-600/30 hover:-translate-y-1"
          >
            <div class="absolute right-0 top-0 h-16 w-16 bg-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-20" style="clip-path: polygon(100% 0, 0 0, 100% 100%)"></div>
            
            <div class="relative z-10">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-gray-100 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600">
                {service.iconType === 'dumbbell' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 11l2 2m10-2l-2 2"/>
                  </svg>
                )}
                {service.iconType === 'apple' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                  </svg>
                )}
                {service.iconType === 'clipboard' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                )}
                {service.iconType === 'monitor' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                )}
              </div>
              
              <h3 class="mb-3 text-lg sm:text-xl font-black uppercase tracking-tight text-black transition-colors group-hover:text-white">
                {service.title}
              </h3>
              <p class="mb-4 text-sm leading-relaxed text-gray-600 transition-colors group-hover:text-gray-200">
                {service.description}
              </p>
              
              <div class="inline-flex items-center gap-2 text-xs sm:text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
                {service.cta}
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Section Caractéristiques -->
  <section class="bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            À Propos de Nous
          </p>
        </div>
        <h2 class="mx-auto max-w-4xl text-4xl font-black uppercase leading-tight tracking-tight text-white md:text-5xl">
          NOUS TRANSFORMONS VOTRE CORPS,<br />
          <span class="text-red-600">AMÉLIORONS VOS PERFORMANCES</span>
        </h2>
        <p class="mx-auto mt-6 max-w-3xl text-lg text-gray-300">
          Oubliez les régimes et routines génériques. Atteignez votre meilleure version avec un plan 100% personnalisé et un vrai soutien.
        </p>
      </div>

      <div class="grid gap-12 md:grid-cols-3">
        {features.map((feature) => (
          <div class="group text-center">
            <div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-600/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600 group-hover:shadow-lg group-hover:shadow-red-600/50">
              {feature.iconType === 'users' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {feature.iconType === 'target' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {feature.iconType === 'utensils' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
            </div>
            
            <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-white">
              {feature.title}
            </h3>
            <p class="text-gray-400">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section Programmes -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Nos Programmes
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          DÉCOUVREZ LES PROGRAMMES QUI<br />
          <span class="text-red-600">TRANSFORMENT CORPS ET ESPRITS</span>
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {programs.map((program) => (
          <a
            href={program.href}
            class="group relative overflow-hidden bg-black p-8 shadow-xl transition-all duration-300 hover:bg-red-600 hover:shadow-2xl hover:shadow-red-600/50 hover:-translate-y-1"
          >
            {program.badge && (
              <div class="absolute right-4 top-4 rounded-full bg-red-600 px-3 py-1 text-xs font-bold uppercase tracking-wider text-white shadow-lg group-hover:bg-black">
                {program.badge}
              </div>
            )}
            
            <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-white/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-black group-hover:shadow-lg">
              <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            
            <h3 class="mb-3 text-2xl font-black uppercase tracking-tight text-white transition-colors group-hover:text-black">
              {program.title}
            </h3>
            <p class="mb-4 leading-relaxed text-gray-300 transition-colors group-hover:text-black">
              {program.description}
            </p>
            
            <div class="inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-black">
              Découvrir
              <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Section Scorus GYM -->
  <section class="relative bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
        <div class="flex flex-col justify-center">
          <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
            <p class="text-sm font-bold uppercase tracking-widest text-red-600">
              Scorus GYM
            </p>
          </div>
          
          <h2 class="mb-6 text-4xl font-black uppercase leading-tight tracking-tight text-white md:text-5xl">
            UNE SALLE PRIVÉE<br />
            CONÇUE POUR VOTRE<br />
            <span class="text-red-600">PERFORMANCE MAXIMALE</span>
          </h2>
          
          <p class="mb-8 text-lg leading-relaxed text-gray-300">
            Entraînez-vous dans un espace exclusif, privé et accueillant, entièrement équipé et avec votre propre musique.
          </p>

          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-red-600 shadow-lg shadow-red-600/50">
                <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-white">Espace Privé et Exclusif</h4>
                <p class="text-sm text-gray-400">Pas de distractions, juste vous et votre entraînement</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-red-600 shadow-lg shadow-red-600/50">
                <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-white">Équipement Professionnel</h4>
                <p class="text-sm text-gray-400">Tout ce dont vous avez besoin pour vous entraîner au plus haut niveau</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-red-600 shadow-lg shadow-red-600/50">
                <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-white">Votre Musique, Votre Ambiance</h4>
                <p class="text-sm text-gray-400">Créez l'atmosphère parfaite pour votre séance</p>
              </div>
            </div>
          </div>

          <ButtonPrimary 
            href="/fr/gym"
            text="Voir les Installations"
            icon="arrow"
            size="md"
            class="mt-8"
          />
        </div>

        <div class="relative min-h-[400px] overflow-hidden lg:min-h-[600px]">
          <Image
            src={gymImage}
            alt="Scorus GYM - Salle Privée à Alicante"
            class="h-full w-full object-cover object-center"
            widths={[640, 768, 1024, 1280]}
            sizes="(max-width: 1024px) 100vw, 50vw"
            quality={85}
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-l from-black/30 via-transparent to-transparent"></div>
          <div class="absolute bottom-0 left-0 h-1 w-full bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Statistiques -->
  <section class="relative bg-white py-24">
    <div class="container">
      <div class="grid gap-12 md:grid-cols-4">
        {stats.map((stat) => (
          <div class="group text-center">
            <div class="mb-4 text-6xl font-black text-black transition-all group-hover:scale-110 group-hover:text-red-600 md:text-7xl">
              {stat.value}
            </div>
            <div class="text-sm font-semibold uppercase tracking-widest text-gray-600">{stat.label}</div>
            <div class="mx-auto mt-4 h-1 w-12 bg-red-600 opacity-0 transition-all group-hover:w-24 group-hover:opacity-100"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section Étapes de Transformation -->
  <section class="bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Votre Processus
          </p>
        </div>
