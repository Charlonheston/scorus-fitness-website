---
/**
 * Coaching en Ligne - Design Premium 2025
 * Page complète avec tous les modules de l'ancienne page rénovés
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import translations from '../../../../public/locales/fr/services.json';

const t = translations.online_counseling;
const currentLang = 'fr';
---

<Layout
  title={t.meta.title}
  description={t.meta.description}
>
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/services`,
      text: translations.back_to_services
    }}
    title={t.title}
    subtitle={t.subtitle}
    backgroundImage="/images/services/online-coaching-hero.jpg"
  />

  <section class="relative bg-gradient-to-br from-red-600 to-black py-12 sm:py-16 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-black uppercase tracking-tighter">
          {t.hero_tagline}
        </h2>
      </div>
    </div>
  </section>

  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <h2 class="mb-4 text-3xl sm:text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            {t.benefits.title}
          </h2>
        </div>

        <div class="grid gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-3">
          {t.benefits.items.map((item) => (
            <div class="group flex flex-col items-center rounded-2xl bg-gradient-to-br from-gray-50 to-white p-6 sm:p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
              <div class="mb-4 flex h-16 w-16 sm:h-20 sm:w-20 items-center justify-center rounded-full bg-red-600 transition-transform group-hover:scale-110">
                <svg class="h-8 w-8 sm:h-10 sm:w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="mb-3 text-lg sm:text-xl font-black uppercase text-black">{item.title}</h3>
              <p class="text-sm sm:text-base text-gray-600 leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="bg-black py-16 sm:py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-5xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
            <p class="text-sm font-bold uppercase tracking-widest text-red-600">
              De la Faiblesse à la Force
            </p>
          </div>
          <h2 class="mb-6 text-3xl sm:text-4xl font-black uppercase tracking-tight md:text-5xl">
            {t.story.title}
          </h2>
        </div>

        <div class="space-y-6 sm:space-y-8 text-base sm:text-lg leading-relaxed text-gray-300">
          <p class="text-xl sm:text-2xl leading-relaxed" set:html={t.story.intro}></p>
          <p class="font-semibold text-white" set:html={t.story.transformation}></p>
          <div class="my-6 sm:my-8 h-1 w-24 bg-red-600 rounded-full mx-auto"></div>
          <p set:html={t.story.family}></p>
          <p class="text-xl sm:text-2xl font-bold text-white" set:html={t.story.results}></p>
        </div>

        <div class="mt-12 sm:mt-16 text-center">
          <h3 class="mb-6 sm:mb-8 text-2xl sm:text-3xl md:text-4xl font-black uppercase text-red-600">
            {t.story.cta}
          </h3>
          <a
            href="tel:+34673975252"
            class="inline-flex items-center gap-3 rounded-full bg-red-600 px-8 py-4 sm:px-12 sm:py-6 text-xl sm:text-2xl md:text-3xl font-black text-white shadow-2xl shadow-red-600/50 transition-all duration-300 hover:scale-105 hover:bg-white hover:text-red-600"
          >
            <svg class="h-6 w-6 sm:h-8 sm:w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            +34 673 97 52 52
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-7xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <h2 class="mb-6 text-3xl sm:text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            {t.pricing.title}
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          {Object.values(t.pricing.plans).map((plan: any) => (
            <div class={`group relative flex flex-col overflow-hidden rounded-3xl p-8 shadow-2xl transition-all duration-500 ${
              plan.popular 
                ? 'bg-red-600 scale-105 hover:scale-110' 
                : 'bg-gradient-to-br from-gray-900 to-black hover:-translate-y-2'
            }`}>
              <div class="mb-6">
                <span class={`inline-block rounded-full px-4 py-2 text-xs font-black uppercase tracking-wider ${
                  plan.popular 
                    ? 'bg-white text-red-600' 
                    : 'bg-red-600 text-white'
                }`}>
                  {plan.badge}
                </span>
              </div>

              <h3 class="mb-4 text-2xl sm:text-3xl font-black uppercase text-white">
                {plan.name}
              </h3>

              <div class="mb-6">
                <div class="flex items-baseline">
                  <span class="text-5xl sm:text-6xl font-black text-white">{plan.price}</span>
                  <span class="ml-2 text-2xl font-bold text-white/80">{plan.currency}{plan.duration}</span>
                </div>
                <p class="mt-2 text-sm text-white/70">*prix total {plan.total_price}€</p>
              </div>

              <ul class="mb-8 flex-1 space-y-3">
                {plan.features.map((feature: string) => (
                  <li class="flex items-start text-sm sm:text-base text-white/90">
                    <svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class={feature.startsWith('Tout') ? 'font-bold' : ''}>{feature}</span>
                  </li>
                ))}
              </ul>

              <div class="mt-auto">
                {plan.popular ? (
                  <ButtonPrimary
                    href={`/${currentLang}/contact`}
                    text={plan.cta}
                    icon="zap"
                    size="lg"
                    class="!min-h-[60px] w-full !bg-black !text-white hover:!bg-white hover:!text-black"
                  />
                ) : (
                  <ButtonSecondary
                    href={`/${currentLang}/contact`}
                    text={plan.cta}
                    icon="arrow"
                    variant="outline"
                    size="lg"
                    class="!min-h-[60px] w-full"
                  />
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="bg-black py-20 sm:py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="mb-4 sm:mb-6 text-4xl sm:text-5xl font-black uppercase tracking-tighter md:text-6xl">
          Des <span class="text-red-600">Questions</span>?
        </h2>
        <p class="mb-6 sm:mb-8 text-base sm:text-lg sm:text-xl text-gray-300">
          Appelez-nous ou visitez notre salle de sport à Alicante
        </p>

        <div class="mb-8 sm:mb-12 flex flex-col items-center justify-center gap-4 sm:gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold">+34 673 97 52 52</span>
          </a>

          <a href="https://maps.google.com/?q=Av.+Conrado+Albaladejo+31+Alicante" target="_blank" rel="noopener" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="font-bold">Alicante, Espagne</span>
          </a>
        </div>

        <div class="mb-8 sm:mb-12">
          <h3 class="mb-4 text-xs sm:text-sm font-bold uppercase tracking-widest text-gray-400">Horaire</h3>
          <p class="text-base sm:text-lg">
            <span class="font-bold text-white">Lundi - Vendredi</span> | 07:00 - 10:00
          </p>
          <p class="mt-2 text-base sm:text-lg">
            <span class="font-bold text-white">Dimanche:</span> Fermé
          </p>
        </div>

        <div class="flex flex-col items-center justify-center gap-4 sm:gap-6">
          <ButtonPrimary 
            href={`/${currentLang}/contact`}
            text="Contactez-nous"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <a
            href={`/${currentLang}/services`}
            class="inline-flex items-center text-xs sm:text-sm font-bold uppercase tracking-wider text-white transition-all hover:text-red-600"
          >
            Voir Tous Les Services
            <svg class="ml-2 h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

