---
/**
 * Page Entraînement Personnel - Design Premium Noir/Blanc/Rouge
 * Avec modules et contenu de nueva.scorusfitness.com
 */

import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import translations from '../../../../public/locales/fr/services.json';

const t = translations.personal_training;
const currentLang = 'fr';
---

<Layout
  title={t.meta.title}
  description={t.meta.description}
>
  <!-- Header Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/services`,
      text: translations.back_to_services
    }}
    title="ENTRAÎNEMENT PERSONNEL"
    subtitle="Programmes personnalisés conçus spécifiquement pour atteindre vos objectifs en toute sécurité et efficacité."
    backgroundImage="/images/services/personal-training.jpg"
  />

  <!-- Intro Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          Services d'<span class="text-red-600">Entraînement Personnel</span>
        </h2>
        <p class="text-lg leading-relaxed text-gray-700">
          J'offre des programmes personnalisés de <strong>Prise de Muscle</strong> et <strong>Perte de Graisse</strong> pour hommes et femmes de tous âges. Chaque personne est unique, avec des défis et des objectifs spécifiques. Mon objectif est de vous aider à surmonter les obstacles et atteindre vos objectifs en toute sécurité et efficacité.
        </p>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section class="bg-black py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">
            Choisissez Votre Chemin Et <span class="text-red-600">Transformez</span><br />
            Votre Corps Et Esprit <span class="text-red-600">Maintenant</span>
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          <!-- Forfait 8 Séances -->
          <div class="group relative overflow-hidden rounded-lg bg-white text-black transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="p-8 text-center relative z-10">
              <div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-black text-3xl font-black text-white">
                8
              </div>
              
              <h3 class="mb-2 text-2xl font-black uppercase tracking-tight">Forfait 8 Séances</h3>
              <p class="mb-6 text-sm text-gray-600">Pour ceux qui s'entraînent 1 à 2 fois par semaine</p>
              
              <div class="mb-8">
                <span class="text-5xl font-black text-red-600">200€</span>
                <span class="text-lg text-gray-600">/mois</span>
              </div>

              <ButtonSecondary 
                href={`/${currentLang}/contact`}
                text="Commencer" 
                icon="arrow"
                variant="outline-dark"
                size="md"
              />
            </div>
            <div class="absolute inset-0 border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100 z-0 pointer-events-none"></div>
          </div>

          <!-- Forfait 12 Séances (VEDETTE) -->
          <div class="group relative overflow-hidden rounded-lg bg-red-600 text-white shadow-2xl shadow-red-600/50 transition-all duration-300 hover:-translate-y-2 hover:scale-105">
            <div class="absolute right-4 top-4">
              <span class="rounded-full bg-white px-3 py-1 text-xs font-bold uppercase tracking-wider text-red-600">
                Plus Populaire
              </span>
            </div>

            <div class="p-8 text-center">
              <div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-white text-3xl font-black text-red-600">
                12
              </div>
              
              <h3 class="mb-2 text-2xl font-black uppercase tracking-tight">Forfait de 12 Séances</h3>
              <p class="mb-6 text-sm text-white/90">Pour ceux qui s'entraînent 3 fois par semaine</p>
              
              <div class="mb-8">
                <span class="text-5xl font-black text-white">285€</span>
                <span class="text-lg text-white/80">/mois</span>
              </div>

              <div class="[&>a]:!bg-black [&>a]:!text-white [&>a]:hover:!bg-white [&>a]:hover:!text-black">
                <ButtonPrimary 
                  href={`/${currentLang}/contact`}
                  text="Agir" 
                  icon="zap"
                  variant="default"
                  size="md"
                />
              </div>
            </div>
          </div>

          <!-- Forfait 16 Séances -->
          <div class="group relative overflow-hidden rounded-lg bg-white text-black transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="p-8 text-center relative z-10">
              <div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-black text-3xl font-black text-white">
                16
              </div>
              
              <h3 class="mb-2 text-2xl font-black uppercase tracking-tight">Forfait de 16 Séances</h3>
              <p class="mb-6 text-sm text-gray-600">Pour ceux qui s'entraînent 4 fois par semaine</p>
              
              <div class="mb-8">
                <span class="text-5xl font-black text-red-600">360€</span>
                <span class="text-lg text-gray-600">/mois</span>
              </div>

              <ButtonSecondary 
                href={`/${currentLang}/contact`}
                text="Transformer" 
                icon="arrow"
                variant="outline-dark"
                size="md"
              />
            </div>
            <div class="absolute inset-0 border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100 z-0 pointer-events-none"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Training Types Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Types d'<span class="text-red-600">Entraînement</span>
          </h2>
        </div>

        <div class="grid gap-12 md:grid-cols-2">
          <!-- Entraînement Individuel -->
          <div class="group relative overflow-hidden rounded-lg bg-black p-10 text-white transition-all duration-300 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="absolute right-4 top-4 text-9xl font-black opacity-10">1</div>
            <div class="relative z-10">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <h3 class="mb-4 text-2xl font-black uppercase tracking-tight">Entraînement Individuel</h3>
              <p class="leading-relaxed text-gray-300">
                Séances pour deux personnes, idéales pour les couples ou amis qui souhaitent s'entraîner ensemble. Attention personnalisée maximale et adaptation à vos objectifs spécifiques.
              </p>
            </div>
          </div>

          <!-- Entraînement en Groupe -->
          <div class="group relative overflow-hidden rounded-lg bg-black p-10 text-white transition-all duration-300 hover:shadow-2xl hover:shadow-red-600/50">
            <div class="absolute right-4 top-4 text-9xl font-black opacity-10">2</div>
            <div class="relative z-10">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600">
                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <h3 class="mb-4 text-2xl font-black uppercase tracking-tight">Entraînement en Groupe</h3>
              <p class="leading-relaxed text-gray-300">
                Ateliers dynamiques pour groupes de 5 à 10 personnes, parfaits pour promouvoir le bien-être dans l'environnement de travail. Motivation de groupe et résultats collectifs.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="bg-gray-50 py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Qu'est-ce Qui Est <span class="text-red-600">Inclus</span>?
          </h2>
        </div>

        <div class="grid gap-6 md:grid-cols-2">
          <div class="flex items-start rounded-lg bg-white p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-4 mt-1 h-7 w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 font-black uppercase text-black">Évaluation Physique Complète</h3>
              <p class="text-sm text-gray-600">Analyse détaillée de votre condition physique actuelle et composition corporelle.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-4 mt-1 h-7 w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 font-black uppercase text-black">Plan 100% Personnalisé</h3>
              <p class="text-sm text-gray-600">Routine adaptée à vos objectifs, niveau et disponibilité.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-4 mt-1 h-7 w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 font-black uppercase text-black">Suivi Continu</h3>
              <p class="text-sm text-gray-600">Ajustements en fonction de vos progrès et résultats mesurables.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-4 mt-1 h-7 w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 font-black uppercase text-black">Conseils Nutritionnels</h3>
              <p class="text-sm text-gray-600">Guidance alimentaire pour optimiser votre progression.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-4 mt-1 h-7 w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 font-black uppercase text-black">Support WhatsApp</h3>
              <p class="text-sm text-gray-600">Résolvez vos doutes et recevez de la motivation quand vous en avez besoin.</p>
            </div>
          </div>

          <div class="flex items-start rounded-lg bg-white p-6 shadow-md transition-all duration-300 hover:shadow-xl">
            <svg class="mr-4 mt-1 h-7 w-7 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="mb-2 font-black uppercase text-black">Flexibilité Horaire</h3>
              <p class="text-sm text-gray-600">Séances adaptées à votre agenda et disponibilité.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final Section -->
  <section class="bg-black py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter md:text-6xl">
          Vous Avez Des <span class="text-red-600">Questions</span>?
        </h2>
        <p class="mb-8 text-xl text-gray-300">
          Appelez-nous ou visitez-nous dans notre salle de sport à Alicante
        </p>

        <div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold">+34 673 97 52 52</span>
          </a>

          <a href="https://maps.google.com/?q=Av.+Conrado+Albaladejo+31+Alicante" target="_blank" rel="noopener" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="font-bold">Alicante, Espagne</span>
          </a>
        </div>

        <div class="mb-12">
          <h3 class="mb-4 text-sm font-bold uppercase tracking-widest text-gray-400">Horaires</h3>
          <p class="text-lg">
            <span class="font-bold text-white">Lundi - Vendredi</span> | 10:00 - 14:00; 15:00 - 22:00
          </p>
        </div>

        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/contact`}
            text="Réservez Votre Séance"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <a
            href={`/${currentLang}/services`}
            class="inline-flex items-center text-sm font-bold uppercase tracking-wider text-white transition-all hover:text-red-600"
          >
            Voir Tous Les Services
            <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
