---
import Layout from '@/layouts/Layout.astro';
import translations from '../../../../public/locales/fr/services.json';
const t = translations.workshops;
const currentLang = 'fr';
---
<Layout title={t.meta.title} description={t.meta.description}>
  <section class="bg-white py-32"><div class="container"><div class="mx-auto max-w-4xl"><a href={`/${currentLang}/services`} class="mb-8 inline-flex items-center text-sm font-semibold uppercase tracking-wider text-gray-500 transition-colors hover:text-black"><svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>{translations.back_to_services}</a><div class="mb-8 text-5xl">{t.icon}</div><h1 class="mb-8 text-6xl font-bold leading-tight text-gray-900 md:text-7xl">{t.title}</h1><p class="text-2xl leading-relaxed text-gray-600">{t.subtitle}</p></div></div></section>
  <section class="bg-gray-50 py-24"><div class="container"><div class="mx-auto max-w-5xl space-y-24"><div><h2 class="mb-12 text-4xl font-bold text-gray-900">{t.themes_title}</h2><div class="grid gap-8 md:grid-cols-2"><div class="bg-white p-8"><h3 class="mb-4 text-2xl font-bold">{t.themes.training.title}</h3><p class="mb-4 text-gray-600">{t.themes.training.description}</p><ul class="space-y-2 text-sm text-gray-600">{t.themes.training.items.map((item: string) => (<li>• {item}</li>))}</ul></div><div class="bg-white p-8"><h3 class="mb-4 text-2xl font-bold">{t.themes.nutrition.title}</h3><p class="mb-4 text-gray-600">{t.themes.nutrition.description}</p><ul class="space-y-2 text-sm text-gray-600">{t.themes.nutrition.items.map((item: string) => (<li>• {item}</li>))}</ul></div><div class="bg-white p-8"><h3 class="mb-4 text-2xl font-bold">{t.themes.programming.title}</h3><p class="mb-4 text-gray-600">{t.themes.programming.description}</p><ul class="space-y-2 text-sm text-gray-600">{t.themes.programming.items.map((item: string) => (<li>• {item}</li>))}</ul></div><div class="bg-white p-8"><h3 class="mb-4 text-2xl font-bold">{t.themes.mindset.title}</h3><p class="mb-4 text-gray-600">{t.themes.mindset.description}</p><ul class="space-y-2 text-sm text-gray-600">{t.themes.mindset.items.map((item: string) => (<li>• {item}</li>))}</ul></div></div></div><div><h2 class="mb-8 text-4xl font-bold text-gray-900">{t.includes_title}</h2><div class="grid gap-6 md:grid-cols-2"><div class="flex items-start"><svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-black" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-1 font-semibold">{t.includes.group_sessions.title}</h3><p class="text-sm text-gray-600">{t.includes.group_sessions.description}</p></div></div><div class="flex items-start"><svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-black" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-1 font-semibold">{t.includes.supervised_practice.title}</h3><p class="text-sm text-gray-600">{t.includes.supervised_practice.description}</p></div></div><div class="flex items-start"><svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-black" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-1 font-semibold">{t.includes.materials.title}</h3><p class="text-sm text-gray-600">{t.includes.materials.description}</p></div></div><div class="flex items-start"><svg class="mr-4 mt-1 h-6 w-6 flex-shrink-0 text-black" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-1 font-semibold">{t.includes.certificate.title}</h3><p class="text-sm text-gray-600">{t.includes.certificate.description}</p></div></div></div></div></div></div></section>
  <section class="bg-black py-32 text-white"><div class="container"><div class="mx-auto max-w-3xl text-center"><h2 class="mb-8 text-5xl font-bold md:text-6xl">{t.cta_title}</h2><p class="mb-12 text-lg text-gray-400">{t.cta_description}</p><a href={`/${currentLang}/contact`} class="inline-flex items-center justify-center border-2 border-white bg-white px-12 py-5 text-lg font-semibold text-black transition-all hover:bg-transparent hover:text-white">{t.cta_button}</a></div></div></section>
</Layout>
