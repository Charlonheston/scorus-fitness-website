---
/**
 * Página de Video Cursos - Diseño Netflix
 * French video courses page with Netflix-style design
 */

import Layout from '@/layouts/Layout.astro';
import VideoCourseCarousel from '@/components/sections/VideoCourseCarousel.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import CTAFinal from '@/components/sections/CTAFinal.astro';

const coursesData = {
  seo: {
    title: "Cours Vidéo En Ligne | Scorus Fitness",
    description: "Accès aux cours vidéo en ligne d'entraînement et nutrition. Apprenez à votre rythme avec du contenu de qualité 100% vidéo et matériel supplémentaire inclus."
  },
  courses: [
    {
      id: 'nutrition',
      title: 'Nutrition et Alimentation',
      description: 'Apprenez à structurer votre alimentation et calculer les macronutriments pour atteindre vos objectifs physiques.',
      icon: 'nutrition',
      color: 'from-emerald-600 to-teal-600'
    },
    {
      id: 'supplement',
      title: 'Supplémentation Intelligente',
      description: 'Découvrez quels suppléments fonctionnent vraiment et comment les intégrer à votre routine.',
      icon: 'supplement',
      color: 'from-blue-600 to-cyan-600'
    },
    {
      id: 'training',
      title: 'Entraînement Structuré',
      description: 'Routines de musculation, force et endurance conçues par des experts.',
      icon: 'training',
      color: 'from-red-600 to-pink-600'
    },
    {
      id: 'antiaging',
      title: 'Anti-âge et Santé Optimale',
      description: 'Stratégies pour ralentir le vieillissement et améliorer la qualité de vie.',
      icon: 'antiaging',
      color: 'from-purple-600 to-violet-600'
    },
    {
      id: 'cardio',
      title: 'Cardio et Perte de Graisse',
      description: 'Méthodes efficaces pour améliorer l\'endurance et perdre de la graisse durablement.',
      icon: 'cardio',
      color: 'from-orange-600 to-red-600'
    },
    {
      id: 'wellness',
      title: 'Prévention et Bien-être',
      description: 'Clés pour éviter les blessures et optimiser la longévité et la récupération.',
      icon: 'wellness',
      color: 'from-indigo-600 to-blue-600'
    }
  ]
};
---

<Layout
  title={coursesData.seo.title}
  description={coursesData.seo.description}
>
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-screen bg-black overflow-hidden flex items-center justify-center pt-32 pb-16">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img src="/images/academia/video-cursos.jpeg" alt="Cours Vidéo Arrière-plan" class="h-full w-full object-cover object-center" loading="eager" decoding="async">
    </div>

    <!-- Dark Overlay -->
    <div class="absolute inset-0 z-10 bg-black/60"></div>

    <!-- Background Elements (Gradient Blurs) -->
    <div class="absolute inset-0 z-20 opacity-30">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-red-600 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-600 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-30 container text-center">
      <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
        <p class="text-sm font-bold uppercase tracking-widest text-red-600">
          SCORUS ACADEMY
        </p>
      </div>

      <h1 class="mb-8 text-5xl md:text-7xl font-black uppercase tracking-tighter text-white max-w-4xl mx-auto">
        Cours Vidéo <span class="text-red-600">En Ligne</span>
      </h1>

      <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        Voulez-vous vous entraîner avec moi mais la distance le rend difficile? Accédez à mes cours vidéo et apprenez à vous entraîner et vous nourrir comme un professionnel, n'importe où et n'importe quand.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <ButtonPrimary 
          href="#cours" 
          text="Explorer les Cours" 
          icon="zap"
          size="xl"
          variant="glow"
        />
        <a
          href="#comment-ca-marche"
          class="inline-flex items-center gap-3 px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-black transition-all duration-300 rounded-lg font-black uppercase tracking-wider"
        >
          Comment ça Marche
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-16 animate-bounce">
        <svg class="w-6 h-6 text-red-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="bg-white py-20 md:py-32">
    <div class="container">
      <div class="grid md:grid-cols-5 gap-8">
        <!-- Feature 1 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            100% en Vidéo
          </h3>
          <p class="text-gray-600">
            Explications détaillées et pratiques de chaque concept
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-3a6 6 0 11-12 0 6 6 0 0112 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Matériel Supplémentaire
          </h3>
          <p class="text-gray-600">
            Tableaux, régimes, recettes et guides en PDF téléchargeables
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Accès Illimité
          </h3>
          <p class="text-gray-600">
            Apprenez à votre rythme, quand et où vous le souhaitez
          </p>
        </div>

        <!-- Feature 4 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Méthode Éprouvée
          </h3>
          <p class="text-gray-600">
            Basée sur la science et l'expérience réelle de 20+ ans
          </p>
        </div>

        <!-- Feature 5 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m0 0l-2-1m2 1v2.5M14 4l-2 1m0 0L10 4m2 1v2.5"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Résultats Garantis
          </h3>
          <p class="text-gray-600">
            Appliquez les connaissances et voyez des changements réels
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Courses Carousel Section -->
  <section id="cours" class="py-4">
    <VideoCourseCarousel 
      title="Nos"
      titleHighlight="Cours Vidéo"
      courses={coursesData.courses}
      nextLabel="Suivant"
      prevLabel="Précédent"
    />
  </section>

  <!-- How It Works Section -->
  <section id="comment-ca-marche" class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-black mb-4">
          Comment <span class="text-red-600">Fonctionnent</span> les Cours Vidéo
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Un processus simple mais efficace pour transformer vos connaissances en résultats
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-12">
        <!-- Step 1 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                1
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Choisissez Votre Cours
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Trouvez celui qui s'adapte le mieux à vos objectifs et votre niveau d'expérience. Nous avons des options pour tous les niveaux.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 2 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                2
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Accédez au Contenu
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Apprenez avec des vidéos détaillées, des matériels téléchargeables et des ressources complémentaires. Tout organisé par modules.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 3 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                3
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Appliquez et Transformez
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Suivez chaque étape et appliquez ce que vous avez appris dans votre vie réelle. Les résultats viendront si vous restez constant.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="mt-16 text-center">
        <ButtonPrimary 
          href="#cours" 
          text="Voir Tous les Cours" 
          icon="arrow"
          size="lg"
          variant="default"
        />
      </div>
    </div>
  </section>

  <!-- Comparison/Benefits Section -->
  <section class="bg-black py-24 md:py-32 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16 text-center">
          <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter mb-4">
            Pourquoi <span class="text-red-600">Cours Vidéo</span>?
          </h2>
          <p class="text-xl text-gray-400">
            Le moyen le plus flexible et accessible d'accéder à une éducation de qualité
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Apprentissage Flexible</h4>
                <p class="text-gray-400">Étudiez à votre rythme, quand et où vous le souhaitez. Pas d'horaires fixes.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Contenu Premium</h4>
                <p class="text-gray-400">Accès à des connaissances exclusives de professionnels avec des années d'expérience.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Accès à Vie</h4>
                <p class="text-gray-400">Achetez une fois, accédez pour toujours. Y compris les mises à jour futures.</p>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Communauté Exclusive</h4>
                <p class="text-gray-400">Connectez-vous avec d'autres étudiants et partagez votre progression dans notre communauté.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Certificats</h4>
                <p class="text-gray-400">Obtenez des certificats d'achèvement pour chaque cours complété.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Garantie de Satisfaction</h4>
                <p class="text-gray-400">30 jours de garantie de remboursement si vous n'êtes pas satisfait.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <CTAFinal 
    tagline="PRÊT À COMMENCER?"
    title="Transformez Votre"
    titleHighlight="Connaissance en Résultats"
    description="Accédez maintenant à nos cours vidéo et commencez votre parcours de transformation. Des centaines d'étudiants voient déjà des résultats."
    primaryCta={{
      text: "Voir les Cours Disponibles",
      href: "#cours",
      icon: "zap"
    }}
    secondaryCta={{
      text: "Consultation Gratuite",
      href: "/fr/contact"
    }}
  />
</Layout>
