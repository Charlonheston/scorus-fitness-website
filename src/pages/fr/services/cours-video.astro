---
import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import translations from '../../../../public/locales/fr/services.json';
const t = translations.video_courses;
const currentLang = 'fr';

const courses = [
  { key: 'bodybuilding', course: t.courses.bodybuilding, icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" },
  { key: 'nutrition', course: t.courses.nutrition, icon: "M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" },
  { key: 'cutting', course: t.courses.cutting, icon: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" }
];
---
<Layout title={t.meta.title} description={t.meta.description}>
  <ServiceDetailHeader backLink={{href: `/${currentLang}/services`, text: translations.back_to_services}} title="COURS VIDÉO" subtitle="Apprenez à votre rythme avec les cours vidéo de Bernat Scorus. Contenu premium en haute qualité avec accès illimité à vie."/>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">Apprenez À <span class="text-red-600">Votre Rythme</span></h2><p class="text-lg leading-relaxed text-gray-700">Les <strong>Cours Vidéo de Scorus Fitness</strong> vous permettent d'apprendre quand et où vous voulez. Contenu structuré et pratique avec accès à vie.</p></div></div></section>
  <section class="bg-gray-50 py-24"><div class="container"><div class="mx-auto max-w-6xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">{t.available_courses_title}</h2></div><div class="space-y-6">{courses.map(({course, icon}) => (<div class="group overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl"><div class="flex flex-col md:flex-row md:items-center"><div class="flex h-32 w-full items-center justify-center bg-black md:h-full md:w-32"><svg class="h-16 w-16 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d={icon}/></svg></div><div class="flex-1 p-8"><h3 class="mb-3 text-2xl font-black uppercase text-black">{course.title}</h3><p class="mb-4 leading-relaxed text-gray-700">{course.description}</p><span class="inline-block rounded-full bg-gray-400 px-4 py-1 text-sm font-bold uppercase text-white">{course.status}</span></div></div></div>))}</div></div></div></section>
  <section class="bg-black py-24 text-white"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">{t.includes_title}</h2></div><div class="grid gap-6 md:grid-cols-2">{Object.values(t.includes).map((item: any) => (<div class="flex items-start gap-4 rounded-lg bg-white/5 p-6 backdrop-blur-sm transition-all duration-300 hover:bg-white/10"><svg class="mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-1 font-bold text-white">{item.title}</h3><p class="text-sm text-gray-300">{item.description}</p></div></div>))}</div></div></div></section>
  <section class="bg-white py-32"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">{t.cta_title}</h2><p class="mb-8 text-xl text-gray-600">{t.cta_description}</p><div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12"><a href="tel:+34673975252" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg><span class="font-bold text-black group-hover:text-red-600">+34 673 97 52 52</span></a><a href={`/${currentLang}/contact`} class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg><span class="font-bold text-black group-hover:text-red-600">Formulaire De Contact</span></a></div><div class="flex flex-col items-center justify-center gap-6 sm:flex-row"><ButtonPrimary href={`/${currentLang}/contact`} text="Consulter Les Cours" icon="zap" size="xl" variant="glow"/><ButtonSecondary href={`/${currentLang}/services`} text="Voir Tous Les Services" icon="arrow" variant="glass" size="xl"/></div></div></div></section>
</Layout>
