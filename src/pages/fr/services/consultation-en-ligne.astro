---
import Layout from '@/layouts/Layout.astro';
import translations from '../../../../public/locales/fr/services.json';
const t = translations.online_consulting;
const currentLang = 'fr';
---
<Layout title={t.meta.title} description={t.meta.description}>
  <section class="bg-white py-32"><div class="container"><div class="mx-auto max-w-4xl"><a href={`/${currentLang}/services`} class="mb-8 inline-flex items-center text-sm font-semibold uppercase tracking-wider text-gray-500 transition-colors hover:text-black"><svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>{translations.back_to_services}</a><div class="mb-8 text-5xl">{t.icon}</div><h1 class="mb-8 text-6xl font-bold leading-tight text-gray-900 md:text-7xl" set:html={t.title.replace(/\n/g, '<br />')}></h1><p class="text-2xl leading-relaxed text-gray-600">{t.subtitle}</p></div></div></section>
  <section class="bg-gray-50 py-24"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-20 grid gap-8 md:grid-cols-2 lg:grid-cols-4"><div class="text-center"><div class="mb-4 text-5xl">{t.features.video_calls.icon}</div><h3 class="mb-2 font-bold">{t.features.video_calls.title}</h3><p class="text-sm text-gray-600">{t.features.video_calls.description}</p></div><div class="text-center"><div class="mb-4 text-5xl">{t.features.training_plan.icon}</div><h3 class="mb-2 font-bold">{t.features.training_plan.title}</h3><p class="text-sm text-gray-600">{t.features.training_plan.description}</p></div><div class="text-center"><div class="mb-4 text-5xl">{t.features.nutrition_plan.icon}</div><h3 class="mb-2 font-bold">{t.features.nutrition_plan.title}</h3><p class="text-sm text-gray-600">{t.features.nutrition_plan.description}</p></div><div class="text-center"><div class="mb-4 text-5xl">{t.features.support.icon}</div><h3 class="mb-2 font-bold">{t.features.support.title}</h3><p class="text-sm text-gray-600">{t.features.support.description}</p></div></div><div class="space-y-16"><div><h2 class="mb-6 text-4xl font-bold text-gray-900">{t.how_it_works_title}</h2><div class="space-y-8"><div class="flex items-start"><div class="mr-6 flex h-12 w-12 flex-shrink-0 items-center justify-center bg-black text-xl font-bold text-white">1</div><div><h3 class="mb-2 text-xl font-bold">{t.how_it_works.step1.title}</h3><p class="text-gray-600">{t.how_it_works.step1.description}</p></div></div><div class="flex items-start"><div class="mr-6 flex h-12 w-12 flex-shrink-0 items-center justify-center bg-black text-xl font-bold text-white">2</div><div><h3 class="mb-2 text-xl font-bold">{t.how_it_works.step2.title}</h3><p class="text-gray-600">{t.how_it_works.step2.description}</p></div></div><div class="flex items-start"><div class="mr-6 flex h-12 w-12 flex-shrink-0 items-center justify-center bg-black text-xl font-bold text-white">3</div><div><h3 class="mb-2 text-xl font-bold">{t.how_it_works.step3.title}</h3><p class="text-gray-600">{t.how_it_works.step3.description}</p></div></div></div></div><div><h2 class="mb-6 text-4xl font-bold text-gray-900">{t.advantages_title}</h2><ul class="grid gap-4 md:grid-cols-2">{t.advantages.map((advantage: string) => (<li class="flex items-start"><svg class="mr-3 mt-1 h-5 w-5 flex-shrink-0 text-black" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span class="text-gray-600">{advantage}</span></li>))}</ul></div></div></div></div></section>
  <section class="bg-black py-32 text-white"><div class="container"><div class="mx-auto max-w-3xl text-center"><h2 class="mb-8 text-5xl font-bold md:text-6xl">{t.cta_title}</h2><p class="mb-12 text-lg text-gray-400">{t.cta_description}</p><a href={`/${currentLang}/contact`} class="inline-flex items-center justify-center border-2 border-white bg-white px-12 py-5 text-lg font-semibold text-black transition-all hover:bg-transparent hover:text-white">{t.cta_button}</a></div></div></section>
</Layout>
