---
import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
const currentLang = 'de';
---
<Layout title="Scorus Campus | Berufsausbildung" description="Fortgeschrittene Berufsausbildung in Bodybuilding, Personal Training und Sporternährung">
  <ServiceDetailHeader backLink={{href: `/${currentLang}/akademie`, text: "Zurück zur Akademie"}} title="SCORUS CAMPUS" subtitle="Elite-Berufsausbildung in Bodybuilding, Personal Training und Sporternährung. Werden Sie ein zertifizierter Experte."/>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">Werden Sie Ein <span class="text-red-600">Profi</span></h2><p class="text-lg leading-relaxed text-gray-700"><strong>Scorus Campus</strong> ist unser professionelles Trainingsprogramm für leidenschaftliche Menschen, die zertifizierte Experten in Fitness, Bodybuilding und Personal Training werden möchten.</p></div></div></section>
  <section class="bg-gray-50 py-24"><div class="container"><div class="mx-auto max-w-6xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">Ausbildungs<span class="text-red-600">programm</span></h2></div><div class="grid gap-8 md:grid-cols-2">{[{num:1,title:"Trainingsgrundlagen",items:["Anatomie und Physiologie angewandt auf das Training","Biomechanik der Bewegung und Übungsanalyse","Wissenschaftliche Prinzipien des Krafttrainings"]},{num:2,title:"Fortgeschrittenes Bodybuilding",items:["Fortgeschrittene Muskelhypertrophietechniken","Trainingsperiodisierung und -programmierung","Vorbereitung auf Bodybuilding-Wettbewerbe"]},{num:3,title:"Sporternährung",items:["Ernährung zur Maximierung der Muskelhypertrophie","Definitions- und Fettabbaustrategien","Evidenzbasierte Sportergänzung"]},{num:4,title:"Berufspraxis",items:["Kundenbewertung und Erstbeurteilung","Personalisiertes Programmdesign","Sitzungsmanagement und Fortschrittsverfolgung"]}].map(m=>(<div class="group overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl"><div class="bg-black p-6 text-white"><div class="mb-2 text-sm font-bold uppercase tracking-wider text-red-600">Modul {m.num}</div><h3 class="text-2xl font-black uppercase">{m.title}</h3></div><div class="p-6"><ul class="space-y-3 text-gray-700">{m.items.map(i=>(<li class="flex items-start"><svg class="mr-3 mt-1 h-5 w-5 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>{i}</span></li>))}</ul></div></div>))}</div></div></div></section>
  <section class="bg-black py-24 text-white"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">Professionelle <span class="text-red-600">Zertifizierung</span></h2><p class="text-xl text-gray-300">Nach Abschluss des Programms erhalten Sie ein offizielles Scorus Campus-Zertifikat, das Ihre Kenntnisse in Bodybuilding und fortgeschrittenem Training bescheinigt.</p></div><div class="grid gap-8 md:grid-cols-3">{[{val:"+100h",txt:"Ausbildungsstunden"},{val:"4",txt:"Vollständige Module"},{val:"100%",txt:"Praktisch"}].map(s=>(<div class="rounded-lg bg-white/10 p-8 text-center backdrop-blur-sm transition-all duration-300 hover:bg-white/20"><div class="mb-3 text-5xl font-black text-red-600">{s.val}</div><p class="text-lg font-bold uppercase tracking-wider">{s.txt}</p></div>))}</div></div></div></section>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">Warum <span class="text-red-600">Scorus Campus</span>?</h2></div><div class="grid gap-6 md:grid-cols-2">{[{title:"Elite-Ausbildung",desc:"Lernen Sie von einem professionellen Bodybuilder mit jahrelanger Erfahrung"},{title:"Aktualisierte Inhalte",desc:"Basierend auf neuesten wissenschaftlichen Erkenntnissen und realer Praxis"},{title:"Offizielle Zertifizierung",desc:"Anerkanntes Zertifikat, das Ihr professionelles Niveau bescheinigt"},{title:"Echte Praktiken",desc:"Wenden Sie das Gelernte mit echten Fällen und beaufsichtigter Praxis an"},{title:"Networking",desc:"Vernetzen Sie sich mit anderen Fachleuten der Fitnessbranche"},{title:"Kontinuierliche Unterstützung",desc:"Zugang zur Community und lebenslange Updates"}].map(b=>(<div class="flex items-start gap-4 rounded-lg border-l-4 border-red-600 bg-gray-50 p-6 transition-all duration-300 hover:bg-gray-100"><svg class="mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-2 font-bold text-black">{b.title}</h3><p class="text-sm text-gray-600">{b.desc}</p></div></div>))}</div></div></div></section>
  <section class="bg-gray-50 py-32"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">Bereit Zum <span class="text-red-600">Start</span>?</h2><p class="mb-8 text-xl text-gray-600">Kontaktieren Sie uns für weitere Informationen über Einschreibungen und kommende Termine</p><div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12"><a href="tel:+34673975252" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg><span class="font-bold text-black group-hover:text-red-600">+34 673 97 52 52</span></a><a href={`/${currentLang}/kontakt`} class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg><span class="font-bold text-black group-hover:text-red-600">Kontaktformular</span></a></div><div class="flex flex-col items-center justify-center gap-6 sm:flex-row"><ButtonPrimary href={`/${currentLang}/kontakt`} text="Informationen Anfordern" icon="zap" size="xl" variant="glow"/><ButtonSecondary href={`/${currentLang}/akademie`} text="Alle Programme Anzeigen" icon="arrow" variant="glass" size="xl"/></div></div></div></section>
</Layout>
