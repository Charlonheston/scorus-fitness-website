---
/**
 * Scorus GYM - Premium Black/White/Red Design mit Galerie
 */

import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import FAQs from '@components/faq/FAQs.astro';
import FAQSchema from '@components/faq/FAQSchema.astro';
import { faqsGymDE } from '@data/faqs-de';
import { getImageGallerySchema } from '@lib/schema';

// Import hero image
import gym01 from '../../../public/images/gym/gym-01.jpg';

const currentLang = 'de';

const gymImages = [
  { src: '/images/gym/gym-01.jpg', alt: 'Scorus Fitness - Hauptansicht des Fitnessstudios' },
  { src: '/images/gym/gym-02.jpg', alt: 'Scorus Fitness - Umfassender Blick auf die Einrichtungen' },
  { src: '/images/gym/gym-03.jpg', alt: 'Scorus Fitness - Maschinenbereich mit Spiegeln' },
  { src: '/images/gym/gym-04.jpg', alt: 'Scorus Fitness - Bereich für freie Gewichte' },
  { src: '/images/gym/gym-05.jpg', alt: 'Scorus Fitness - Professionelle Ausrüstung' },
];

// ImageGallery Schema für SEO
const imageGallerySchema = getImageGallerySchema(
  gymImages.map(img => ({
    url: img.src,
    caption: img.alt,
    description: img.alt,
  }))
);
---

<Layout
  title="Scorus GYM | Training in Alicante"
  description="Boutique-Fitnessstudio in Alicante spezialisiert auf Bodybuilding und Personaltraining"
>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden bg-black">
    <div class="absolute inset-0">
      <Image 
        src={gym01}
        alt="Scorus GYM" 
        class="h-full w-full object-cover opacity-40"
        loading="eager"
      />
    </div>
    
    <div class="container relative z-10 py-32">
      <div class="max-w-4xl text-white">
        <h1 class="mb-8 text-5xl font-black uppercase leading-[1.1] tracking-tighter md:text-6xl lg:text-7xl">
          SCORUS <span class="text-red-600">GYM</span>
        </h1>
        <p class="mb-12 max-w-2xl text-xl leading-relaxed text-gray-200 md:text-2xl">
          Dein Raum. Dein Tempo. Deine Musik. Personalisiertes Training in Premium-Einrichtungen.
        </p>
        <div class="flex flex-col gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/kontakt`}
            text="Sitzung Buchen"
            icon="zap"
            size="xl"
            variant="glow"
          />
          <ButtonSecondary 
            href={`/${currentLang}/dienstleistungen/personliches-training`}
            text="Services Ansehen"
            icon="arrow"
            variant="glass"
            size="xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="bg-white py-24">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-3xl font-black uppercase tracking-tighter text-black sm:text-4xl md:text-5xl lg:text-6xl">
          Ein Anderes <span class="text-red-600">Fitnessstudio</span>
        </h2>
        <div class="space-y-6 text-lg leading-relaxed text-gray-700">
          <p>
            <strong>Scorus GYM</strong> ist kein herkömmliches Fitnessstudio. Es ist ein Raum für Menschen, die echte Ergebnisse mit persönlicher Aufmerksamkeit anstreben.
          </p>
          <p>
            Boutique-Einrichtungen mit modernster Ausrüstung, motivierende Umgebung und über 15 Jahre Erfahrung im professionellen Bodybuilding.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-gray-50 py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Warum <span class="text-red-600">Scorus GYM</span>?
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {[
            {title: "Premium-Ausrüstung", desc: "Modernste Maschinen und Geräte für maximale Leistung", icon: "M13 10V3L4 14h7v7l9-11h-7z"},
            {title: "Persönliche Aufmerksamkeit", desc: "Individuelle Verfolgung und auf deine Ziele abgestimmte Pläne", icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"},
            {title: "Motivierende Atmosphäre", desc: "Raum, der dich inspiriert und dich das Beste geben lässt", icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"},
            {title: "Flexible Öffnungszeiten", desc: "Sitzungen an deine Verfügbarkeit und deinen Zeitplan angepasst", icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"},
            {title: "Musik Nach Deinem Geschmack", desc: "Trainiere mit der Musik, die dich motiviert", icon: "M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"},
            {title: "Professionelle Erfahrung", desc: "+15 Jahre im Bodybuilding und Hochleistungstraining", icon: "M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"}
          ].map(feature => (
            <div class="group rounded-lg bg-white p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-black transition-all duration-300 group-hover:bg-red-600">
                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon}/>
                </svg>
              </div>
              <h3 class="mb-3 text-xl font-black uppercase text-black">{feature.title}</h3>
              <p class="text-sm leading-relaxed text-gray-600">{feature.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section - Avantgarde-Design Inspiriert von Scorus Campus -->
  <section class="bg-black py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl">
        <div class="mb-20 text-center">
        <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-white md:text-5xl">
          Unsere <span class="text-red-600">Einrichtungen</span>
        </h2>
        <p class="text-xl text-gray-400">Entworfen, um dein Training zu inspirieren und zu verbessern</p>
      </div>
        
        <!-- Modernes Mosaik-Raster: 2 große oben + 3 mittlere unten -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Erste Reihe: 2 große Bilder -->
          <div class="group relative h-[400px] md:h-[450px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-2xl hover:shadow-red-600/30">
            <picture>
              <source srcset="/images/gym/gym-01.webp" type="image/webp">
              <img src="/images/gym/gym-01.jpg" alt="Scorus Fitness - Hauptansicht des Fitnessstudios" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
            </picture>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <p class="text-sm font-bold uppercase tracking-wider text-white">Hauptansicht</p>
              </div>
            </div>
          </div>

          <div class="group relative h-[400px] md:h-[450px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-2xl hover:shadow-red-600/30">
            <picture>
              <source srcset="/images/gym/gym-02.webp" type="image/webp">
              <img src="/images/gym/gym-02.jpg" alt="Scorus Fitness - Umfassender Blick auf die Einrichtungen" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
            </picture>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <p class="text-sm font-bold uppercase tracking-wider text-white">Weitansicht</p>
              </div>
            </div>
          </div>

          <!-- Zweite Reihe: 3 mittlere Bilder -->
          <div class="md:col-span-2">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div class="group relative h-[280px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-xl hover:shadow-red-600/20">
                <picture>
                  <source srcset="/images/gym/gym-03.webp" type="image/webp">
                  <img src="/images/gym/gym-03.jpg" alt="Scorus Fitness - Maschinenbereich mit Spiegeln" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
                </picture>
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <p class="text-xs font-bold uppercase tracking-wider text-white">Gerätebereich</p>
                  </div>
                </div>
              </div>

              <div class="group relative h-[280px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-xl hover:shadow-red-600/20">
                <picture>
                  <source srcset="/images/gym/gym-04.webp" type="image/webp">
                  <img src="/images/gym/gym-04.jpg" alt="Scorus Fitness - Bereich für freie Gewichte" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
                </picture>
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <p class="text-xs font-bold uppercase tracking-wider text-white">Freihanteln</p>
                  </div>
                </div>
              </div>

              <div class="group relative h-[280px] overflow-hidden rounded-2xl bg-gray-900 transition-all duration-500 hover:shadow-xl hover:shadow-red-600/20">
                <picture>
                  <source srcset="/images/gym/gym-05.webp" type="image/webp">
                  <img src="/images/gym/gym-05.jpg" alt="Scorus Fitness - Professionelle Ausrüstung" class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110" loading="lazy" decoding="async">
                </picture>
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <p class="text-xs font-bold uppercase tracking-wider text-white">Professionelle Ausrüstung</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Dekoratives unteres Element -->
        <div class="mt-16 pt-12 border-t border-gray-800">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div>
              <div class="text-4xl font-black text-red-600 mb-2">+120m²</div>
              <p class="text-sm text-gray-400 uppercase tracking-wider">Trainingsfläche</p>
            </div>
            <div>
              <div class="text-4xl font-black text-red-600 mb-2">Premium</div>
              <p class="text-sm text-gray-400 uppercase tracking-wider">Professionelle Ausrüstung</p>
            </div>
            <div>
              <div class="text-4xl font-black text-red-600 mb-2">100%</div>
              <p class="text-sm text-gray-400 uppercase tracking-wider">Personalisiert</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Besuchen Sie Uns
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          SCORUS GYM<br />
          <span class="text-red-600">ALICANTE</span>
        </h2>
      </div>

      <div class="grid gap-8 lg:grid-cols-2">
        {/* Kontaktinformationen */}
        <div class="flex flex-col justify-center space-y-8 rounded-2xl bg-black p-8 text-white lg:p-12">
          <div>
            <h3 class="mb-6 text-3xl font-black uppercase tracking-tight">
              IHRE TRANSFORMATION<br />
              <span class="text-red-600">BEGINNT HIER</span>
            </h3>
            <p class="text-lg text-gray-300">
              Elite-Personal-Training-Center in Alicante. Kommen Sie und entdecken Sie, wie wir Ihnen helfen können, Ihre Ziele zu erreichen.
            </p>
          </div>

          {/* Adresse */}
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Adresse</h4>
                <p class="text-gray-300">Av. Conrado Albaladejo, 31<br />03540 Alicante, Spanien</p>
              </div>
        </div>
        
            {/* Telefon */}
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Telefon</h4>
                <a href="tel:+34673975252" class="text-gray-300 transition-colors hover:text-white">+34 673 97 52 52</a>
              </div>
            </div>

            {/* Email */}
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Email</h4>
                <a href="mailto:info@scorusfitness.com" class="text-gray-300 transition-colors hover:text-white">info@scorusfitness.com</a>
              </div>
            </div>

            {/* Öffnungszeiten */}
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-600">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="mb-1 font-bold uppercase tracking-wide text-red-600">Öffnungszeiten</h4>
                <p class="text-gray-300">Montag - Freitag: 10:00 - 14:00 | 15:00 - 22:00</p>
              </div>
            </div>
          </div>

          <div class="pt-4">
        <ButtonPrimary 
          href={`/${currentLang}/contacto`}
              text="Informationen Anfordern"
          icon="zap"
              size="lg"
          variant="glow"
        />
          </div>
        </div>

        {/* Karte */}
        <div class="relative min-h-[500px] overflow-hidden rounded-2xl shadow-2xl lg:min-h-[600px]">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6254.759686256192!2d-0.4262063230456152!3d38.386465576687634!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd6239c8af9c4d8b%3A0x8c2ce624b4b83c7a!2sEntrenador%20Personal%20en%20Alicante%20-%20ScorusFitness!5e0!3m2!1sde!2ses!4v1761756712352!5m2!1sde!2ses" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="absolute inset-0"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gray-50 py-32">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">
          Bereit Zum <span class="text-red-600">Trainieren</span>?
        </h2>
        <p class="mb-12 text-xl text-gray-600">
          Besuche unsere Einrichtungen und entdecke, wie wir dir helfen können, deine Ziele zu erreichen
        </p>

        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href={`/${currentLang}/kontakt`}
            text="Besuch Buchen"
            icon="zap"
            size="lg"
            variant="glow"
          />
          
          <ButtonSecondary 
            href={`/${currentLang}/dienstleistungen/personliches-training`}
            text="Dienstleistungen"
            icon="arrow"
            variant="outline"
            size="lg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <FAQs 
    faqs={faqsGymDE}
    title="Häufig Gestellte Fragen über das Fitnessstudio"
    subtitle="Alles, was Sie über unser exklusives Fitnessstudio wissen müssen"
  />

  <!-- FAQPage Schema for SEO -->
  <FAQSchema faqs={faqsGymDE} />

  <!-- ImageGallery Schema für SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(imageGallerySchema)} />

</Layout>


