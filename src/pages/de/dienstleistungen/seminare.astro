---
import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import translations from '../../../../public/locales/de/services.json';
import FAQs from '@components/faq/FAQs.astro';
import FAQSchema from '@components/faq/FAQSchema.astro';
import { faqsSeminariosDE } from '@data/faqs-de';
const t = translations.seminars;
const currentLang = 'de';
---
<Layout title={t.meta.title} description={t.meta.description}>
  <ServiceDetailHeader backLink={{href: `/${currentLang}/dienstleistungen`, text: translations.back_to_services}} title="SEMINARE" subtitle="Intensive und spezialisierte Schulung zu fortgeschrittenen Bodybuilding- und Fitnessthemen mit Branchenexperten." backgroundImage="/images/academia/seminars-hero.jpeg"/>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">Lernen Von <span class="text-red-600">Den Besten</span></h2><p class="text-lg leading-relaxed text-gray-700">Die <strong>Scorus Fitness Seminare</strong> geben Ihnen Zugang zu intensiver Schulung mit anerkannten Experten. Fortgeschrittene Inhalte, Networking und offizielle Zertifizierung.</p></div></div></section>
  <section class="bg-gray-50 py-24"><div class="container"><div class="mx-auto max-w-6xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">{t.format_title}</h2></div><div class="grid gap-8 md:grid-cols-3">{Object.values(t.format).map((item: any) => (<div class="group rounded-lg bg-white p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl"><div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-black transition-all duration-300 group-hover:bg-red-600"><span class="text-3xl">{item.icon}</span></div><h3 class="mb-3 text-xl font-black uppercase text-black">{item.title}</h3><p class="text-sm leading-relaxed text-gray-600">{item.description}</p></div>))}</div></div></div></section>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">{t.themes_title}</h2></div><div class="space-y-6">{Object.values(t.themes).map((theme: any) => (<div class="flex items-start gap-4 rounded-lg border-l-4 border-red-600 bg-gray-50 p-6 transition-all duration-300 hover:bg-gray-100 hover:shadow-lg"><svg class="mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><div><h3 class="mb-2 font-bold text-black">{theme.title}</h3><p class="text-sm text-gray-600">{theme.description}</p></div></div>))}</div></div></div></section>
  <section class="bg-black py-24 text-white"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter md:text-5xl">{t.includes_title}</h2></div><div class="grid gap-6 md:grid-cols-2">{Object.values(t.includes).map((item: any) => (<div class="flex items-start gap-4 rounded-lg bg-white/5 p-6 backdrop-blur-sm transition-all duration-300 hover:bg-white/10"><svg class="mt-1 h-8 w-8 flex-shrink-0 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg><div><h3 class="mb-2 text-xl font-bold uppercase">{item.title}</h3><p class="text-sm text-gray-300">{item.description}</p></div></div>))}</div></div></div></section>
  <section class="bg-white py-32"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-5xl font-black uppercase tracking-tighter text-black md:text-6xl">{t.cta_title}</h2><p class="mb-8 text-xl text-gray-600">{t.cta_description}</p><div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12"><a href="tel:+34673975252" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg><span class="font-bold text-black group-hover:text-red-600">+34 673 97 52 52</span></a><a href={`/${currentLang}/kontakt`} class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg><span class="font-bold text-black group-hover:text-red-600">Kontaktformular</span></a></div><div class="flex flex-col items-center justify-center gap-6 sm:flex-row"><ButtonPrimary href={`/${currentLang}/kontakt`} text="Termine Prüfen" icon="zap" size="xl" variant="glow"/><ButtonSecondary href={`/${currentLang}/dienstleistungen`} text="Alle Dienstleistungen" icon="arrow" variant="glass" size="xl"/></div></div></div></section>

  <!-- FAQs Section -->
  <FAQs 
    faqs={faqsSeminariosDE}
    title="Häufig Gestellte Fragen über Seminare"
    subtitle="Alles, was Sie über unsere intensiven Seminare wissen müssen"
  />

  <!-- FAQPage Schema for SEO -->
  <FAQSchema faqs={faqsSeminariosDE} />

</Layout>
