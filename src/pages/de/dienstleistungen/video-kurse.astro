---
/**
 * Página de Video Cursos - Diseño Netflix
 * German video courses page with Netflix-style design
 */

import Layout from '@/layouts/Layout.astro';
import VideoCourseCarousel from '@/components/sections/VideoCourseCarousel.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import CTAFinal from '@components/sections/CTAFinal.astro';

const coursesData = {
  seo: {
    title: "Video Kurse Online | Scorus Fitness",
    description: "Zugang zu Online-Videokursen zu Training und Ernährung. Lernen Sie in Ihrem eigenen Tempo mit qualitativ hochwertigem 100% Videoinhalten und zusätzlichem Material."
  },
  courses: [
    {
      id: 'nutrition',
      title: 'Ernährung und Diät',
      description: 'Erfahren Sie, wie Sie Ihre Ernährung strukturieren und Makronährstoffe berechnen, um Ihre körperlichen Ziele zu erreichen.',
      icon: 'nutrition',
      color: 'from-emerald-600 to-teal-600'
    },
    {
      id: 'supplement',
      title: 'Intelligente Supplementierung',
      description: 'Entdecken Sie, welche Nahrungsergänzungsmittel wirklich wirken und wie Sie sie in Ihre Routine integrieren.',
      icon: 'supplement',
      color: 'from-blue-600 to-cyan-600'
    },
    {
      id: 'training',
      title: 'Strukturiertes Training',
      description: 'Muskelaufbau-, Kraft- und Ausdauerroutinen, die von Experten entwickelt wurden.',
      icon: 'training',
      color: 'from-red-600 to-pink-600'
    },
    {
      id: 'antiaging',
      title: 'Anti-Aging und optimale Gesundheit',
      description: 'Strategien zur Verlangsamung des Alterns und Verbesserung der Lebensqualität.',
      icon: 'antiaging',
      color: 'from-purple-600 to-violet-600'
    },
    {
      id: 'cardio',
      title: 'Cardio und Fettabbau',
      description: 'Wirksame Methoden zur Verbesserung der Ausdauer und zum nachhaltigen Fettabbau.',
      icon: 'cardio',
      color: 'from-orange-600 to-red-600'
    },
    {
      id: 'wellness',
      title: 'Prävention und Wohlbefinden',
      description: 'Tipps zur Vermeidung von Verletzungen und Optimierung der Langlebigkeit und Erholung.',
      icon: 'wellness',
      color: 'from-indigo-600 to-blue-600'
    }
  ]
};
---

<Layout
  title={coursesData.seo.title}
  description={coursesData.seo.description}
>
  <!-- Hero Section with Background Video -->
  <section class="relative min-h-screen bg-black overflow-hidden flex items-center justify-center pt-32 pb-16">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-red-600 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-600 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container text-center">
      <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
        <p class="text-sm font-bold uppercase tracking-widest text-red-600">
          SCORUS ACADEMY
        </p>
      </div>

      <h1 class="mb-8 text-5xl md:text-7xl font-black uppercase tracking-tighter text-white max-w-4xl mx-auto">
        Video Kurse <span class="text-red-600">Online</span>
      </h1>

      <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        Möchten Sie mit mir trainieren, aber die Entfernung macht es schwierig? Greifen Sie auf meine Videokurse zu und lernen Sie, wie ein Profi zu trainieren und sich zu ernähren, überall und jederzeit.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <ButtonPrimary 
          href="#kurse" 
          text="Kurse Erkunden" 
          icon="zap"
          size="xl"
          variant="glow"
        />
        <a
          href="#wie-es-funktioniert"
          class="inline-flex items-center gap-3 px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-black transition-all duration-300 rounded-lg font-black uppercase tracking-wider"
        >
          So funktioniert es
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-16 animate-bounce">
        <svg class="w-6 h-6 text-red-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="bg-white py-20 md:py-32">
    <div class="container">
      <div class="grid md:grid-cols-5 gap-8">
        <!-- Feature 1 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            100% Video
          </h3>
          <p class="text-gray-600">
            Detaillierte und praktische Erklärungen für jedes Konzept
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-3a6 6 0 11-12 0 6 6 0 0112 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Zusatzmaterial
          </h3>
          <p class="text-gray-600">
            Tabellen, Diäten, Rezepte und herunterladbare PDF-Anleitungen
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Unbegrenzter Zugriff
          </h3>
          <p class="text-gray-600">
            Lernen Sie in Ihrem Tempo, wann und wo Sie möchten
          </p>
        </div>

        <!-- Feature 4 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Bewährte Methode
          </h3>
          <p class="text-gray-600">
            Auf Wissenschaft und 20+ Jahre Erfahrung basierend
          </p>
        </div>

        <!-- Feature 5 -->
        <div class="text-center">
          <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 mb-6">
            <svg class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m0 0l-2-1m2 1v2.5M14 4l-2 1m0 0L10 4m2 1v2.5"/>
            </svg>
          </div>
          <h3 class="text-xl font-black uppercase tracking-tight text-black mb-3">
            Garantierte Ergebnisse
          </h3>
          <p class="text-gray-600">
            Wenden Sie das Wissen an und sehen Sie echte Veränderungen
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Courses Carousel Section -->
  <section id="kurse" class="py-4">
    <VideoCourseCarousel 
      title="Unsere"
      titleHighlight="Video Kurse"
      courses={coursesData.courses}
      nextLabel="Nächste"
      prevLabel="Vorherige"
    />
  </section>

  <!-- How It Works Section -->
  <section id="wie-es-funktioniert" class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-black mb-4">
          Wie <span class="text-red-600">Video Kurse</span> Funktionieren
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Ein einfacher, aber effektiver Prozess, um Ihr Wissen in Ergebnisse umzuwandeln
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-12">
        <!-- Step 1 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                1
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Wählen Sie Ihren Kurs
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Wählen Sie denjenigen aus, der am besten zu Ihren Zielen und Ihrem Erfahrungsniveau passt. Wir haben Optionen für Anfänger bis Fortgeschrittene.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 2 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                2
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Zugriff auf Inhalte
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Lernen Sie mit detaillierten Videos, herunterladbaren Materialien und ergänzenden Ressourcen. Alles ist nach Modulen organisiert.
              </p>
            </div>
          </div>
          {/* Connector line */}
          <div class="hidden md:block absolute -right-6 top-12 w-12 h-1 bg-gradient-to-r from-red-600 to-transparent"></div>
        </div>

        <!-- Step 3 -->
        <div class="relative">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl">
                3
              </div>
            </div>
            <div class="ml-6">
              <h3 class="text-2xl font-black uppercase tracking-tight text-black mb-3">
                Anwenden und Transformieren
              </h3>
              <p class="text-gray-600 leading-relaxed">
                Folgen Sie jedem Schritt und wenden Sie das Gelernte im wirklichen Leben an. Die Ergebnisse werden kommen, wenn Sie konsistent bleiben.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="mt-16 text-center">
        <ButtonPrimary 
          href="#kurse" 
          text="Alle Kurse Anschauen" 
          icon="arrow"
          size="lg"
          variant="default"
        />
      </div>
    </div>
  </section>

  <!-- Comparison/Benefits Section -->
  <section class="bg-black py-24 md:py-32 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16 text-center">
          <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter mb-4">
            Warum <span class="text-red-600">Video Kurse</span>?
          </h2>
          <p class="text-xl text-gray-400">
            Der flexibelste und zugänglichste Weg, um hochwertige Bildung zu erhalten
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Flexibles Lernen</h4>
                <p class="text-gray-400">Studieren Sie in Ihrem eigenen Tempo, wann und wo Sie möchten. Keine festen Zeitpläne.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Premium-Inhalte</h4>
                <p class="text-gray-400">Zugriff auf exklusives Wissen von Fachleuten mit jahrelanger Erfahrung.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Lebenslanger Zugriff</h4>
                <p class="text-gray-400">Kaufen Sie einmal, greifen Sie für immer zu. Einschließlich zukünftiger Updates.</p>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Exklusive Gemeinschaft</h4>
                <p class="text-gray-400">Verbinden Sie sich mit anderen Studierenden und teilen Sie Ihren Fortschritt in unserer Gemeinschaft.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Zertifikate</h4>
                <p class="text-gray-400">Erhalten Sie Abschlusszertifikate für jeden absolvierten Kurs.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h4 class="font-black uppercase text-white mb-1">Zufriedenheitsgarantie</h4>
                <p class="text-gray-400">30 Tage Geld-zurück-Garantie, wenn Sie nicht zufrieden sind.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <CTAFinal 
    tagline="BEREIT ZUM STARTEN?"
    title="Wandeln Sie Ihr"
    titleHighlight="Wissen in Ergebnisse Um"
    description="Greifen Sie jetzt auf unsere Videokurse zu und beginnen Sie Ihre Transformationsreise. Hunderte von Schülern sehen bereits Ergebnisse."
    primaryCta={{
      text: "Verfügbare Kurse Anschauen",
      href: "#kurse",
      icon: "zap"
    }}
    secondaryCta={{
      text: "Kostenlose Beratung",
      href: "/de/kontakt"
    }}
  />
</Layout>
