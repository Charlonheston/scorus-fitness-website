---
import Layout from '@/layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
const currentLang = 'de';
---
<Layout title="Online-Coaching | Scorus Fitness" description="Einmalige Online-Konsultationen mit Bernat Scorus zur Klärung Ihrer Fragen zu Training, Ernährung und Supplementierung.">
  <ServiceDetailHeader backLink={{href: `/${currentLang}/dienstleistungen`, text: "Zurück zu Dienstleistungen"}} title="ONLINE-COACHING" subtitle="Personalisierte einmalige Beratungen zur Lösung Ihrer spezifischen Fragen zu Training, Ernährung oder jedem Aspekt des Fitness."/>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-4xl font-black uppercase tracking-tight text-black md:text-5xl">Lösen Sie Ihre <span class="text-red-600">Fragen Jetzt</span></h2><p class="text-lg leading-relaxed text-gray-700"><strong>Online-Coaching</strong> ist ideal, wenn Sie spezifische Fragen zu Ihrem Training, Ihrer Ernährung oder Supplementierung haben. Keine langfristigen Verpflichtungen, Sie zahlen nur für die Beratung, die Sie benötigen.</p></div></div></section>
  <section class="bg-gray-50 py-24"><div class="container"><div class="mx-auto max-w-6xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">Was Ist <span class="text-red-600">Enthalten</span>?</h2></div><div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">{[{title:"Individueller Videoanruf",desc:"30-60 Minuten Videoanruf-Sitzung zur Lösung Ihrer Fragen",icon:"M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"},{title:"Personalisierte Analyse",desc:"Überprüfung Ihrer aktuellen Routine, Diät oder Plan mit spezifischen Empfehlungen",icon:"M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"},{title:"Aktionsplan",desc:"Schriftliches Dokument mit Empfehlungen und zu befolgenden Schritten",icon:"M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"}].map(s=>(<div class="group rounded-lg bg-white p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl"><div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-black transition-all duration-300 group-hover:bg-red-600"><svg class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d={s.icon}/></svg></div><h3 class="mb-3 text-xl font-black uppercase text-black">{s.title}</h3><p class="text-sm leading-relaxed text-gray-600">{s.desc}</p></div>))}</div></div></div></section>
  <section class="bg-white py-24"><div class="container"><div class="mx-auto max-w-5xl"><div class="mb-16 text-center"><h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">Beratungs<span class="text-red-600">themen</span></h2></div><div class="grid gap-6 md:grid-cols-2">{["Routineanalyse und personalisiertes Feedback","Diätüberprüfung und Ernährungsoptimierung","Supplementierungsempfehlungen für Ihre Situation","Korrektur der Übungstechnik","Planungs- und Periodisierungsstrategien","Allgemeine Fragen zu Fitness und Bodybuilding"].map(t=>(<div class="flex items-start gap-4 rounded-lg border-l-4 border-red-600 bg-gray-50 p-6 transition-all duration-300 hover:bg-gray-100"><svg class="mt-1 h-6 w-6 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><p class="text-lg font-semibold text-gray-800">{t}</p></div>))}</div></div></div></section>
  <section class="bg-black py-32 text-white"><div class="container"><div class="mx-auto max-w-4xl text-center"><h2 class="mb-6 text-5xl font-black uppercase tracking-tighter md:text-6xl">Haben Sie <span class="text-red-600">Fragen</span>?</h2><p class="mb-8 text-xl text-gray-300">Buchen Sie Ihre Coaching-Sitzung und erhalten Sie professionelle Antworten auf Ihre Fragen. Keine Verpflichtungen, zahlen Sie nur für das, was Sie benötigen.</p><div class="mb-12 flex flex-col items-center justify-center gap-6 md:flex-row md:gap-12"><a href="tel:+34673975252" class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg><span class="font-bold text-white group-hover:text-red-600">+34 673 97 52 52</span></a><a href={`/${currentLang}/kontakt`} class="group flex items-center gap-3 text-lg transition-colors hover:text-red-600"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg><span class="font-bold text-white group-hover:text-red-600">Kontaktformular</span></a></div><div class="flex flex-col items-center justify-center gap-6 sm:flex-row"><ButtonPrimary href={`/${currentLang}/kontakt`} text="Coaching Buchen" icon="zap" size="xl" variant="glow"/><ButtonSecondary href={`/${currentLang}/dienstleistungen`} text="Alle Dienstleistungen" icon="arrow" variant="glass" size="xl"/></div></div></div></section>
</Layout>

