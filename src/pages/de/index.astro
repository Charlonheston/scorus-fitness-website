---
/**
 * Deutsche Startseite - Premium Schwarz, Weiß und Rot Design
 * Scorus Fitness - Hauptseite
 * Vollständige Version mit allen Modulen
 */

import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import ButtonGhost from '@components/ui/ButtonGhost.astro';

// Bilder importieren
import heroImage from '../../../public/images/hero/bernat-hero.jpg';
import aboutImage from '../../../public/images/about/bernat-about.jpg';
import gymImage from '../../../public/images/gym/gym-01.jpg';

// Neueste Blog-Posts abrufen
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const mainServices = [
  {
    title: 'Persönliches Training',
    description: 'Lernen Sie Übungen richtig auszuführen, sich zu dehnen und zu atmen.',
    cta: 'Jetzt transformieren!',
    iconType: 'dumbbell',
    href: '/de/dienstleistungen/personliches-training',
  },
  {
    title: 'Personalisierte Ernährung',
    description: 'Individueller Ernährungsplan für alle Arten von Diäten.',
    cta: 'Entdecken Sie Ihren Plan',
    iconType: 'apple',
    href: '/de/dienstleistungen',
  },
  {
    title: 'Personalisierte Routinen',
    description: 'Individuell gestaltete Trainings routinen mit visuellem Design.',
    cta: 'Bereiten Sie sich vor',
    iconType: 'clipboard',
    href: '/de/dienstleistungen',
  },
  {
    title: 'Online-Beratung',
    description: 'Antworten auf alle Ihre Fragen.',
    cta: 'Beratung vom Champion',
    iconType: 'monitor',
    href: '/de/dienstleistungen/online-beratung',
  },
];

const features = [
  {
    title: 'Begleitung',
    description: 'Klären Sie alle Zweifel durch individuelle oder Gruppen-Videoanrufe',
    iconType: 'users',
  },
  {
    title: 'Persönliches Training',
    description: 'Sitzungen angepasst an Ihr Niveau und Ihren aktuellen körperlichen Zustand, unabhängig von Ihrem Ausgangspunkt.',
    iconType: 'target',
  },
  {
    title: 'Maßgeschneiderte Ernährung',
    description: 'Personalisierte Ernährungspläne für alle Arten von Diäten: vegan, glutenfrei, keto, FODMAP und mehr.',
    iconType: 'utensils',
  },
];

const programs = [
  {
    title: 'RE-BORN',
    description: 'Umfassende Transformation auf körperlicher, geistiger und spiritueller Ebene.',
    badge: 'Premium',
    iconType: 'zap',
    href: '/de/akademie/re-born',
  },
  {
    title: 'Scorus Campus',
    description: 'Exklusives 7-Tage intensives Trainingserlebnis.',
    badge: 'Premium',
    iconType: 'graduation-cap',
    href: '/de/akademie/scorus-campus',
  },
  {
    title: 'Seminare',
    description: 'Spezialisierte Schulung in fortgeschrittenen Trainingstechniken.',
    iconType: 'presentation',
    href: '/de/dienstleistungen/seminare',
  },
  {
    title: 'Video-Kurse',
    description: 'Lernen Sie in Ihrem eigenen Tempo mit exklusiven voraufgezeichneten Inhalten.',
    iconType: 'video',
    href: '/de/dienstleistungen/video-kurse',
  },
  {
    title: 'Workshops',
    description: 'Praktische Sitzungen zur Perfektionierung Ihrer Technik.',
    iconType: 'wrench',
    href: '/de/dienstleistungen/workshops',
  },
  {
    title: 'Online-Beratung',
    description: 'Professionelle Beratung von überall.',
    iconType: 'laptop',
    href: '/de/dienstleistungen/online-beratung',
  },
];

const stats = [
  { value: '4500+', label: 'Transformierte Kunden' },
  { value: '30+', label: 'Jahre Erfahrung' },
  { value: '50+', label: 'Gewonnene Trophäen' },
  { value: '100%', label: 'Totales Engagement' },
];

const transformationSteps = [
  {
    number: '1',
    title: 'Fordern Sie Ihre Beratung an',
    description: 'Kontaktieren Sie mich und wählen Sie den Service, der Ihren Bedürfnissen am besten entspricht, oder vereinbaren Sie eine Beratung, um die ideale Option zu finden.',
  },
  {
    number: '2',
    title: 'Beginnen Sie Ihren Plan',
    description: 'Zugang zu einem Trainings- und Ernährungsprogramm, das auf Ihre Ziele und Ihren Lebensstil abgestimmt ist.',
  },
  {
    number: '3',
    title: 'Transformieren Sie sich',
    description: 'Transformieren Sie Ihren Körper und Geist mit einem strukturierten Plan und meiner persönlichen Unterstützung. Folgen Sie den richtigen Richtlinien und erzielen Sie die Ergebnisse, die Sie sich immer gewünscht haben.',
  },
];

const testimonials = [
  {
    name: 'Alberto Bernal',
    text: 'Bernat ist viel mehr als ein Personal Trainer. Seine Professionalität spricht für sich, aber was ihn wirklich auszeichnet, ist die großartige Person, die er ist. Er hilft Ihnen nicht nur, sich körperlich zu verbessern, sondern motiviert Sie auch in Ihrem persönlichen Wachstum und Lernen.',
    image: 'testimonial-1',
  },
  {
    name: 'Mónica Olmeda',
    role: 'Klassisches Pilates',
    text: 'Bernat ist nicht nur eine ausgezeichnete Person, sondern auch ein Personal Trainer mit unvergleichlicher Erfahrung und Charisma. Sein Fitnessstudio ist sehr familiär und angenehm. Er beobachtet ständig jeden Kunden und stellt sicher, dass die Technik korrekt ist, um die besten Ergebnisse zu erzielen.',
    image: 'testimonial-2',
  },
  {
    name: 'Aaron Navarro',
    text: 'Ein 10/10 Personal Trainer. Ich trainiere seit etwa 3 Monaten mit Bernat und bin begeistert. In seinem Fitnessstudio sind die Sitzungen klein, mit maximal 2 oder 3 Personen, was ein personalisierteres Training ermöglicht. Ich empfehle ihn immer jedem, der mich nach einem Personal Trainer in Alicante fragt.',
    image: 'testimonial-3',
  },
];
---

<Layout
  title="Scorus Fitness | Persönliches Training in Alicante"
  description="Personal Training Center und Fitnessstudio in Alicante. Körperliche Transformation mit personalisierten Programmen, RE-BORN und Scorus Campus. Bernat Scorus, professioneller Bodybuilder."
>
  <!-- Hero Sektion -->
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden bg-black">
    <div class="absolute inset-0">
      <Image
        src={heroImage}
        alt="Bernat Scorus - Persönliches Training"
        class="h-full w-full object-cover"
        widths={[640, 768, 1024, 1280, 1536, 1920]}
        sizes="100vw"
        quality={80}
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/70 to-black/80"></div>
    </div>
    
    <div class="absolute left-0 top-1/4 h-1 w-32 bg-gradient-to-r from-red-600 to-transparent"></div>
    <div class="absolute right-0 top-2/3 h-1 w-32 bg-gradient-to-l from-red-600 to-transparent"></div>
    
    <div class="container relative z-10 py-32 pt-40 text-center">
      <div class="mx-auto max-w-6xl">
        <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Scorus Fitness
          </p>
        </div>
        
        <h1 class="mb-8 text-7xl font-black uppercase leading-[0.9] tracking-tighter text-white md:text-8xl lg:text-9xl">
          TRANSFORMIEREN<br />
          <span class="text-red-600">SIE IHREN KÖRPER</span>
        </h1>
        
        <p class="mx-auto mb-12 max-w-2xl text-xl leading-relaxed text-gray-300 md:text-2xl">
          Elite-Training. Außergewöhnliche Ergebnisse.<br />
          <span class="font-semibold text-red-600">Ihre Transformation beginnt hier.</span>
        </p>
        
        <div class="flex flex-col items-center justify-center gap-6 sm:flex-row">
          <ButtonPrimary 
            href="/de/kontakt" 
            text="Jetzt Beginnen" 
            icon="fire"
            size="lg"
            variant="glow"
          />
          
          <ButtonSecondary 
            href="/de/dienstleistungen" 
            text="Dienstleistungen Anzeigen"
            icon="eye"
            variant="glass"
            size="lg"
          />
        </div>
      </div>
    </div>

    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="flex flex-col items-center gap-2">
        <span class="text-xs font-semibold uppercase tracking-widest text-gray-400">Scrollen</span>
        <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Hauptdienstleistungen Sektion -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Hauptdienstleistungen
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          STARTEN SIE IHRE <span class="text-red-600">TRANSFORMATION</span>
        </h2>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {mainServices.map((service) => (
          <a
            href={service.href}
            class="group relative overflow-hidden bg-white p-6 sm:p-8 shadow-lg transition-all duration-300 hover:bg-black hover:shadow-2xl hover:shadow-red-600/30 hover:-translate-y-1"
          >
            <div class="absolute right-0 top-0 h-16 w-16 bg-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-20" style="clip-path: polygon(100% 0, 0 0, 100% 100%)"></div>
            
            <div class="relative z-10">
              <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-gray-100 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600">
                {service.iconType === 'dumbbell' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 11l2 2m10-2l-2 2"/>
                  </svg>
                )}
                {service.iconType === 'apple' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                  </svg>
                )}
                {service.iconType === 'clipboard' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                )}
                {service.iconType === 'monitor' && (
                  <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                )}
              </div>
              
              <h3 class="mb-3 text-lg sm:text-xl font-black uppercase tracking-tight text-black transition-colors group-hover:text-white">
                {service.title}
              </h3>
              <p class="mb-4 text-sm leading-relaxed text-gray-600 transition-colors group-hover:text-gray-200">
                {service.description}
              </p>
              
              <div class="inline-flex items-center gap-2 text-xs sm:text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
                {service.cta}
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Features Section -->
  <section class="bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Über Uns
          </p>
        </div>
        <h2 class="mx-auto max-w-4xl text-4xl font-black uppercase leading-tight tracking-tight text-white md:text-5xl">
          WIR TRANSFORMIEREN DEINEN KÖRPER,<br />
          <span class="text-red-600">STEIGERN DEINE LEISTUNG</span>
        </h2>
        <p class="mx-auto mt-6 max-w-3xl text-lg text-gray-300">
          Vergiss generische Diäten und Routinen. Erreiche deine beste Version mit einem 100% personalisierten Plan und echter Begleitung.
        </p>
      </div>

      <div class="grid gap-12 md:grid-cols-3">
        {features.map((feature) => (
          <div class="group text-center">
            <div class="mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-600/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600 group-hover:shadow-lg group-hover:shadow-red-600/50">
              {feature.iconType === 'users' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
              {feature.iconType === 'target' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {feature.iconType === 'utensils' && (
                <svg class="h-10 w-10 text-red-600 transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              )}
            </div>
            
            <h3 class="mb-4 text-2xl font-black uppercase tracking-tight text-white">
              {feature.title}
            </h3>
            <p class="text-gray-400">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Programs Showcase -->
  <section class="bg-white py-24 md:py-32">
    <div class="container">
      <div class="mb-16 text-center">
        <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
          <p class="text-sm font-bold uppercase tracking-widest text-red-600">
            Unsere Programme
          </p>
        </div>
        <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
          ENTDECKE DIE PROGRAMME DIE<br />
          <span class="text-red-600">KÖRPER UND GEIST TRANSFORMIEREN</span>
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {programs.map((program) => (
          <a
            href={program.href}
            class="group relative overflow-hidden bg-black p-8 shadow-xl transition-all duration-300 hover:bg-red-600 hover:shadow-2xl hover:shadow-red-600/50 hover:-translate-y-1"
          >
            {program.badge && (
              <div class="absolute right-4 top-4 rounded-full bg-red-600 px-3 py-1 text-xs font-bold uppercase tracking-wider text-white shadow-lg group-hover:bg-black">
                {program.badge}
              </div>
            )}
            
            <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-white/10 transition-all duration-300 group-hover:scale-110 group-hover:bg-white/20 group-hover:shadow-lg">
              {program.iconType === 'zap' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
              {program.iconType === 'graduation-cap' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                </svg>
              )}
              {program.iconType === 'presentation' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                </svg>
              )}
              {program.iconType === 'video' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  <circle cx="9" cy="12" r="2"/>
                </svg>
              )}
              {program.iconType === 'wrench' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              )}
              {program.iconType === 'laptop' && (
                <svg class="h-8 w-8 text-white transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              )}
            </div>
            
            <h3 class="mb-3 text-2xl font-black uppercase tracking-tight text-white transition-colors group-hover:text-white">
              {program.title}
            </h3>
            <p class="mb-4 leading-relaxed text-gray-300 transition-colors group-hover:text-white">
              {program.description}
            </p>
            
            <div class="inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
              Mehr Erfahren
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Scorus GYM Section -->
  <section class="relative overflow-hidden bg-black py-24 text-white md:py-32">
    <div class="container">
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
        <div class="relative">
          <Image
            src={gymImage}
            alt="Scorus GYM - Trainingseinrichtungen"
            class="h-full w-full object-cover shadow-2xl"
            width={800}
            height={600}
            quality={90}
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        </div>

        <div class="flex flex-col justify-center">
          <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
            <p class="text-sm font-bold uppercase tracking-widest text-red-600">
              Unsere Einrichtungen
            </p>
          </div>
          
          <h2 class="mb-6 text-4xl font-black uppercase leading-tight tracking-tight text-white md:text-5xl">
            SCORUS <span class="text-red-600">GYM</span>
          </h2>
          
          <p class="mb-8 text-lg leading-relaxed text-gray-300">
