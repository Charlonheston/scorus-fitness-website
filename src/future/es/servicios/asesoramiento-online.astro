---
/**
 * Asesoramiento Online - Diseño Premium 2025
 * Página completa con todos los módulos de la página antigua renovados
 */

import Layout from '@layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import translations from '../../../../public/locales/es/services.json';
import FAQs from '@components/faq/FAQs.astro';
import FAQSchema from '@components/faq/FAQSchema.astro';
import { faqsAsesoramientoOnline } from '@data/faqs';
import { getOfferSchema } from '@lib/schema';

const t = translations.online_counseling;
const currentLang = 'es';

// Offer Schema para Dieta Personalizada
const offerSchema = getOfferSchema({
  name: 'Dieta Personalizada',
  price: '100',
  priceCurrency: 'EUR',
  description: 'Plan nutricional completamente personalizado diseñado por Bernat Scorus según tus objetivos, metabolismo y estilo de vida.',
  url: 'https://scorusfitness.com/es/servicios/asesoramiento-online',
  availability: 'https://schema.org/InStock',
});
---

<Layout
  title={t.meta.title}
  description={t.meta.description}
>
  <!-- Header Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/servicios`,
      text: translations.back_to_services
    }}
    title={t.title}
    subtitle={t.subtitle}
    description={t.hero_description}
    tagline={t.hero_tagline}
    backgroundImage="/images/services/online-coaching-hero.jpg"
  />

  <!-- Harbiz Story Section - Fondo Blanco -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl px-4">
        <div class="mb-12 sm:mb-14 text-center">
          <span class="inline-flex items-center justify-center rounded-full bg-red-600/10 px-6 py-2 text-xs font-semibold uppercase tracking-[0.4em] text-red-600">
            {t.hero_label}
          </span>
          <h2 class="mt-6 text-3xl sm:text-4xl font-extrabold uppercase tracking-tight text-balance text-black md:text-5xl">
            {t.story.title}
          </h2>
          <p class="mt-4 text-base sm:text-lg text-gray-700">
            {t.hero_description}
          </p>
        </div>

        <div class="grid gap-8 lg:grid-cols-2">
          <div class="space-y-6 text-base sm:text-lg leading-relaxed text-gray-700">
            <p class="text-lg sm:text-xl font-semibold text-black" set:html={t.story.intro}></p>
            <p set:html={t.story.transformation}></p>
            <p set:html={t.story.family}></p>
          </div>

          <div class="space-y-6 rounded-3xl bg-gray-50 p-6 sm:p-8 shadow-lg">
            <p class="text-lg sm:text-xl font-semibold text-black" set:html={t.story.results}></p>
            <div class="h-px w-full bg-gray-300"></div>
            <p class="text-sm uppercase tracking-[0.3em] text-red-600">
              {t.story.cta}
            </p>
            <!-- CTA Button -->
            <div class="mt-6">
              <ButtonPrimary
                href={`/${currentLang}/contacto`}
                text="Solicita tu acceso"
                icon="arrow"
                size="lg"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Benefits Section - Con Background de Harbiz -->
  <section class="relative isolate overflow-hidden py-16 sm:py-24 text-white">
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/images/hero/harbiz.webp');"
    ></div>
    <div class="absolute inset-0 bg-black/65"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/50 to-red-900/30 mix-blend-multiply"></div>

    <div class="container relative z-10">
      <div class="mx-auto max-w-6xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <h2 class="mb-4 text-3xl sm:text-4xl font-black uppercase tracking-tighter text-white md:text-5xl">
            {t.benefits.title}
          </h2>
        </div>

        <div class="grid gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-3">
          {t.benefits.items.map((item) => (
            <div class="group flex flex-col items-center rounded-2xl bg-white/10 backdrop-blur-sm p-6 sm:p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:bg-white/20 hover:shadow-2xl">
              <div class="mb-4 flex h-16 w-16 sm:h-20 sm:w-20 items-center justify-center rounded-full bg-red-600 transition-transform group-hover:scale-110">
                <svg class="h-8 w-8 sm:h-10 sm:w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="mb-3 text-lg sm:text-xl font-black uppercase text-white">{item.title}</h3>
              <p class="text-sm sm:text-base text-gray-100/90 leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Steps Section - Pasos para transformar tu físico -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl text-center px-4">
        <p class="text-xs font-semibold uppercase tracking-[0.35em] text-red-600">
          Método Scorus
        </p>
        <h2 class="mt-4 text-3xl sm:text-4xl md:text-5xl font-black uppercase tracking-tight text-balance text-black">
          Pasos para transformar <span class="text-red-600">tu físico</span>
        </h2>
        <p class="mt-4 text-base sm:text-lg text-gray-700">
          Tu evolución empieza con un plan estructurado. Sigue estos tres pasos y alcanza tu mejor versión.
        </p>
      </div>

      <div class="mt-12 sm:mt-16 mx-auto max-w-6xl px-4">
        <div class="grid gap-8 md:grid-cols-3">
          <!-- Paso 1 -->
          <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-b from-white to-gray-50 border border-gray-200 shadow-sm transition-all duration-300 hover:-translate-y-2 hover:border-red-600 hover:shadow-xl hover:shadow-red-600/20">
            <div class="absolute -top-10 right-0 h-24 w-24 rounded-full bg-red-600/5 blur-3xl group-hover:bg-red-600/15 transition-all duration-300"></div>
            <div class="relative p-8">
              <div class="inline-flex h-14 w-14 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl shadow-lg shadow-red-600/40">
                1
              </div>
              <h3 class="mt-6 text-lg sm:text-xl font-black uppercase tracking-tight text-black">
                Solicita tu asesoría
              </h3>
              <p class="mt-3 text-sm sm:text-base leading-relaxed text-gray-700">
                Ponte en contacto conmigo y elige el servicio que mejor se adapte a tus necesidades o agenda una consultoría para encontrar la opción ideal.
              </p>
            </div>
          </div>

          <!-- Paso 2 -->
          <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-b from-white to-gray-50 border border-gray-200 shadow-sm transition-all duration-300 hover:-translate-y-2 hover:border-red-600 hover:shadow-xl hover:shadow-red-600/20">
            <div class="absolute -top-10 right-0 h-24 w-24 rounded-full bg-red-600/5 blur-3xl group-hover:bg-red-600/15 transition-all duration-300"></div>
            <div class="relative p-8">
              <div class="inline-flex h-14 w-14 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl shadow-lg shadow-red-600/40">
                2
              </div>
              <h3 class="mt-6 text-lg sm:text-xl font-black uppercase tracking-tight text-black">
                Empieza tu plan
              </h3>
              <p class="mt-3 text-sm sm:text-base leading-relaxed text-gray-700">
                Accede a un programa de entrenamiento y nutrición ajustado a tus objetivos y estilo de vida.
              </p>
            </div>
          </div>

          <!-- Paso 3 -->
          <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-b from-white to-gray-50 border border-gray-200 shadow-sm transition-all duration-300 hover:-translate-y-2 hover:border-red-600 hover:shadow-xl hover:shadow-red-600/20">
            <div class="absolute -top-10 right-0 h-24 w-24 rounded-full bg-red-600/5 blur-3xl group-hover:bg-red-600/15 transition-all duration-300"></div>
            <div class="relative p-8">
              <div class="inline-flex h-14 w-14 items-center justify-center rounded-full bg-red-600 text-white font-black text-2xl shadow-lg shadow-red-600/40">
                3
              </div>
              <h3 class="mt-6 text-lg sm:text-xl font-black uppercase tracking-tight text-black">
                Transfórmate
              </h3>
              <p class="mt-3 text-sm sm:text-base leading-relaxed text-gray-700">
                Transforma tu cuerpo y mente con un plan estructurado y mi acompañamiento personalizado. Sigue las pautas adecuadas y alcanza los resultados que siempre has deseado.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Scorus App Inside Section - Descubre Scorus app por dentro -->
  <section class="bg-black py-16 sm:py-24 text-white">
    <div class="container">
      <div class="mx-auto max-w-6xl px-4">
        <div class="grid gap-10 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,1.2fr)] items-center">
          <!-- Text + Tabs -->
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.35em] text-red-500">
              Scorus app
            </p>
            <h2 class="mt-4 text-3xl sm:text-4xl md:text-5xl font-black uppercase tracking-tight text-balance">
              Descubre <span class="text-red-500">Scorus app</span><br />
              por dentro
            </h2>
            <p class="mt-4 text-base sm:text-lg text-gray-300">
              Explora la experiencia premium de Scorus app y descubre todas las funcionalidades diseñadas para tu transformación.
            </p>

            <!-- Tabs -->
            <div
              class="mt-8 space-y-3"
              data-scorus-app-tabs
            >
              <button
                type="button"
                class="w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-left text-sm sm:text-base font-semibold uppercase tracking-[0.2em] text-gray-300 transition-all hover:border-red-500 hover:text-white data-[active='true']:border-red-500 data-[active='true']:bg-red-600 data-[active='true']:text-white"
                data-tab="0"
                data-active="true"
              >
                Dashboard principal
              </button>
              <button
                type="button"
                class="w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-left text-sm sm:text-base font-semibold uppercase tracking-[0.2em] text-gray-300 transition-all hover:border-red-500 hover:text-white data-[active='true']:border-red-500 data-[active='true']:bg-red-600 data-[active='true']:text-white"
                data-tab="1"
              >
                Planificación personalizada
              </button>
              <button
                type="button"
                class="w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-left text-sm sm:text-base font-semibold uppercase tracking-[0.2em] text-gray-300 transition-all hover:border-red-500 hover:text-white data-[active='true']:border-red-500 data-[active='true']:bg-red-600 data-[active='true']:text-white"
                data-tab="2"
              >
                Actividad física
              </button>
              <button
                type="button"
                class="w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-left text-sm sm:text-base font-semibold uppercase tracking-[0.2em] text-gray-300 transition-all hover:border-red-500 hover:text-white data-[active='true']:border-red-500 data-[active='true']:bg-red-600 data-[active='true']:text-white"
                data-tab="3"
              >
                Nutrición a medida
              </button>
              <button
                type="button"
                class="w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-left text-sm sm:text-base font-semibold uppercase tracking-[0.2em] text-gray-300 transition-all hover:border-red-500 hover:text-white data-[active='true']:border-red-500 data-[active='true']:bg-red-600 data-[active='true']:text-white"
                data-tab="4"
              >
                Chat directo
              </button>
              <button
                type="button"
                class="w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-left text-sm sm:text-base font-semibold uppercase tracking-[0.2em] text-gray-300 transition-all hover:border-red-500 hover:text-white data-[active='true']:border-red-500 data-[active='true']:bg-red-600 data-[active='true']:text-white"
                data-tab="5"
              >
                Evolución y métricas
              </button>
            </div>

            <!-- Features text of active slide -->
            <div class="mt-8 rounded-2xl border border-white/10 bg-white/5 p-5 sm:p-6" data-scorus-app-content>
              <h3 class="text-lg sm:text-xl font-bold text-white">
                Dashboard principal
              </h3>
              <p class="mt-2 text-sm sm:text-base text-gray-300">
                Vista general de tu progreso, métricas y actividad en tiempo real.
              </p>
              <ul class="mt-4 space-y-2 text-sm sm:text-base text-gray-200">
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-1.5 w-1.5 rounded-full bg-red-500"></span>
                  <span>Evolución de progreso</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-1.5 w-1.5 rounded-full bg-red-500"></span>
                  <span>Métricas en tiempo real</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-1.5 w-1.5 rounded-full bg-red-500"></span>
                  <span>Resumen de actividad</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Slider -->
          <div class="relative">
            <div class="relative overflow-hidden rounded-3xl border border-white/10 bg-gradient-to-br from-gray-900 via-black to-red-900/40 shadow-2xl">
              <!-- Slides -->
              <div class="relative aspect-[4/5] sm:aspect-[4/3]">
                <div class="absolute inset-0" data-scorus-app-slide="0" data-active="true">
                  <img
                    src="/images/scorus-app/dashboard-principal.webp"
                    alt="Dashboard principal de Scorus app"
                    class="h-full w-full object-cover"
                    loading="lazy"
                  />
                </div>
                <div class="absolute inset-0 hidden" data-scorus-app-slide="1">
                  <img
                    src="/images/scorus-app/planificacion-personalizada.webp"
                    alt="Planificación personalizada en Scorus app"
                    class="h-full w-full object-cover"
                    loading="lazy"
                  />
                </div>
                <div class="absolute inset-0 hidden" data-scorus-app-slide="2">
                  <img
                    src="/images/scorus-app/actividad-fisica.webp"
                    alt="Seguimiento de actividad física en Scorus app"
                    class="h-full w-full object-cover"
                    loading="lazy"
                  />
                </div>
                <div class="absolute inset-0 hidden" data-scorus-app-slide="3">
                  <img
                    src="/images/scorus-app/nutricion-a-medida.webp"
                    alt="Nutrición a medida en Scorus app"
                    class="h-full w-full object-cover"
                    loading="lazy"
                  />
                </div>
                <div class="absolute inset-0 hidden" data-scorus-app-slide="4">
                  <img
                    src="/images/scorus-app/chat-directo.webp"
                    alt="Chat directo de Scorus app"
                    class="h-full w-full object-cover"
                    loading="lazy"
                  />
                </div>
                <div class="absolute inset-0 hidden" data-scorus-app-slide="5">
                  <img
                    src="/images/scorus-app/evolucion-metricas.webp"
                    alt="Evolución y métricas en Scorus app"
                    class="h-full w-full object-cover"
                    loading="lazy"
                  />
                </div>
              </div>

              <!-- Gradient overlay + frame effect -->
              <div class="pointer-events-none absolute inset-0 rounded-3xl ring-1 ring-white/10"></div>
              <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            </div>

            <!-- Dot navigation -->
            <div class="mt-4 flex items-center justify-center gap-2">
              {Array.from({ length: 6 }).map((_, index) => (
                <button
                  type="button"
                  class="h-2 w-2 rounded-full bg-white/30 transition-all data-[active='true']:w-6 data-[active='true']:bg-red-500"
                  data-scorus-app-dot={index}
                  data-active={index === 0 ? 'true' : 'false'}
                  aria-label={`Ir a la diapositiva ${index + 1}`}
                ></button>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section - 3 Packs -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Elige Tu Camino Y <span class="text-red-600">Transforma</span><br />
            Tu Cuerpo Y Mente <span class="text-red-600">Ahora</span>
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          {Object.values(t.pricing.plans).map((plan: any) => {
            if (plan.popular) {
              return (
                <div class="group relative overflow-hidden rounded-lg bg-red-600 text-white shadow-2xl shadow-red-600/50 transition-all duration-300 hover:-translate-y-2 hover:scale-105">
                  <div class="p-8 text-center">
                    {/* Badge */}
                    <div class="mb-6">
                      <span class="inline-block rounded-full bg-white px-4 py-2 text-xs font-black uppercase tracking-wider text-red-600">
                        {plan.badge}
                      </span>
                    </div>
                    
                    <h3 class="mb-2 text-2xl font-black uppercase tracking-tight">{plan.name}</h3>
                    
                    {/* Price */}
                    <div class="mb-8">
                      <span class="text-5xl font-black text-white">{plan.price}</span>
                      <span class="text-lg text-white/80">{plan.currency}{plan.duration}</span>
                      <p class="mt-2 text-xs font-semibold uppercase tracking-wide text-white/70">
                        *precio total {plan.total_price}€
                      </p>
                    </div>

                    {/* Features */}
                    <ul class="mb-8 space-y-3 text-left">
                      {plan.features.map((feature: string) => (
                        <li class="flex items-start text-sm text-white/90">
                          <svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          <span class={feature.startsWith('Todo lo del') ? 'font-bold' : ''}>{feature}</span>
                        </li>
                      ))}
                    </ul>

                    <div class="[&>a]:!bg-black [&>a]:!text-white [&>a]:hover:!bg-white [&>a]:hover:!text-black">
                      <ButtonPrimary 
                        href={`/${currentLang}/contacto`}
                        text={plan.cta} 
                        icon="zap"
                        variant="default"
                        size="md"
                      />
                    </div>
                  </div>
                </div>
              );
            } else {
              return (
                <div class="group relative overflow-hidden rounded-lg bg-white text-black shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-red-600/50">
                  {/* Hover Border */}
                  <div class="absolute inset-0 rounded-lg border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100 z-0 pointer-events-none"></div>
                  <div class="p-8 text-center relative z-10">
                    {/* Badge */}
                    <div class="mb-6">
                      <span class="inline-block rounded-full bg-red-600 px-4 py-2 text-xs font-black uppercase tracking-wider text-white">
                        {plan.badge}
                      </span>
                    </div>
                    
                    <h3 class="mb-2 text-2xl font-black uppercase tracking-tight">{plan.name}</h3>
                    
                    {/* Price */}
                    <div class="mb-8">
                      <span class="text-5xl font-black text-red-600">{plan.price}</span>
                      <span class="text-lg text-gray-600">{plan.currency}{plan.duration}</span>
                      <p class="mt-2 text-xs font-semibold uppercase tracking-wide text-gray-500">
                        *precio total {plan.total_price}€
                      </p>
                    </div>

                    {/* Features */}
                    <ul class="mb-8 space-y-3 text-left">
                      {plan.features.map((feature: string) => (
                        <li class="flex items-start text-sm text-gray-700">
                          <svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          <span class={feature.startsWith('Todo lo del') ? 'font-bold' : ''}>{feature}</span>
                        </li>
                      ))}
                    </ul>

                    <ButtonSecondary 
                      href={`/${currentLang}/contacto`}
                      text={plan.cta} 
                      icon="arrow"
                      variant="outline-dark"
                      size="md"
                    />
                  </div>
                </div>
              );
            }
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final Section -->
  <section class="bg-black py-20 sm:py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="mb-4 sm:mb-6 text-4xl sm:text-5xl font-black uppercase tracking-tighter md:text-6xl">
          ¿Tienes <span class="text-red-600">Dudas</span>?
        </h2>
        <p class="mb-6 sm:mb-8 text-base sm:text-xl text-gray-300">
          Llámanos o visítanos en nuestro gimnasio en Alicante
        </p>

        <!-- Contact Info -->
        <div class="mb-8 sm:mb-12 flex flex-col items-center justify-center gap-4 sm:gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold">+34 673 97 52 52</span>
          </a>

          <a href="https://maps.google.com/?q=Av.+Conrado+Albaladejo+31+Alicante" target="_blank" rel="noopener" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
