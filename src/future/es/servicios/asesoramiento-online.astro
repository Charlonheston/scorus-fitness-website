<script>
  const tabsRoot = document.querySelector('[data-scorus-app-tabs]');
  const contentBox = document.querySelector('[data-scorus-app-content]');
  const slides = document.querySelectorAll('[data-scorus-app-slide]');
  const dots = document.querySelectorAll('[data-scorus-app-dot]');

  const slideContent = [
    {
      title: 'Dashboard principal',
      description: 'Vista general de tu progreso, métricas y actividad en tiempo real.',
      bullets: ['Evolución de progreso', 'Métricas en tiempo real', 'Resumen de actividad']
    },
    {
      title: 'Planificación personalizada',
      description: 'Todas tus rutinas y bloques de trabajo organizados por fases y objetivos.',
      bullets: ['Calendario de entrenamientos', 'Bloques por fases del Método Scorus', 'Ajustes automáticos según tu evolución']
    },
    {
      title: 'Actividad física',
      description: 'Controla tu carga de entrenamiento y tu volumen de trabajo semana a semana.',
      bullets: ['Registro de sesiones completadas', 'Seguimiento de series y repeticiones', 'Histórico de rendimiento']
    },
    {
      title: 'Nutrición a medida',
      description: 'Accede a tu plan nutricional, recetas y cambios según tu progreso.',
      bullets: ['Plan nutricional estructurado', 'Recetas y ejemplos de menús', 'Ajustes según tus métricas y feedback']
    },
    {
      title: 'Chat directo',
      description: 'Habla conmigo desde la app para resolver dudas sin perder contexto.',
      bullets: ['Mensajería directa con Bernat', 'Notas de voz y vídeos', 'Histórico de conversaciones siempre accesible']
    },
    {
      title: 'Evolución y métricas',
      description: 'Visualiza cómo cambian tus medidas, fotos y marcas con el tiempo.',
      bullets: ['Gráficas de peso y medidas', 'Comparativas de fotos de progreso', 'Resumen de hitos y logros']
    }
  ];

  function renderContent(index: number) {
    if (!contentBox) return;
    const data = slideContent[index];
    if (!data) return;

    contentBox.innerHTML = `
      <h3 class="text-lg sm:text-xl font-bold text-white">
        ${data.title}
      </h3>
      <p class="mt-2 text-sm sm:text-base text-gray-300">
        ${data.description}
      </p>
      <ul class="mt-4 space-y-2 text-sm sm:text-base text-gray-200">
        ${data.bullets
          .map(
            (item) => `
          <li class="flex items-start gap-2">
            <span class="mt-1 h-1.5 w-1.5 rounded-full bg-red-500"></span>
            <span>${item}</span>
          </li>
        `
          )
          .join('')}
      </ul>
    `;
  }

  function setActive(index: number) {
    // Tabs
    if (tabsRoot) {
      const tabs = tabsRoot.querySelectorAll('[data-tab]');
      tabs.forEach((tab) => {
        const isActive = Number(tab.getAttribute('data-tab')) === index;
        tab.setAttribute('data-active', isActive ? 'true' : 'false');
        tab.setAttribute('aria-selected', isActive ? 'true' : 'false');
      });
    }

    // Slides
    slides.forEach((slide, i) => {
      const isActive = i === index;
      slide.classList.toggle('hidden', !isActive);
      slide.setAttribute('data-active', isActive ? 'true' : 'false');
    });

    // Dots
    dots.forEach((dot, i) => {
      const isActive = i === index;
      dot.setAttribute('data-active', isActive ? 'true' : 'false');
    });

    // Text content
    renderContent(index);
  }

  if (tabsRoot && slides.length && dots.length) {
    tabsRoot.addEventListener('click', (event) => {
      const target = event.target;
      if (!(target instanceof HTMLElement)) return;
      const tab = target.closest('[data-tab]');
      if (!tab) return;
      const index = Number(tab.getAttribute('data-tab'));
      if (Number.isNaN(index)) return;
      setActive(index);
    });

    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const idx = Number(dot.getAttribute('data-scorus-app-dot'));
        if (Number.isNaN(idx)) return;
        setActive(idx);

        if (tabsRoot) {
          const targetTab = tabsRoot.querySelector(`[data-tab="${idx}"]`) as HTMLButtonElement | null;
          targetTab?.focus();
        }
      });
    });
  }
</script>
