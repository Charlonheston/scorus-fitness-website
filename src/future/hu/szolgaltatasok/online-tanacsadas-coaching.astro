---
/**
 * Online Tanácsadás és Coaching - Prémium Dizájn 2025
 * Teljes oldal az összes felújított modullal a régi oldalról
 */

import Layout from '@layouts/Layout.astro';
import ServiceDetailHeader from '@components/sections/ServiceDetailHeader.astro';
import ButtonPrimary from '@components/ui/ButtonPrimary.astro';
import ButtonSecondary from '@components/ui/ButtonSecondary.astro';
import translations from '../../../../public/locales/hu/services.json';
import FAQs from '@components/faq/FAQs.astro';
import FAQSchema from '@components/faq/FAQSchema.astro';
import { faqsAsesoramientoOnlineHU } from '@data/faqs-hu';
import { getOfferSchema } from '@lib/schema';

const t = translations.online_counseling;
const currentLang = 'hu';

// Offer Schema para Dieta Personalizada
const offerSchema = getOfferSchema({
  name: 'Személyre Szabott Étrend',
  price: '100',
  priceCurrency: 'EUR',
  description: 'Teljesen személyre szabott táplálkozási terv, amelyet Bernat Scorus tervezett az Ön céljaihoz, anyagcseréjéhez és életmódjához igazítva.',
  url: 'https://scorusfitness.com/hu/szolgaltatasok/online-tanacsadas-coaching',
  availability: 'https://schema.org/InStock',
});
---

<Layout
  title={t.meta.title}
  description={t.meta.description}
>
  <!-- Header Section -->
  <ServiceDetailHeader
    backLink={{
      href: `/${currentLang}/szolgaltatasok`,
      text: translations.back_to_services
    }}
    title={t.title}
    subtitle={t.subtitle}
    description={t.hero_description}
    tagline={t.hero_tagline}
    backgroundImage="/images/services/online-coaching-hero.jpg"
  />

  <!-- Harbiz Story Section - White Background -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-5xl px-4">
        <div class="mb-12 sm:mb-14 text-center">
          <span class="inline-flex items-center justify-center rounded-full bg-red-600/10 px-6 py-2 text-xs font-semibold uppercase tracking-[0.4em] text-red-600">
            {t.hero_label}
          </span>
          <h2 class="mt-6 text-3xl sm:text-4xl font-extrabold uppercase tracking-tight text-balance text-black md:text-5xl">
            {t.story.title}
          </h2>
          <p class="mt-4 text-base sm:text-lg text-gray-700">
            {t.hero_description}
          </p>
        </div>

        <div class="grid gap-8 lg:grid-cols-2">
          <div class="space-y-6 text-base sm:text-lg leading-relaxed text-gray-700">
            <p class="text-lg sm:text-xl font-semibold text-black" set:html={t.story.intro}></p>
            <p set:html={t.story.transformation}></p>
            <p set:html={t.story.family}></p>
          </div>

          <div class="space-y-6 rounded-3xl bg-gray-50 p-6 sm:p-8 shadow-lg">
            <p class="text-lg sm:text-xl font-semibold text-black" set:html={t.story.results}></p>
            <div class="h-px w-full bg-gray-300"></div>
            <p class="text-sm uppercase tracking-[0.3em] text-red-600">
              {t.story.cta}
            </p>
            <!-- CTA Button -->
            <div class="mt-6">
              <ButtonPrimary
                href={`/${currentLang}/kapcsolat`}
                text="Kérje hozzáférését"
                icon="arrow"
                size="lg"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section - With Harbiz Background -->
  <section class="relative isolate overflow-hidden py-16 sm:py-24 text-white">
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/images/hero/harbiz.webp');"
    ></div>
    <div class="absolute inset-0 bg-black/65"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/50 to-red-900/30 mix-blend-multiply"></div>

    <div class="container relative z-10">
      <div class="mx-auto max-w-6xl px-4">
        <div class="mb-12 sm:mb-16 text-center">
          <h2 class="mb-4 text-3xl sm:text-4xl font-black uppercase tracking-tighter text-white md:text-5xl">
            {t.benefits.title}
          </h2>
        </div>

        <div class="grid gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-3">
          {t.benefits.items.map((item) => (
            <div class="group flex flex-col items-center rounded-2xl bg-white/10 backdrop-blur-sm p-6 sm:p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-2 hover:bg-white/20 hover:shadow-2xl">
              <div class="mb-4 flex h-16 w-16 sm:h-20 sm:w-20 items-center justify-center rounded-full bg-red-600 transition-transform group-hover:scale-110">
                <svg class="h-8 w-8 sm:h-10 sm:w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="mb-3 text-lg sm:text-xl font-black uppercase text-white">{item.title}</h3>
              <p class="text-sm sm:text-base text-gray-100/90 leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section - 3 Packs -->
  <section class="bg-white py-16 sm:py-24">
    <div class="container">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-black uppercase tracking-tighter text-black md:text-5xl">
            Válaszd Ki Az Utad És <span class="text-red-600">Alakítsd Át</span><br />
            Tested És Elméd <span class="text-red-600">Most</span>
          </h2>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          {Object.values(t.pricing.plans).map((plan: any) => {
            if (plan.popular) {
              return (
                <div class="group relative overflow-hidden rounded-lg bg-red-600 text-white shadow-2xl shadow-red-600/50 transition-all duration-300 hover:-translate-y-2 hover:scale-105">
                  <div class="p-8 text-center">
                    {/* Badge */}
                    <div class="mb-6">
                      <span class="inline-block rounded-full bg-white px-4 py-2 text-xs font-black uppercase tracking-wider text-red-600">
                        {plan.badge}
                      </span>
                    </div>
                    
                    <h3 class="mb-2 text-2xl font-black uppercase tracking-tight">{plan.name}</h3>
                    
                    {/* Price */}
                    <div class="mb-8">
                      <span class="text-5xl font-black text-white">{plan.price}</span>
                      <span class="text-lg text-white/80">{plan.currency}{plan.duration}</span>
                      <p class="mt-2 text-xs font-semibold uppercase tracking-wide text-white/70">
                        *teljes ár {plan.total_price}€
                      </p>
                    </div>

                    {/* Features */}
                    <ul class="mb-8 space-y-3 text-left">
                      {plan.features.map((feature: string) => (
                        <li class="flex items-start text-sm text-white/90">
                          <svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          <span class={feature.startsWith('Minden, ami a') ? 'font-bold' : ''}>{feature}</span>
                        </li>
                      ))}
                    </ul>

                    <div class="[&>a]:!bg-black [&>a]:!text-white [&>a]:hover:!bg-white [&>a]:hover:!text-black">
                      <ButtonPrimary 
                        href={`/${currentLang}/kapcsolat`}
                        text={plan.cta} 
                        icon="zap"
                        variant="default"
                        size="md"
                      />
                    </div>
                  </div>
                </div>
              );
            } else {
              return (
                <div class="group relative overflow-hidden rounded-lg bg-white text-black shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-red-600/50">
                  {/* Hover Border */}
                  <div class="absolute inset-0 rounded-lg border-2 border-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100 z-0 pointer-events-none"></div>
                  <div class="p-8 text-center relative z-10">
                    {/* Badge */}
                    <div class="mb-6">
                      <span class="inline-block rounded-full bg-red-600 px-4 py-2 text-xs font-black uppercase tracking-wider text-white">
                        {plan.badge}
                      </span>
                    </div>
                    
                    <h3 class="mb-2 text-2xl font-black uppercase tracking-tight">{plan.name}</h3>
                    
                    {/* Price */}
                    <div class="mb-8">
                      <span class="text-5xl font-black text-red-600">{plan.price}</span>
                      <span class="text-lg text-gray-600">{plan.currency}{plan.duration}</span>
                      <p class="mt-2 text-xs font-semibold uppercase tracking-wide text-gray-500">
                        *teljes ár {plan.total_price}€
                      </p>
                    </div>

                    {/* Features */}
                    <ul class="mb-8 space-y-3 text-left">
                      {plan.features.map((feature: string) => (
                        <li class="flex items-start text-sm text-gray-700">
                          <svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          <span class={feature.startsWith('Minden, ami a') ? 'font-bold' : ''}>{feature}</span>
                        </li>
                      ))}
                    </ul>

                    <ButtonSecondary 
                      href={`/${currentLang}/kapcsolat`}
                      text={plan.cta} 
                      icon="arrow"
                      variant="outline-dark"
                      size="md"
                    />
                  </div>
                </div>
              );
            }
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final Section -->
  <section class="bg-black py-20 sm:py-32 text-white">
    <div class="container">
      <div class="mx-auto max-w-4xl text-center px-4">
        <h2 class="mb-4 sm:mb-6 text-4xl sm:text-5xl font-black uppercase tracking-tighter md:text-6xl">
          Van <span class="text-red-600">Kérdése</span>?
        </h2>
        <p class="mb-6 sm:mb-8 text-base sm:text-xl text-gray-300">
          Hívjon minket vagy látogasson el alicantei edzőterembünkbe
        </p>

        <!-- Contact Info -->
        <div class="mb-8 sm:mb-12 flex flex-col items-center justify-center gap-4 sm:gap-6 md:flex-row md:gap-12">
          <a href="tel:+34673975252" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="font-bold">+34 673 97 52 52</span>
          </a>

          <a href="https://maps.google.com/?q=Av.+Conrado+Albaladejo+31+Alicante" target="_blank" rel="noopener" class="group flex items-center gap-2 sm:gap-3 text-base sm:text-lg transition-colors hover:text-red-600">
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="font-bold">Alicante, Spanyolország</span>
          </a>
        </div>

        <div class="mb-8 sm:mb-12">
          <h3 class="mb-4 text-xs sm:text-sm font-bold uppercase tracking-widest text-gray-400">Nyitvatartás</h3>
          <p class="text-base sm:text-lg">
            <span class="font-bold text-white">Hétfő - Péntek</span> | 07:00 - 10:00
          </p>
          <p class="mt-2 text-base sm:text-lg">
            <span class="font-bold text-white">Vasárnap:</span> Zárva
          </p>
        </div>

        <div class="flex flex-col items-center justify-center gap-4 sm:gap-6">
          <ButtonPrimary 
            href={`/${currentLang}/kapcsolat`}
            text="Lépjen Kapcsolatba Velünk"
            icon="zap"
            size="xl"
            variant="glow"
          />
          
          <a
            href={`/${currentLang}/szolgaltatasok`}
            class="inline-flex items-center text-xs sm:text-sm font-bold uppercase tracking-wider text-white transition-all hover:text-red-600"
          >
            Összes Szolgáltatás Megtekintése
            <svg class="ml-2 h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <FAQs 
    faqs={faqsAsesoramientoOnlineHU}
    title="Gyakran Ismételt Kérdések az Online Tanácsadás és Coaching-ról"
    subtitle="Minden, amit tudnia kell a teljes online coaching programunkról"
  />

  <!-- FAQPage Schema for SEO -->
  <FAQSchema faqs={faqsAsesoramientoOnlineHU} />

  <!-- Offer Schema for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(offerSchema)} />

</Layout>
