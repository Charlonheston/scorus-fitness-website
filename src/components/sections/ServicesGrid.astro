---
/**
 * ServicesGrid - Grid de servicios principales (4 cards)
 * Componente reutilizable para todos los idiomas
 * 
 * Props:
 * - tagline: string - Etiqueta superior
 * - title: string - Título principal
 * - titleHighlight: string - Parte resaltada del título
 * - services: Array<{ iconType, title, description, cta, href }>
 */

interface Service {
  iconType: 'dumbbell' | 'apple' | 'clipboard' | 'monitor';
  title: string;
  description: string;
  cta: string;
  href: string;
}

interface Props {
  tagline: string;
  title: string;
  titleHighlight: string;
  services: Service[];
}

const { tagline, title, titleHighlight, services } = Astro.props;
---

<section class="bg-white py-24 md:py-32">
  <div class="container">
    <div class="mb-16 text-center">
      <div class="mb-4 inline-block border-l-4 border-red-600 pl-4">
        <p class="text-sm font-bold uppercase tracking-widest text-red-600">
          {tagline}
        </p>
      </div>
      <h2 class="text-4xl font-black uppercase tracking-tight text-black md:text-5xl">
        {title} <span class="text-red-600">{titleHighlight}</span>
      </h2>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {services.map((service) => (
        <a
          href={service.href}
          class="group relative overflow-hidden bg-white p-6 sm:p-8 shadow-lg transition-all duration-300 hover:bg-black hover:shadow-2xl hover:shadow-red-600/30 hover:-translate-y-1"
        >
          <div class="absolute right-0 top-0 h-16 w-16 bg-red-600 opacity-0 transition-opacity duration-300 group-hover:opacity-20" style="clip-path: polygon(100% 0, 0 0, 100% 100%)"></div>
          
          <div class="relative z-10">
            <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-gray-100 transition-all duration-300 group-hover:scale-110 group-hover:bg-red-600">
              {service.iconType === 'dumbbell' && (
                <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 11l2 2m10-2l-2 2"/>
                </svg>
              )}
              {service.iconType === 'apple' && (
                <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                </svg>
              )}
              {service.iconType === 'clipboard' && (
                <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                </svg>
              )}
              {service.iconType === 'monitor' && (
                <svg class="h-10 w-10 text-black transition-colors duration-300 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              )}
            </div>
            
            <h3 class="mb-3 text-lg sm:text-xl font-black uppercase tracking-tight text-black transition-colors group-hover:text-white">
              {service.title}
            </h3>
            <p class="mb-4 text-sm leading-relaxed text-gray-600 transition-colors group-hover:text-gray-200">
              {service.description}
            </p>
            
            <div class="inline-flex items-center gap-2 text-xs sm:text-sm font-bold uppercase tracking-wider text-red-600 transition-colors group-hover:text-white">
              {service.cta}
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

