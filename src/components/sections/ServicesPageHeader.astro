---
/**
 * ServicesPageHeader - Cabecera para página de servicios index
 * Componente reutilizable con estética black/white/red
 * 
 * Props:
 * - tagline: string - Etiqueta superior
 * - title: string - Título principal
 * - titleHighlight: string - Parte resaltada en rojo
 * - subtitle: string - Subtítulo/descripción
 */

interface Props {
  tagline: string;
  title: string;
  titleHighlight: string;
  subtitle: string;
}

const { tagline, title, titleHighlight, subtitle } = Astro.props;
---

<section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden bg-black">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <!-- Red Accent Lines -->
  <div class="absolute left-0 top-1/3 h-1 w-48 bg-gradient-to-r from-red-600 to-transparent"></div>
  <div class="absolute right-0 bottom-1/3 h-1 w-48 bg-gradient-to-l from-red-600 to-transparent"></div>

  <!-- Content -->
  <div class="container relative z-10 py-32 text-center">
    <div class="mx-auto max-w-5xl">
      <!-- Tagline -->
      <div class="mb-6 inline-block border-l-4 border-red-600 pl-4">
        <p class="text-sm font-bold uppercase tracking-widest text-red-600">
          {tagline}
        </p>
      </div>

      <!-- Title (Mobile First) -->
      <h1 class="mb-8 text-4xl font-black uppercase leading-[1.05] tracking-tighter text-white sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl">
        {title}<br />
        <span class="text-red-600">{titleHighlight}</span>
      </h1>

      <!-- Subtitle (Mobile First) -->
      <p class="mx-auto max-w-3xl text-base leading-relaxed text-gray-300 sm:text-lg md:text-xl lg:text-2xl">
        {subtitle}
      </p>

      <!-- Decorative Icon Grid (representando servicios) -->
      <div class="mt-16 flex justify-center gap-6 text-4xl opacity-50">
        <div class="transition-all duration-300 hover:scale-110 hover:opacity-100">
          <svg class="h-12 w-12 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <div class="transition-all duration-300 hover:scale-110 hover:opacity-100">
          <svg class="h-12 w-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="transition-all duration-300 hover:scale-110 hover:opacity-100">
          <svg class="h-12 w-12 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
        </div>
        <div class="transition-all duration-300 hover:scale-110 hover:opacity-100">
          <svg class="h-12 w-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>

