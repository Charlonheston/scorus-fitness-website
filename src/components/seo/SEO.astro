---
/**
 * Componente SEO para metadatos de página
 * Incluye Open Graph, Twitter Cards y metadatos básicos
 */

import { SITE_CONFIG, DEFAULT_SEO } from '@lib/constants';
import TwitterCards from './TwitterCards.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  nofollow?: boolean;
  ogType?: 'website' | 'article' | 'profile';
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
  keywords?: string[];
}

const {
  title = DEFAULT_SEO.title,
  description = DEFAULT_SEO.description,
  image = SITE_CONFIG.ogImage,
  canonical,
  noindex = false,
  nofollow = false,
  ogType = 'website',
  publishedTime,
  modifiedTime,
  author,
  keywords = DEFAULT_SEO.keywords,
} = Astro.props;

const canonicalURL = canonical ? new URL(canonical, SITE_CONFIG.url) : new URL(Astro.url.pathname, SITE_CONFIG.url);
const imageURL = new URL(image, SITE_CONFIG.url);

// Detectar el idioma actual desde la URL
const pathname = Astro.url.pathname;
const localeMatch = pathname.match(/^\/(es|en|fr|de|hu)\//);
const currentLocale = localeMatch ? localeMatch[1] : 'es';

// Mapeo de locale a formato Open Graph
const ogLocaleMap: Record<string, string> = {
  es: 'es_ES',
  en: 'en_US',
  fr: 'fr_FR',
  de: 'de_DE',
  hu: 'hu_HU',
};
const ogLocale = ogLocaleMap[currentLocale] || 'es_ES';

// Locales alternativos para og:locale:alternate
const alternateLocales = Object.entries(ogLocaleMap)
  .filter(([key]) => key !== currentLocale)
  .map(([, value]) => value);

// Construir robots meta
const robotsContent = [];
if (noindex) robotsContent.push('noindex');
if (nofollow) robotsContent.push('nofollow');
const robotsMeta = robotsContent.length > 0 ? robotsContent.join(', ') : 'index, follow';
---

<!-- SEO Básico -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(', ')} />
<link rel="canonical" href={canonicalURL} />
<meta name="robots" content={robotsMeta} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta property="og:site_name" content={SITE_CONFIG.name} />
<meta property="og:locale" content={ogLocale} />
{alternateLocales.map((altLocale) => (
  <meta property="og:locale:alternate" content={altLocale} />
))}

{ogType === 'article' && publishedTime && (
  <meta property="article:published_time" content={publishedTime.toISOString()} />
)}
{ogType === 'article' && modifiedTime && (
  <meta property="article:modified_time" content={modifiedTime.toISOString()} />
)}
{ogType === 'article' && author && (
  <meta property="article:author" content={author} />
)}

<!-- Twitter Card (usando componente mejorado) -->
<TwitterCards
  title={title}
  description={description}
  image={imageURL.toString()}
/>

<!-- Adicionales -->
<meta name="author" content={author || 'Scorus Fitness'} />
<meta name="generator" content={Astro.generator} />

