---
/**
 * Footer del sitio - Estilo Minimalista
 * Incluye información de contacto, links rápidos y redes sociales - Multiidioma
 */

import { CONTACT_INFO, SOCIAL_LINKS } from '@lib/constants';

const currentYear = new Date().getFullYear();

// Detectar idioma desde la URL
const currentPath = Astro.url.pathname;
const pathParts = currentPath.split('/').filter(Boolean);
const potentialLang = pathParts[0];
const currentLang = ['en', 'fr', 'de'].includes(potentialLang) ? potentialLang : 'es';

// Configuración de enlaces del footer por idioma
const footerLinksConfig = {
  es: {
    servicesTitle: 'Servicios',
    academyTitle: 'Academia',
    infoTitle: 'Información',
    servicios: [
      { name: 'Talleres', href: '/es/servicios/talleres' },
      { name: 'Consultoría Online', href: '/es/servicios/consultoria-online' },
      { name: 'Entrenamiento Personal', href: '/es/servicios/entrenamiento-personal' },
    ],
    academia: [
      { name: 'Scorus Campus', href: '/es/academia/scorus-campus' },
      { name: 'RE-BORN', href: '/es/academia/re-born' },
    ],
    info: [
      { name: 'Biografía', href: '/es/biografia' },
      { name: 'Blog', href: '/es/blog' },
      { name: 'Contacto', href: '/es/contacto' },
    ],
  },
  en: {
    servicesTitle: 'Services',
    academyTitle: 'Academy',
    infoTitle: 'Information',
    servicios: [
      { name: 'Workshops', href: '/en/services/workshops' },
      { name: 'Online Consulting', href: '/en/services/online-consulting' },
      { name: 'Personal Training', href: '/en/services/personal-training' },
    ],
    academia: [
      { name: 'Scorus Campus', href: '/en/academy/scorus-campus' },
      { name: 'RE-BORN', href: '/en/academy/re-born' },
    ],
    info: [
      { name: 'Biography', href: '/en/biography' },
      { name: 'Blog', href: '/en/blog' },
      { name: 'Contact', href: '/en/contact' },
    ],
  },
  fr: {
    servicesTitle: 'Services',
    academyTitle: 'Académie',
    infoTitle: 'Information',
    servicios: [
      { name: 'Ateliers', href: '/fr/services/ateliers' },
      { name: 'Consultation En Ligne', href: '/fr/services/consultation-en-ligne' },
      { name: 'Entraînement Personnel', href: '/fr/services/entrainement-personnel' },
    ],
    academia: [
      { name: 'Scorus Campus', href: '/fr/academie/scorus-campus' },
      { name: 'RE-BORN', href: '/fr/academie/re-born' },
    ],
    info: [
      { name: 'Biographie', href: '/fr/biographie' },
      { name: 'Blog', href: '/fr/blog' },
      { name: 'Contact', href: '/fr/contact' },
    ],
  },
  de: {
    servicesTitle: 'Dienstleistungen',
    academyTitle: 'Akademie',
    infoTitle: 'Information',
    servicios: [
      { name: 'Workshops', href: '/de/dienstleistungen/workshops' },
      { name: 'Online-Beratung', href: '/de/dienstleistungen/online-beratung' },
      { name: 'Personal Training', href: '/de/dienstleistungen/personliches-training' },
    ],
    academia: [
      { name: 'Scorus Campus', href: '/de/akademie/scorus-campus' },
      { name: 'RE-BORN', href: '/de/akademie/re-born' },
    ],
    info: [
      { name: 'Biografie', href: '/de/biografie' },
      { name: 'Blog', href: '/de/blog' },
      { name: 'Kontakt', href: '/de/kontakt' },
    ],
  }
};

const footerLinks = footerLinksConfig[currentLang] || footerLinksConfig.es;
---

<footer class="relative bg-black text-white">
  <!-- Red accent top border -->
  <div class="absolute left-0 top-0 h-1 w-full bg-gradient-to-r from-transparent via-red-600 to-transparent"></div>
  
  <div class="container py-24">
    <div class="grid grid-cols-1 gap-16 md:grid-cols-2 lg:grid-cols-4">
      <!-- Información de Contacto -->
      <div class="space-y-6">
        <h3 class="text-3xl font-black uppercase tracking-tight">
          SCORUS<span class="text-red-600">.</span>
        </h3>
        <div class="space-y-4 text-sm leading-relaxed text-gray-400">
          <p>{CONTACT_INFO.address}</p>
          <p>
            <a href={`tel:${CONTACT_INFO.phone}`} class="group inline-flex items-center gap-2 transition-colors hover:text-red-600">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {CONTACT_INFO.phone}
            </a>
          </p>
          <p>
            <a href={`mailto:${CONTACT_INFO.email}`} class="group inline-flex items-center gap-2 transition-colors hover:text-red-600">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {CONTACT_INFO.email}
            </a>
          </p>
          <div class="pt-2 border-t border-gray-800">
            <p class="font-bold text-white">{CONTACT_INFO.schedule.weekdays}</p>
            <p class="text-gray-500">{CONTACT_INFO.schedule.hours}</p>
          </div>
        </div>
      </div>

      <!-- Servicios -->
      <div>
        <h3 class="mb-6 border-l-4 border-red-600 pl-3 text-xs font-bold uppercase tracking-widest text-red-600">{footerLinks.servicesTitle}</h3>
        <ul class="space-y-3">
          {footerLinks.servicios.map((link) => (
            <li>
              <a href={link.href} class="group inline-flex items-center text-sm font-semibold transition-colors hover:text-red-600">
                <span class="h-1 w-1 mr-2 bg-gray-600 transition-all group-hover:w-3 group-hover:bg-red-600"></span>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Academia -->
      <div>
        <h3 class="mb-6 border-l-4 border-red-600 pl-3 text-xs font-bold uppercase tracking-widest text-red-600">{footerLinks.academyTitle}</h3>
        <ul class="space-y-3">
          {footerLinks.academia.map((link) => (
            <li>
              <a href={link.href} class="group inline-flex items-center text-sm font-semibold transition-colors hover:text-red-600">
                <span class="h-1 w-1 mr-2 bg-gray-600 transition-all group-hover:w-3 group-hover:bg-red-600"></span>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Información -->
      <div>
        <h3 class="mb-6 border-l-4 border-red-600 pl-3 text-xs font-bold uppercase tracking-widest text-red-600">{footerLinks.infoTitle}</h3>
        <ul class="space-y-3">
          {footerLinks.info.map((link) => (
            <li>
              <a href={link.href} class="group inline-flex items-center text-sm font-semibold transition-colors hover:text-red-600">
                <span class="h-1 w-1 mr-2 bg-gray-600 transition-all group-hover:w-3 group-hover:bg-red-600"></span>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Redes Sociales y Copyright -->
    <div class="mt-20 border-t border-gray-800 pt-10">
      <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
        <p class="text-xs font-bold uppercase tracking-widest text-gray-600">
          &copy; {currentYear} SCORUS FITNESS <span class="text-red-600">·</span> All Rights Reserved
        </p>
        
        <!-- Redes Sociales con efectos hover -->
        <div class="flex gap-4">
          <a
            href={SOCIAL_LINKS.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex h-10 w-10 items-center justify-center border-2 border-gray-700 transition-all duration-300 hover:border-red-600 hover:scale-110"
            aria-label="Instagram"
          >
            <svg class="h-5 w-5 text-gray-400 transition-colors group-hover:text-red-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a
            href={SOCIAL_LINKS.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex h-10 w-10 items-center justify-center border-2 border-gray-700 transition-all duration-300 hover:border-red-600 hover:scale-110"
            aria-label="YouTube"
          >
            <svg class="h-5 w-5 text-gray-400 transition-colors group-hover:text-red-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
