# Habilitar compresión gzip
<IfModule mod_deflate.c>
  AddType application/javascript js
  AddEncoding gzip .js
  AddEncoding gzip .css
  AddEncoding gzip .html
  AddEncoding gzip .xml
  AddEncoding gzip .svg
  AddEncoding gzip .ttf
  AddEncoding gzip .otf
  AddEncoding gzip .eot
  
  <FilesMatch "\.(js|css|html|xml|svg|ttf|otf|eot)$">
    SetOutputFilter DEFLATE
  </FilesMatch>
  
  # Imágenes - no comprimir (ya están optimizadas)
  <FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    SetEnv no-gzip
  </FilesMatch>
</IfModule>

# Cache policy para imágenes (1 año)
<FilesMatch "\.(?:jpg|jpeg|png|gif|webp|svg)$">
  Header set Cache-Control "max-age=31536000, public, immutable"
</FilesMatch>

# Cache policy para CSS/JS (30 días)
<FilesMatch "\.(?:css|js)$">
  Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# Cache policy para HTML (1 hora)
<FilesMatch "\.(?:html|xml)$">
  Header set Cache-Control "max-age=3600, public"
</FilesMatch>

# Habilitar compresión en Vercel (compatible)
<IfModule mod_headers.c>
  # Preload fonts
  <FilesMatch "\.(woff|woff2)$">
    Header set Cache-Control "max-age=31536000, public, immutable"
    Header set Content-Type "font/woff2"
  </FilesMatch>
</IfModule>
