{
  "framework": "astro",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/images/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Vary",
          "value": "Accept"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap-index.xml",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "^/$",
      "destination": "/es"
    },
    {
      "source": "/images/:path(.+)\\.(jpg|jpeg|png)$",
      "destination": "/images/:path.webp",
      "has": [
        {
          "type": "header",
          "key": "Accept",
          "value": "(?=.*webp).*"
        }
      ]
    }
  ]
}
